<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
          <h1>Edit Employee</h1>
    </div>
    <div class="col-sm-2">
        <% if @employee.persisted? %>
          <%= link_to "Cancel", @employee, class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to "Cancel", employees_path, class: "float-end btn btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'form', employee: @employee %>
