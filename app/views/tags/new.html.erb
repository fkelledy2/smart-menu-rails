<div class="page-header">
  <div class="row">
    <div class="col-10">
          <h1><%= t('.title') %></h1>
    </div>
    <div class="col-2">
        <% if @tag.persisted? %>
          <%= link_to t('.cancel'), @tag, class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to t('.cancel'), restaurant_tags_path(@tag.restaurant || current_user.restaurants.first), class: "float-end btn btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'form', tag: @tag %>
