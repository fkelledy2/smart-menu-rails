<%= form_with(model: tag) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :description, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div class="spacing-md"></div>
  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-10">
        <span class="float-end">
        <% if tag.persisted? %>
          <div class="btn btn-dark ">
            <%= link_to t('common.delete'), tag, method: :delete, class: "text-white text-decoration-none", data: { confirm: t('common.confirm') } %>
          </div>
        <% end %>
        <%= form.submit value: t('common.save'), class: 'btn btn-dark' %>
        </span>
    </div>
  </div>
  <% if tag.errors.any? %>
  <div class="row">
    <div class="col-2">
        <%= t('common.errors') %>
    </div>
    <div class="col-10">
      <ul>
          <% tag.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>