<style>
    .form-control:disabled {
        background-color: #fafafa;
        opacity: 1;
    }
    .disabled .ts-control {
        opacity: 1.0;
        background-color: #fafafa;
    }
    .ts-dropdown, .ts-control, .ts-control input {
        color: #000000;
        padding-left:12px;
        font-size: 16px;
        line-height: 18px;
    }
</style>
<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
        <h1><%=t('.tip')%></h1>
    </div>
    <div class="col-sm-2">
        <span class="float-end">
          <%= link_to restaurant_path(id: @tip.restaurant.id), class: 'btn btn-sm btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
          <%= link_to edit_tip_path(@tip), class: 'btn btn-sm btn-primary' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: @tip) do |form| %>
  <div class="form-group row">
    <%= form.label :percentage, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :percentage, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <%= form.hidden_field :restaurant_id%>
<% end %>
