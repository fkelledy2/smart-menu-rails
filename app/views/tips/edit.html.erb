<style>
    .form-control:disabled {
        background-color: #fafafa;
        opacity: 1;
    }
    .disabled .ts-control {
        opacity: 1.0;
        background-color: #fafafa;
    }
    .ts-dropdown, .ts-control, .ts-control input {
        color: #000000;
        padding-left:12px;
        font-size: 16px;
        line-height: 18px;
    }
</style>
<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
        <h1><%= t(".tip") %></h1>
    </div>
    <div class="col-sm-2">
        <% if @tip.persisted? %>
          <%= link_to t(".cancel"), restaurant_path(id: @tip.restaurant.id), class: "float-end btn btn-sm btn-light" %>
        <% else %>
          <%= link_to t(".cancel"), restaurant_path(id: @tip.restaurant.id), class: "float-end btn btn-sm btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'form', tip: @tip %>
