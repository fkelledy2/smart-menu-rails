<%= render 'shared/customcss' %>
<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
        <h1><%=t('.tip')%></h1>
    </div>
    <div class="col-sm-2">
      <% if @tip.persisted? %>
        <%= link_to "Cancel", edit_restaurant_path(id: @tip.restaurant.id), class: "float-end btn btn-light" %>
      <% else %>
        <% if @futureParentRestaurant %>
          <%= link_to t('.cancel'), edit_restaurant_path(id: @futureParentRestaurant.id), class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to t('.cancel'), tablesettings_path, class: "float-end btn btn-light" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= render 'form', tip: @tip %>