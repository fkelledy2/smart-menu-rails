<%#
  New Tip - 2025 Design System
  Modern form layout with consistent styling
%>

<!-- Page Header -->
<div class="container-fluid px-0 pb-4">
  <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
    <div>
      <!-- Breadcrumb -->
      <div class="text-sm text-gray-500 mb-2">
        <%= link_to @restaurant.name, edit_restaurant_path(@restaurant), class: 'text-primary' %>
        <i class="bi bi-chevron-right"></i>
        <%= link_to t('.tips', default: 'Tips'), restaurant_tips_path(@restaurant), class: 'text-primary' %>
        <i class="bi bi-chevron-right"></i>
        <%= t('.new', default: 'New') %>
      </div>

      <h1 class="text-2xl font-semibold text-gray-900 mb-1">
        <i class="bi bi-plus-circle"></i>
        <%= t('.new_tip', default: 'New Tip Option') %>
      </h1>
      <p class="text-sm text-gray-500">
        <%= t('.description', default: 'Create a new tip percentage for customers') %>
      </p>
    </div>

    <div class="d-flex gap-2">
      <%= link_to restaurant_tips_path(@restaurant),
          class: 'btn-2025 btn-2025-ghost btn-2025-md' do %>
        <i class="bi bi-x-lg"></i> <%= t('.cancel', default: 'Cancel') %>
      <% end %>
    </div>
  </div>
</div>

<!-- Form Card -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-cash-coin"></i>
    <%= t('.tip_details', default: 'Tip Details') %>
  </h2>

  <%= render 'form', tip: @tip %>
</div>

<style>
  .text-2xl {
    font-size: 1.5rem;
    line-height: 2rem;
  }

  .text-gray-900 {
    color: var(--color-gray-900);
  }

  .text-gray-500 {
    color: var(--color-gray-500);
  }

  .text-sm {
    font-size: 0.875rem;
  }
</style>
