<%= form_with(model: [@restaurant || tip.restaurant, tip]) do |form| %>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :percentage, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.text_field :percentage, class: 'form-control' %>
    </div>
  </div>
  <% if @futureParentRestaurant %>
      <%= form.hidden_field :restaurant_id, value: @futureParentRestaurant.id %>
  <% else %>
      <%= form.hidden_field :restaurant_id %>
  <% end %>
  <div class="spacing-md"></div>
  <div class="row">
    <div class="col-12">
        <span class="float-end">
        <% if tip.persisted? %>
          <div class="btn btn-dark ">
            <%= link_to t(".delete"), [tip.restaurant, tip], method: :delete, class: "text-white text-decoration-none", data: { confirm: t(".sure") } %>
          </div>
        <% end %>
        <%= form.submit value: t(".save"), class: 'btn btn-dark' %>
        </span>
    </div>
  </div>
  <% if tip.errors.any? %>
  <div class="row">
    <div class="col-3">
      <span class="float-md-end"><%= t('common.errors') %></span>
    </div>
    <div class="col-9">
      <ul>
          <% tip.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>