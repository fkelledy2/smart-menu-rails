<div class="container-fluid">
  <div class="row min-vh-100">
    <!-- Left sidebar with progress and info -->
    <div class="col-md-4 bg-primary text-white d-flex flex-column">
      <div class="p-4">
        <h2 class="mb-4">
          <i class="fas fa-utensils me-2"></i>
          Smart Menu Setup
        </h2>
        
        <!-- Progress bar -->
        <div class="mb-4">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="small">Progress</span>
            <span class="small"><%= @progress %>%</span>
          </div>
          <div class="progress" style="height: 8px;">
            <div class="progress-bar bg-success" role="progressbar" 
                 style="width: <%= @progress %>%" 
                 aria-valuenow="<%= @progress %>" 
                 aria-valuemin="0" 
                 aria-valuemax="100">
            </div>
          </div>
        </div>
        
        <!-- Step indicators -->
        <div class="steps-indicator">
          <% [
            { step: 1, title: "Account Details", icon: "fas fa-user" },
            { step: 2, title: "Restaurant Info", icon: "fas fa-store" },
            { step: 3, title: "Choose Plan", icon: "fas fa-credit-card" },
            { step: 4, title: "Create Menu", icon: "fas fa-list" },
            { step: 5, title: "All Done!", icon: "fas fa-check-circle" }
          ].each do |step_info| %>
            <div class="step-item d-flex align-items-center mb-3 <%= 'active' if @step == step_info[:step] %> <%= 'completed' if @step > step_info[:step] %>">
              <div class="step-icon me-3">
                <i class="<%= step_info[:icon] %>"></i>
              </div>
              <div class="step-content">
                <div class="step-title"><%= step_info[:title] %></div>
                <% if @step == step_info[:step] %>
                  <small class="text-light">Current step</small>
                <% elsif @step > step_info[:step] %>
                  <small class="text-success">Completed</small>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      
      <!-- Testimonial -->
      <div class="mt-auto p-4 bg-primary-dark">
        <blockquote class="blockquote">
          <p class="mb-2">"Set up our digital menu in under 5 minutes!"</p>
          <footer class="blockquote-footer text-light">
            <cite>Maria, Italian Bistro</cite>
          </footer>
        </blockquote>
      </div>
    </div>
    
    <!-- Main content area -->
    <div class="col-md-8 d-flex align-items-center">
      <div class="w-100 p-5">
        <div id="wizard-content">
          <!-- Dynamic content will be rendered here -->
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.bg-primary-dark {
  background-color: rgba(0, 0, 0, 0.1) !important;
}

.steps-indicator .step-item {
  opacity: 0.6;
  transition: opacity 0.3s ease;
}

.steps-indicator .step-item.active,
.steps-indicator .step-item.completed {
  opacity: 1;
}

.steps-indicator .step-icon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 16px;
}

.steps-indicator .step-item.active .step-icon {
  background-color: rgba(255, 255, 255, 0.3);
  box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.2);
}

.steps-indicator .step-item.completed .step-icon {
  background-color: #28a745;
}

.wizard-form {
  max-width: 500px;
}

.form-control:focus {
  border-color: #007bff;
  box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
}

.btn-wizard {
  min-width: 120px;
}

.menu-item-input {
  background-color: #f8f9fa;
  border: 1px solid #dee2e6;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 15px;
}

.menu-preview {
  background-color: #f8f9fa;
  border-radius: 8px;
  padding: 20px;
  max-height: 400px;
  overflow-y: auto;
}
</style>
