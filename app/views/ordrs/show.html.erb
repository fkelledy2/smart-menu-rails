<div class="page-header">
  <div class="row">
    <div class="col-10">
          <h1>Show Order</h1>
    </div>
    <div class="col-2">
        <span class="float-end">
          <%= link_to ordrs_path, class: 'btn btn-sm btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: @ordr) do |form| %>
  <div class="form-group row">
    <%= form.label :id, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :id, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :restaurant_id, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.collection_select :restaurant_id, Restaurant.all ,:id, :name, options = {:prompt => 'Select a Restaurant...'}, html_options = {class: "form-control" , disabled: 'disabled'}%>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :menu_id, class: 'col-2 col-form-label' %>
