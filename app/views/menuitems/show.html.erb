<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
          <h1>Show Menu Item</h1>
    </div>
    <div class="col-sm-2">
        <span class="float-end">
          <%= link_to menuitems_path, class: 'btn btn-light' do %>
            Back
          <% end %>
          <%= link_to edit_menuitem_path(@menuitem), class: 'btn btn-primary' do %>
            Edit
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: @menuitem) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control', disabled: 'disabled'  %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: 'form-control', disabled: 'disabled'  %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :image, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :image, class: 'form-control', disabled: 'disabled'  %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :status, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.select :status, options_for_select(Menuitem.statuses.keys.to_a, form.object.status), {}, class: 'form-control', disabled: 'disabled'  %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :sequence, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :sequence, class: 'form-control', disabled: 'disabled'  %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :calories, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :calories, class: 'form-control', disabled: 'disabled'  %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :price, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :price, class: 'form-control', disabled: 'disabled'  %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :allergyns, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.collection_check_boxes :allergyn_ids, Allergyn.all, :id, :name, { hide_label: true }, disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :tags, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.collection_check_boxes :tag_ids, Tag.all, :id, :name, { hide_label: true }, disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :menusection_id, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.collection_select :menusection_id, Menusection.all ,:id, :name, options = {:prompt => 'Select a Menu Section...'}, html_options = {class: "form-control", disabled: 'disabled' }%>
    </div>
  </div>
<% end %>