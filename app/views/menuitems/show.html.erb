<div class="page-header">
  <div class="row">
    <div class="col-10">
        <h1><%= t(".menuItem") %></h1>
    </div>
    <div class="col-2">
        <span class="float-end">
          <%= link_to edit_restaurant_menu_menusection_path(@menuitem.menusection.menu.restaurant, @menuitem.menusection.menu, @menuitem.menusection), class: 'btn btn-sm btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
          <%= link_to edit_restaurant_menu_menusection_menuitem_path(@menuitem.menusection.menu.restaurant, @menuitem.menusection.menu, @menuitem.menusection, @menuitem), class: 'btn btn-sm btn-dark' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: [@menuitem.menusection.menu.restaurant, @menuitem.menusection.menu, @menuitem.menusection, @menuitem]) do |form| %>
  <div class="form-group row">
    <%= form.label :menusection_id, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.collection_select :menusection_id, Menusection.all ,:id, :name, options = {:prompt => t(".selectMenuSection")}, html_options = {disabled: 'disabled' } %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :name, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :name, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :description, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_area :description, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :image, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.text_field :image, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :status, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.select :status, options_for_select(Menuitem.statuses.keys.to_a, form.object.status), {}, disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :sequence, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.text_field :sequence, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :calories, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.text_field :calories, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :price, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.text_field :price, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :preptime, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.text_field :preptime, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :allergyns, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <div class="form-control">
            <%= form.collection_check_boxes :allergyn_ids, Allergyn.all, :id, :name, { hide_label: true }, disabled: 'disabled' do |b| %>
                <div class="form-check">
                  <%= b.check_box %>
                  <label class="form-check-label">
                    <%= b.label %>
                  </label>
                </div>
            <% end %>
        </div>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :sizes, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <div class="form-control">
            <%= form.collection_check_boxes :size_ids, Size.all, :id, :name, { hide_label: true }, disabled: 'disabled' do |b| %>
                <div class="form-check">
                  <%= b.check_box %>
                  <label class="form-check-label">
                    <%= b.label %>
                  </label>
                </div>
            <% end %>
        </div>
    </div>
  </div>
<% end %>
