<%= form_with(model: menuitem) do |form| %>
  <div class="form-group row">
    <%= form.label :menusection_id, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.collection_select :menusection_id, Menusection.all ,:id, :name, options = {:prompt => t(".selectMenuSection")}%>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :image, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :image, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :status, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.select :status, options_for_select(Menuitem.statuses.keys.to_a, form.object.status), {}, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :sequence, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :sequence, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :calories, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :calories, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :price, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :price, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :preptime, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :preptime, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :allergyns, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <div class="form-control">
            <%= form.collection_check_boxes :allergyn_ids, Allergyn.all, :id, :name, { hide_label: true } do |b| %>
                <div class="form-check">
                  <%= b.check_box %>
                  <label class="form-check-label">
                    <%= b.label %>
                  </label>
                </div>
            <% end %>
        </div>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :sizes, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <div class="form-control">
            <%= form.collection_check_boxes :size_ids, Size.all, :id, :name, { hide_label: true } do |b| %>
                <div class="form-check">
                  <%= b.check_box %>
                  <label class="form-check-label">
                    <%= b.label %>
                  </label>
                </div>
            <% end %>
        </div>
    </div>
  </div>
  <div style='height:8px'></div>
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
        <span class="float-end">
        <% if menuitem.persisted? %>
          <div class="btn btn-danger ">
            <%= link_to t(".delete"), menuitem, method: :delete, class: "text-white text-decoration-none", data: { confirm: t(".sure") } %>
          </div>
        <% end %>
        <%= form.submit value: t(".save"), class: 'btn btn-primary' %>
        </span>
    </div>
  </div>
  <% if menuitem.errors.any? %>
  <div class="row">
    <div class="col-sm-2">
        <%= t(".errors") %>
    </div>
    <div class="col-sm-10">
      <ul>
          <% menuitem.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>