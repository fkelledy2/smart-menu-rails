<div class="page-header">
  <div class="row">
    <div class="col-9">
        <h2><%= t(".menuItem") %></h2>
    </div>
    <div class="col-sm-2">
        <% if @menuitem.persisted? %>
          <%= link_to t(".cancel"), @menuitem, class: "float-end btn btn-sm btn-light" %>
        <% else %>
          <%= link_to t(".cancel"), menuitems_path, class: "float-end btn btn-sm btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-11">
    <%= render 'form', menuitem: @menuitem %>
  </div>
</div>

