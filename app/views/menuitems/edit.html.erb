<%= render 'shared/customcss' %>
<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
      <h3>
        <%= link_to edit_restaurant_path(@menuitem.menusection.menu.restaurant), class: "link-dark" do %>
          <%= @menuitem.menusection.menu.restaurant.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= link_to edit_menu_path(@menuitem.menusection.menu), class: "link-dark" do %>
          <%= @menuitem.menusection.menu.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= link_to edit_menusection_path(@menuitem.menusection), class: "link-dark" do %>
          <%= @menuitem.menusection.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= @menuitem.name %>
      </h3>
    </div>
  </div>
</div>

<ul style="height:43px;overflow-y:hidden;" class="nav nav-tabs overflow-auto flex-nowrap" id="itemTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark">
      <%= link_to edit_menusection_path(@menuitem.menusection), class: "link-dark" do %>
        <strong><i class="bi bi-chevron-double-left"></i></strong>
      <% end %>
    </button>
  </li>
</ul>
<ul style="position:relative;top:-43px;left:50px;height:43px;overflow-y:hidden;width:90%;" class="nav nav-tabs overflow-auto flex-nowrap" id="itemTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark active" id="item-tab" data-bs-toggle="tab" data-bs-target="#item" type="button" role="tab" aria-controls="itemConfig" aria-selected="true">Item</button>
  </li>
</ul>

<div class="tab-content" id="itemConfig">
  <div class="tab-pane fade show active" id="item" role="tabpanel" aria-labelledby="home-tab">
    <p>
    <div class="row">
      <div class="col-sm-11">
        <%= render 'form', menuitem: @menuitem %>
    </div>
  </div>
</div>