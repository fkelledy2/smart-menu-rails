<div class="row">
  <div class="col-sm-6">
    <h1><%= t(".menuItems") %></h1>
  </div>
  <div class="col-sm-6 text-end">
    <button id="activate-row" class='btn btn-sm btn-success' disabled><%= t(".activate") %></button>
    <button id="deactivate-row"class='btn btn-sm btn-danger' disabled><%= t(".desctivate") %></button>
    <%= link_to new_menuitem_path, class: 'btn btn-sm btn-primary' do %>
      <i class="bi bi-plus"></i> <%= t(".menuItem") %>
    <% end %>
  </div>
</div>
<% if @restaurantCurrency %>
    <div style="display:none" id="restaurantCurrency">
        <% if @restaurantCurrency.symbol %>
            <%= @restaurantCurrency.symbol %>
        <% else %>
            <%= @restaurantCurrency.iso_code %>
        <% end %>
    </div>
<% end %>
<div style="padding-top:10px" id="menuitem-table">
</div>
