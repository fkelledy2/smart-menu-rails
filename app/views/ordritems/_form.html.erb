    </div>

  <div class="mb-3">
    <% if ordritem.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', ordritem, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if ordritem.persisted? %>
      <%= link_to "Cancel", ordritem, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", ordritems_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
