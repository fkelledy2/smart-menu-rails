


<div class="row">
  <div class="col-sm-6">
    <h1>Tracks</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_track_path, class: 'btn btn-primary' do %>
    Add New Track
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Externalid</th>
            <th>Description</th>
            <th>Image</th>
            <th>Sequence</th>
            <th>Restaurant</th>
            
      </tr>
    </thead>

    <tbody>
      <% @tracks.each do |track| %>
        <%= content_tag :tr, id: dom_id(track), class: dom_class(track) do %>
          
            <td><%= link_to track.name, track %></td>
          

                      <td><%= track.externalid %></td>
                      <td><%= track.description %></td>
                      <td><%= track.image %></td>
                      <td><%= track.sequence %></td>
                      <td><%= track.restaurant %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
