<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
        <h1><%=t(".restaurant")%> </h1>
    </div>
    <div class="col-sm-2">
        <% if @restaurant.persisted? %>
          <%= link_to t('.cancel'), @restaurant, class: "float-end btn btn-sm btn-light" %>
        <% else %>
          <%= link_to t('.cancel'), restaurants_path, class: "float-end btn btn-sm btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'form', restaurant: @restaurant %>
