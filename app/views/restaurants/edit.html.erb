<style>
    .form-control:disabled {
        background-color: #fafafa;
        opacity: 1;
    }
    .disabled .ts-control {
        opacity: 1.0;
        background-color: #fafafa;
    }
    .ts-dropdown, .ts-control, .ts-control input {
        color: #000000;
        font-size: 16px;
        line-height: 18px;
    }
</style>
<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
          <h1>Edit Restaurant</h1>
    </div>
    <div class="col-sm-2">
        <% if @restaurant.persisted? %>
          <%= link_to "Cancel", @restaurant, class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to "Cancel", restaurants_path, class: "float-end btn btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<div class="row">
    <div class="col-sm-11">
        <%= render 'form', restaurant: @restaurant %>
    </div>
</div>
