<%# Restaurants list frame (filters + cards) %>
<% restaurants = local_assigns[:restaurants] || @restaurants %>
<% q = local_assigns[:q] || @q %>

<div class="mb-3 p-3" data-testid="restaurants-list-card">
  <h2 class="h5 mb-3">
    <i class="bi bi-shop"></i>
    <%= t('.restaurants', default: 'Restaurants') %>
  </h2>

  <% if restaurants.blank? %>
    <div class="text-center py-5">
      <i class="bi bi-shop text-muted" style="font-size:2rem;"></i>
      <h4 class="mt-2 text-muted"><%= t('.no_restaurants') %></h4>
      <% if q.present? %>
        <p class="text-muted"><%= t('.no_results_for') %> "<%= q %>"</p>
        <%= link_to t('.clear_search'), restaurants_path, class: 'btn btn-sm btn-outline-secondary', data: { turbo_frame: 'restaurants_content', turbo_action: 'advance' } %>
      <% end %>
    </div>
  <% else %>
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurants_path, method: :patch, data: { turbo: false, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th class="w-20px"></th>
                <th class="w-20px"></th>
                <th></th>
                <th class="text-end"></th>
              </tr>
              <tr>
                <th class="w-20px">
                  <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
                </th>
                <th class="text-end text-nowrap" colspan="3">
                  <div class="d-flex justify-content-end flex-nowrap">
                    <div class="input-group input-group-sm flex-nowrap" style="min-width: 260px; width: auto;">
                      <%= f.select :status,
                          [
                            [t('.active', default: 'Active'), 'active'],
                            [t('.inactive', default: 'Inactive'), 'inactive'],
                          ],
                          { include_blank: t('.set_status', default: 'Set status') },
                          { class: 'form-select form-select-sm', disabled: true, style: 'min-width: 0;', name: 'bulk[status]', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
                      <button type="submit"
                              class="btn btn-primary"
                              title="<%= t('.apply', default: 'Apply') %>"
                              aria-label="<%= t('.apply', default: 'Apply') %>"
                              disabled
                              data-localization-bulk-target="submit">
                        <i class="bi bi-check2"></i>
                        <span class="visually-hidden"><%= t('.apply', default: 'Apply') %></span>
                      </button>
                    </div>
                  </div>
                </th>
              </tr>
            </thead>

            <tbody data-controller="sortable"
                   data-sortable-url-value="<%= reorder_restaurants_path %>"
                   data-sortable-handle-value=".drag-handle">
              <% restaurants.each do |restaurant| %>
                <% row_status = restaurant.status.to_s %>
                <tr data-sortable-id="<%= restaurant.id %>"
                    data-testid="restaurant-row-<%= restaurant.id %>"
                    data-href="<%= edit_restaurant_path(restaurant) %>"
                    data-turbo-frame="_top"
                    class="clickable-row row-status-<%= row_status %>">
                  <td class="w-20px">
                    <input type="checkbox" name="restaurant_ids[]" value="<%= restaurant.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                  </td>
                  <td class="w-20px">
                    <i class="bi bi-grip-vertical text-muted drag-handle" title="<%= t('.drag_to_reorder', default: 'Drag to reorder') %>"></i>
                  </td>
                  <td>
                    <div class="fw-semibold"><%= restaurant.name %></div>
                    <div class="text-muted small"><%= [restaurant.address1, restaurant.address2, restaurant.city, restaurant.state].reject(&:blank?).join(', ') %></div>
                  </td>
                  <td class="text-end">
                    <div class="d-flex justify-content-end align-items-center gap-2">
                      <%= link_to edit_restaurant_path(restaurant),
                          class: 'd-inline-flex align-items-center justify-content-end text-decoration-none link-secondary',
                          title: t('.edit', default: 'Edit'),
                          aria: { label: t('.edit', default: 'Edit') },
                          data: { row_primary_link: true, turbo_frame: '_top' } do %>
                        <i class="bi bi-chevron-right"></i>
                      <% end %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
