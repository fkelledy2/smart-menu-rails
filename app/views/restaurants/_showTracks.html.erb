<div class="spacing-sm"></div>
<span class="display-none" id='spotifyAccessToken'><%= @restaurant.spotifyaccesstoken %></span>
<span class="display-none" id='spotifyRefreshToken'><%= @restaurant.spotifyrefreshtoken %></span>
<p>
<div class="row">
  <div class="col-12 text-end">
    <span class="padding-top-xs float-start h4"><%= t('.tracks') %></span>
    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
      <div class="btn-group" role="group">
        <%= link_to @restaurant.spotifyAuthUrl, id: 'spotifyConnect', class: 'btn btn-dark', data: { turbo: false } do %>
          <i class="bi bi-spotify"></i>
        <% end %>
        <button id="togglePlay"     type="button" class='btn btn-dark' disabled ><i class="bi bi-play-btn-fill"></i></i></button>
        <button id="previousTrack"  type="button" class='btn btn-dark' disabled><i class="bi bi-chevron-double-left"></i></button>
        <button id="nextTrack"      type="button" class='btn btn-dark' disabled><i class="bi bi-chevron-double-right"></i></button>
        <%= link_to @restaurant.spotifyPlaylistUrl, class: 'btn btn-dark', :target => "_blank" do %>
          <i class="bi bi-box-arrow-up-right"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="table-container-spacing table-borderless" id="restaurant-tracks-table" data-bs-restaurant_id="<%= @restaurant.id %>">
</div>
