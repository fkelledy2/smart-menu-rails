          <div style="margin-top:20px" class="form-group row">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-6">
                <%= link_to restaurant_restaurantavailabilities_path(restaurant_id: @restaurant.id), class: 'link-dark' do %>
                    <h4><%=t(".openingHours")%></h4>
                <% end %>
            </div>
            <div class="col-sm-3">
                <span class="float-end">
                    <%= link_to new_restaurantavailability_path(restaurant_id: @restaurant.id), class: 'btn btn-sm btn-primary' do %>
                        <i class="bi bi-plus"></i>&nbsp;<%=t(".openingHour")%>
                    <% end %>
                </span>
            </div>
          </div>
          <div class="form-group row">
            <div class="col-sm-3">
            </div>
            <div class="col-sm-9">
                <table class="table">
                  <thead>
                    <tr>
                      <th class="w-25 p-3" scope="col"><%=t(".dayOfWeek")%></th>
                      <th class="w-25 p-3" scope="col"><span class="float-end"><%=t(".opening")%></span></th>
                      <th class="w-25 p-3" scope="col"><span class="float-end"><%=t(".closing")%></span></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @restaurant.restaurantavailabilities.each do |restaurantavailability| %>
                    <tr>
                      <td class="w-25 p-3">
                          <%= link_to restaurant_restaurantavailability_path(restaurant_id: @restaurant.id, id: restaurantavailability.id), class: 'link-dark' do %>
                            <%= restaurantavailability.dayofweek %>
                          <% end %>
                      </td>
                      <td class="w-25 p-3"><span class="float-end"><%= format('%02d', restaurantavailability.starthour) %>:<%= format('%02d', restaurantavailability.startmin) %></span></td>
                      <td class="w-25 p-3"><span style="padding-right:4px" class="float-end"><%= format('%02d', restaurantavailability.endhour) %>:<%= format('%02d', restaurantavailability.endmin) %></span></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
            </div>
          </div>