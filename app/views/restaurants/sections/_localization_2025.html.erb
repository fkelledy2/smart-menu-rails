%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>
  
  <div class="quick-actions-grid">
    <%= link_to new_restaurant_restaurantlocale_path(restaurant), 
        class: 'quick-action-btn',
        data: { turbo_frame: '_top' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_language', default: 'Add Language') %></span>
    <% end %>
  </div>
</div>

<!-- Localization & Languages -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-globe"></i>
    <%= t('.localization', default: 'Localization & Languages') %>
  </h2>
  
  <p class="text-muted mb-4">
    <%= t('.localization_description', default: 'Manage translations for your menus in multiple languages') %>
  </p>
  
  <% if restaurant.restaurantlocales.any? %>
    <!-- Desktop Table View -->
    <div class="table-responsive languages-table-view">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th><%= t('.language', default: 'Language') %></th>
            <th><%= t('.locale_code', default: 'Code') %></th>
            <th><%= t('.status', default: 'Status') %></th>
            <th><%= t('.default', default: 'Default') %></th>
            <th class="text-end"><%= t('.actions', default: 'Actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% restaurant.restaurantlocales.each do |locale| %>
            <tr>
              <td>
                <div class="d-flex align-items-center gap-2">
                  <div class="language-avatar">
                    <i class="bi bi-translate"></i>
                  </div>
                  <div class="fw-semibold">
                    <%= locale.language %>
                  </div>
                </div>
              </td>
              <td class="text-muted">
                <code><%= locale.locale %></code>
              </td>
              <td>
                <% if locale.active? %>
                  <span class="badge bg-success">
                    <i class="bi bi-check-circle"></i> <%= t('.active', default: 'Active') %>
                  </span>
                <% elsif locale.inactive? %>
                  <span class="badge bg-secondary">
                    <i class="bi bi-dash-circle"></i> <%= t('.inactive', default: 'Inactive') %>
                  </span>
                <% end %>
              </td>
              <td>
                <% if locale.dfault? %>
                  <span class="badge bg-primary">
                    <i class="bi bi-star-fill"></i> <%= t('.default_locale', default: 'Default') %>
                  </span>
                <% end %>
              </td>
              <td class="text-end">
                <%= link_to edit_restaurant_restaurantlocale_path(restaurant, locale), 
                    class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                    data: { turbo_frame: '_top' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- Mobile Card View -->
    <div class="languages-cards-view">
      <% restaurant.restaurantlocales.each do |locale| %>
        <div class="language-card-mobile">
          <div class="d-flex align-items-start justify-content-between mb-3">
            <div class="d-flex align-items-center gap-2">
              <div class="language-avatar">
                <i class="bi bi-translate"></i>
              </div>
              <div>
                <div class="fw-semibold d-flex align-items-center gap-2">
                  <span><%= locale.language %></span>
                  <% if locale.dfault? %>
                    <span class="badge bg-primary">
                      <i class="bi bi-star-fill"></i>
                      <span class="d-none d-sm-inline"><%= t('.default_locale', default: 'Default') %></span>
                    </span>
                  <% end %>
                </div>
                <div class="text-muted small">
                  <code><%= locale.locale %></code>
                </div>
              </div>
            </div>
            <%= link_to edit_restaurant_restaurantlocale_path(restaurant, locale), 
                class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                data: { turbo_frame: '_top' } do %>
              <i class="bi bi-pencil"></i>
            <% end %>
          </div>
          
          <div>
            <% if locale.active? %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> <%= t('.active', default: 'Active') %>
              </span>
            <% elsif locale.inactive? %>
              <span class="badge bg-secondary">
                <i class="bi bi-dash-circle"></i> <%= t('.inactive', default: 'Inactive') %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-globe text-muted" style="font-size: 3rem;"></i>
      <h3 class="mt-3 text-muted">
        <%= t('.no_locales', default: 'No additional languages configured') %>
      </h3>
      <p class="text-muted">
        <%= t('.no_locales_description', default: 'Add translations to make your menu accessible in multiple languages') %>
      </p>
    </div>
  <% end %>
</div>

