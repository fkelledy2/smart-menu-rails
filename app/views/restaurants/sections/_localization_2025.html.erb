<%#
  Restaurant Localization Section
  Multi-language support and translations
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>
<% locales = if restaurant.restaurantlocales.respond_to?(:order)
               restaurant.restaurantlocales.order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC'))
             else
               Array(restaurant.restaurantlocales).sort_by { |rl| rl.respond_to?(:sequence) ? rl.sequence.to_i : 0 }
             end %>

<%
  plan = restaurant.user&.plan
  languages_limit = plan&.languages
  active_languages_count = Restaurantlocale
    .where(restaurant_id: restaurant.id)
    .where.not(status: Restaurantlocale.statuses[:archived])
    .where(status: Restaurantlocale.statuses[:active])
    .count
  can_add_language = languages_limit == -1 || (languages_limit.to_i > 0 && active_languages_count < languages_limit.to_i)
  disabled_language_action_message = if languages_limit.present? && languages_limit.to_i > 0
    "Your plan allows up to #{languages_limit} active language#{languages_limit.to_i == 1 ? '' : 's'} per restaurant. Deactivate a language to add another."
  else
    'You cannot add more languages on your current plan.'
  end
%>

<!-- Quick Actions Card -->
<div class="mb-3 p-3">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions') %>
  </h2>

  <div class="quick-actions-grid">
    <% if can_add_language %>
      <%= link_to new_restaurant_restaurantlocale_path(restaurant),
          class: 'quick-action-btn',
          data: { turbo_frame: 'localization_new_locale' } do %>
        <i class="bi bi-plus-circle"></i>
        <span><%= t('.add_language') %></span>
      <% end %>
    <% else %>
      <%= link_to '#',
          class: 'quick-action-btn disabled',
          title: disabled_language_action_message,
          aria: { disabled: true },
          data: { controller: 'disabled-action', action: 'click->disabled-action#explain', disabled_action_title_value: 'Language limit reached', disabled_action_message_value: disabled_language_action_message, turbo: false } do %>
        <i class="bi bi-plus-circle"></i>
        <span><%= t('.add_language') %></span>
      <% end %>
    <% end %>
  </div>
</div>

<style>
  .quick-action-btn.disabled {
    opacity: 0.55;
    cursor: not-allowed;
    filter: grayscale(25%);
    pointer-events: auto;
  }
</style>

<!-- Inline New Language Frame -->
<%= turbo_frame_tag 'localization_new_locale' do %>
  <!-- New Language form will render here inline -->
<% end %>

<!-- Localization & Languages -->
<div class="mb-3 p-3">
  <div class="allergen-stats-card">
    <div class="allergen-stat">
      <div class="allergen-stat-value">
        <%= locales.size %>
      </div>
      <div class="allergen-stat-label">
        <%= t('.total_languages', default: 'Total Languages') %>
      </div>
    </div>
  </div>

</div>

<% if locales.any? %>
  <div class="mt-3 p-3">
    <h2 class="h5 mb-3">
      <i class="bi bi-globe"></i>
      <%= t('.current_languages', default: 'Current Languages') %>
    </h2>

    <!-- Desktop Table View (styled like Table Settings) -->
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurant_restaurantlocales_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="table-responsive languages-table-view">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th class="w-40px">
                  <div class="d-flex align-items-center gap-2">
                    <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
                  </div>
                </th>
                <th class="text-end text-nowrap" colspan="3">
                  <div class="d-flex justify-content-end flex-nowrap">
                    <div class="input-group input-group-sm flex-nowrap" style="min-width: 260px; width: auto;">
                      <%= f.select :status,
                          [
                            [t('.status_active'), 'active'],
                            [t('.status_inactive'), 'inactive'],
                            [t('.status_archived'), 'archived'],
                          ],
                          { include_blank: t('.set_status') },
                          { class: 'form-select form-select-sm', disabled: true, style: 'min-width: 0;', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
                      <button type="submit"
                              class="btn btn-primary"
                              title="<%= t('.apply') %>"
                              aria-label="<%= t('.apply') %>"
                              disabled
                              data-localization-bulk-target="submit">
                        <i class="bi bi-check2"></i>
                        <span class="visually-hidden"><%= t('.apply') %></span>
                      </button>
                    </div>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody data-controller="sortable"
                   data-sortable-url-value="<%= reorder_restaurant_restaurantlocales_path(restaurant) %>"
                   data-sortable-handle-value=".locale-handle">
              <% locales.each do |locale| %>
                <tr data-sortable-id="<%= locale.id %>"
                    class="clickable-row row-status-<%= locale.status.to_s %>"
                    data-href="<%= edit_restaurant_restaurantlocale_path(restaurant, locale) %>"
                    data-turbo-frame="localization_edit_locale"
                    title="<%= t(".status_#{locale.status}") %>">
                  <td class="w-40px">
                    <input type="checkbox" name="restaurantlocale_ids[]" value="<%= locale.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" <%= 'disabled' if locale.respond_to?(:dfault) && locale.dfault %> />
                  </td>
                  <td class="locale-handle drag-handle cursor-grab">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </td>
                  <td>
                    <div>
                      <div class="fw-semibold d-flex align-items-center gap-2">
                        <span><%= locale.language %></span>
                        <% if locale.respond_to?(:dfault) && locale.dfault %>
                          <span class="badge text-bg-info"><%= t('.default') %></span>
                        <% end %>
                      </div>
                      <div class="text-muted small"><code><%= locale.locale %></code></div>
                    </div>
                  </td>
                  <td class="text-end">
                    <%= link_to edit_restaurant_restaurantlocale_path(restaurant, locale),
                        class: 'd-inline-flex align-items-center justify-content-end text-decoration-none link-secondary',
                        title: t('.edit'),
                        aria: { label: t('.edit') },
                        data: { turbo_frame: 'localization_edit_locale', row_primary_link: true } do %>
                      <i class="bi bi-chevron-right"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Mobile Card View -->
        <div class="languages-cards-view"
             data-controller="sortable"
             data-sortable-url-value="<%= reorder_restaurant_restaurantlocales_path(restaurant) %>"
             data-sortable-handle-value=".locale-handle">
          <% locales.each do |locale| %>
            <div class="language-card-mobile clickable-row row-status-<%= locale.status.to_s %>"
                 data-sortable-id="<%= locale.id %>"
                 data-href="<%= edit_restaurant_restaurantlocale_path(restaurant, locale) %>"
                 data-turbo-frame="localization_edit_locale"
                 title="<%= t(".status_#{locale.status}") %>">
              <div class="language-row-mobile">
                <div class="language-row-mobile-left">
                  <input type="checkbox"
                         name="restaurantlocale_ids[]"
                         value="<%= locale.id %>"
                         data-localization-bulk-target="checkbox"
                         data-action="change->localization-bulk#sync"
                         <%= 'disabled' if locale.respond_to?(:dfault) && locale.dfault %> />

                  <span class="locale-handle drag-handle cursor-grab" aria-hidden="true">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </span>

                  <div class="language-row-mobile-text">
                    <div class="fw-semibold d-flex align-items-center gap-2">
                      <span class="language-name"><%= locale.language %></span>
                      <% if locale.respond_to?(:dfault) && locale.dfault %>
                        <span class="badge text-bg-info"><%= t('.default') %></span>
                      <% end %>
                    </div>
                    <div class="text-muted small language-locale"><code><%= locale.locale %></code></div>
                  </div>
                </div>

                <%= link_to edit_restaurant_restaurantlocale_path(restaurant, locale),
                    class: 'd-inline-flex align-items-center justify-content-end text-decoration-none link-secondary',
                    title: t('.edit'),
                    aria: { label: t('.edit') },
                    data: { turbo_frame: 'localization_edit_locale', row_primary_link: true } do %>
                  <i class="bi bi-chevron-right"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

      <% end %>
    </div>
  </div>

<% else %>
  <div class="mt-3 p-3">
    <div class="text-center py-5">
      <i class="bi bi-globe text-muted text-3rem"></i>
      <h3 class="mt-3 text-muted">
        <%= t('.no_locales') %>
      </h3>
      <p class="text-muted">
        <%= t('.no_locales_description') %>
      </p>
    </div>
  </div>
<% end %>

<%= turbo_frame_tag 'localization_edit_locale' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame || frame.id !== 'localization_edit_locale') return
    if (frame.innerHTML.trim() === '') return
    frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
  })
</script>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
  /* Language Avatar */
  .language-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-primary-light);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  /* Language Views - Responsive */
  .languages-table-view {
    display: block;
  }

  .languages-cards-view {
    display: none;
  }

  /* Mobile: Show cards, hide table */
  @media (max-width: 768px) {
    .languages-table-view {
      display: block;
    }

    .languages-cards-view {
      display: none;
    }
  }

  /* Mobile Language Card */
  .language-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-3);
    margin-bottom: var(--space-2);
    transition: all var(--transition-base);
  }

  .language-row-mobile {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2);
  }

  .language-row-mobile-left {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    min-width: 0;
    flex: 1;
  }

  .language-row-mobile-text {
    min-width: 0;
    flex: 1;
  }

  .language-row-mobile-text .language-name {
    display: inline-block;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* Table density tweaks (desktop) */
  .languages-table-view .table > :not(caption) > * > * {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  /* Reduce wasted width for checkbox / drag columns */
  .languages-table-view .w-40px {
    width: 32px;
  }

  .language-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }

  .language-card-mobile:last-child {
    margin-bottom: 0;
  }

  /* Quick Languages Grid */
  .languages-quick-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: var(--space-3);
  }

  @media (max-width: 768px) {
    .languages-quick-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .language-quick-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    text-align: center;
    transition: all var(--transition-base);
  }

  .language-quick-card:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .language-flag {
    font-size: 2.5rem;
    margin-bottom: var(--space-2);
  }

  .language-quick-card h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }
</style>
