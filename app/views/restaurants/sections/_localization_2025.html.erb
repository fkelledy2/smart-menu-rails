<%#
  Restaurant Localization Section
  Multi-language support and translations
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>
<% locales = if restaurant.restaurantlocales.respond_to?(:order)
               restaurant.restaurantlocales.order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC'))
             else
               Array(restaurant.restaurantlocales).sort_by { |rl| rl.respond_to?(:sequence) ? rl.sequence.to_i : 0 }
             end %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_restaurantlocale_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'localization_new_locale' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_language') %></span>
    <% end %>
  </div>
</div>

<!-- Inline New Language Frame -->
<%= turbo_frame_tag 'localization_new_locale' do %>
  <!-- New Language form will render here inline -->
<% end %>

<!-- Localization & Languages -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-globe"></i>
    <%= t('.localization') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.localization_description') %>
  </p>

  <% if locales.any? %>
    <!-- Desktop Table View (styled like Table Settings) -->
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurant_restaurantlocales_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
          <div class="d-flex align-items-center gap-2">
            <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
            <span class="text-muted small"><%= t('.select_all') %></span>
          </div>

          <div class="d-flex align-items-center gap-2 ms-auto">
            <%= f.select :status,
                [
                  [t('.status_active'), 'active'],
                  [t('.status_inactive'), 'inactive'],
                  [t('.status_archived'), 'archived'],
                ],
                { include_blank: t('.set_status') },
                { class: 'form-select form-select-sm', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
            <%= f.submit t('.apply'), class: 'btn-2025 btn-2025-primary btn-2025-sm', disabled: true, data: { localization_bulk_target: 'submit' } %>
          </div>
        </div>

    <div class="table-responsive languages-table-view">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th class="w-40px"></th>
            <th class="w-40px"></th>
            <th><%= t('.language') %></th>
            <th><%= t('.status') %></th>
            <th class="text-end">
              <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                <i class="bi bi-gear"></i>
              </span>
            </th>
          </tr>
        </thead>
        <tbody data-controller="sortable"
               data-sortable-url-value="<%= reorder_restaurant_restaurantlocales_path(restaurant) %>"
               data-sortable-handle-value=".locale-handle">
          <% locales.each do |locale| %>
            <tr data-sortable-id="<%= locale.id %>">
              <td class="w-40px">
                <input type="checkbox" name="restaurantlocale_ids[]" value="<%= locale.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" <%= 'disabled' if locale.respond_to?(:dfault) && locale.dfault %> />
              </td>
              <td class="w-40px locale-handle cursor-grab">
                <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
              </td>
              <td>
                <div>
                  <div class="fw-semibold"><%= locale.language %></div>
                  <div class="text-muted small"><code><%= locale.locale %></code></div>
                </div>
              </td>
              <td>
                <% status_class = case locale.status.to_s
                                 when 'active' then 'bg-success'
                                 when 'inactive' then 'bg-secondary'
                                 else 'bg-dark'
                                 end %>
                <span class="badge <%= status_class %>"><%= t(".status_#{locale.status}") %></span>
                <% if locale.respond_to?(:dfault) && locale.dfault %>
                  <span class="badge bg-info"><%= t('.default') %></span>
                <% end %>
              </td>
              <td class="text-end">
                <%= link_to edit_restaurant_restaurantlocale_path(restaurant, locale),
                    class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                    title: t('.edit'),
                    aria: { label: t('.edit') },
                    data: { turbo_frame: 'localization_edit_locale' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

      <% end %>
    </div>

    <!-- Mobile Card View -->
    <div class="languages-cards-view">
      <% locales.each do |locale| %>
        <div class="language-card-mobile">
          <div class="d-flex align-items-start justify-content-between mb-3">
            <div class="d-flex align-items-center gap-2">
              <div>
                <div class="fw-semibold"><%= locale.language %></div>
                <div class="text-muted small"><code><%= locale.locale %></code></div>
                <% status_class = case locale.status.to_s
                                 when 'active' then 'bg-success'
                                 when 'inactive' then 'bg-secondary'
                                 else 'bg-dark'
                                 end %>
                <div class="mt-1">
                  <span class="badge <%= status_class %>"><%= t(".status_#{locale.status}") %></span>
                  <% if locale.respond_to?(:dfault) && locale.dfault %>
                    <span class="badge bg-info"><%= t('.default') %></span>
                  <% end %>
                </div>
              </div>
            </div>
            <%= link_to edit_restaurant_restaurantlocale_path(restaurant, locale),
                class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                title: t('.edit'),
                aria: { label: t('.edit') },
                data: { turbo_frame: 'localization_edit_locale' } do %>
              <i class="bi bi-pencil"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-globe text-muted text-3rem"></i>
      <h3 class="mt-3 text-muted">
        <%= t('.no_locales') %>
      </h3>
      <p class="text-muted">
        <%= t('.no_locales_description') %>
      </p>
    </div>
  <% end %>
</div>

<%= turbo_frame_tag 'localization_edit_locale' do %>
<% end %>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
  /* Language Avatar */
  .language-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-primary-light);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  /* Language Views - Responsive */
  .languages-table-view {
    display: block;
  }

  .languages-cards-view {
    display: none;
  }

  /* Mobile: Show cards, hide table */
  @media (max-width: 768px) {
    .languages-table-view {
      display: none;
    }

    .languages-cards-view {
      display: block;
    }
  }

  /* Mobile Language Card */
  .language-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-3);
    transition: all var(--transition-base);
  }

  .language-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }

  .language-card-mobile:last-child {
    margin-bottom: 0;
  }

  /* Quick Languages Grid */
  .languages-quick-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
    gap: var(--space-3);
  }

  @media (max-width: 768px) {
    .languages-quick-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .language-quick-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    text-align: center;
    transition: all var(--transition-base);
  }

  .language-quick-card:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .language-flag {
    font-size: 2.5rem;
    margin-bottom: var(--space-2);
  }

  .language-quick-card h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }
</style>
