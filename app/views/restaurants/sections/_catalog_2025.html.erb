<%#
  Restaurant Taxes & Tips Section
  Taxes and tips management
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_tax_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'taxes_new_tax' } do %>
      <i class="bi bi-receipt"></i>
      <span><%= t('.add_tax', default: 'Add Tax') %></span>
    <% end %>

    <%= link_to new_restaurant_tip_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'tips_new_tip' } do %>
      <i class="bi <%= currency_icon(restaurant.currency) %>"></i>
      <span><%= t('.add_tip', default: 'Add Tip') %></span>
    <% end %>
  </div>
</div>

<%= turbo_frame_tag 'taxes_new_tax' do %>
<% end %>

<%= turbo_frame_tag 'tips_new_tip' do %>
<% end %>

<%= turbo_frame_tag 'taxes_edit_tax' do %>
<% end %>

<%= turbo_frame_tag 'tips_edit_tip' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame) return

    if (frame.id === 'taxes_edit_tax' || frame.id === 'tips_edit_tip') {
      if (frame.innerHTML.trim() === '') return
      frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
    }
  })
</script>

<!-- Taxes & Tips Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-cash-coin"></i>
    <%= t('.taxes_and_tips', default: 'Taxes & Tips') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.taxes_and_tips_description', default: 'Manage taxes and tip configurations') %>
  </p>

  <div class="catalog-grid">
  </div>
</div>

<% taxes = restaurant.taxes.where(archived: false).where.not(status: :archived) %>
<% tips = restaurant.tips.where(archived: false).where.not(status: :archived) %>

<div class="taxes-tips-lists-grid">
  <% if taxes.any? %>
    <div class="content-card-2025">
      <h2 class="content-card-title">
        <i class="bi bi-list-check"></i>
        <%= t('.current_taxes', default: 'Current Taxes') %>
      </h2>

      <div class="table-responsive taxes-table-view">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th class="w-40px"></th>
              <th><%= t('.name', default: 'Name') %></th>
              <th class="text-end"><%= t('.rate', default: 'Rate') %></th>
              <th class="text-end"><%= t('.status', default: 'Status') %></th>
              <th class="text-end">
                <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                  <i class="bi bi-gear"></i>
                </span>
              </th>
            </tr>
          </thead>
          <tbody>
            <% taxes.order(:sequence, :id).each do |tax| %>
              <tr>
                <td class="w-40px">
                  <i class="bi bi-grip-vertical text-muted"></i>
                </td>
                <td>
                  <strong>
                    <%= tax.name %>
                  </strong>
                  <div class="text-sm text-muted">
                    <%= tax.taxtype.to_s.titleize %>
                  </div>
                </td>
                <td class="text-end">
                  <strong><%= tax.taxpercentage %>%</strong>
                </td>
                <td class="text-end">
                  <% if tax.status.to_s == 'inactive' %>
                    <span class="badge bg-secondary"><%= t('.inactive', default: 'Inactive') %></span>
                  <% else %>
                    <span class="badge bg-success"><%= t('.active', default: 'Active') %></span>
                  <% end %>
                </td>
                <td class="text-end">
                  <%= link_to edit_restaurant_tax_path(restaurant, tax),
                      class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                      title: t('.edit', default: 'Edit'),
                      aria: { label: t('.edit', default: 'Edit') },
                      data: { turbo_frame: 'taxes_edit_tax' } do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>

  <% if tips.any? %>
    <div class="content-card-2025">
      <h2 class="content-card-title">
        <i class="bi bi-list-check"></i>
        <%= t('.current_tips', default: 'Current Tips') %>
      </h2>

      <div class="table-responsive tips-table-view">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th class="w-40px"></th>
              <th><%= t('.tip', default: 'Tip') %></th>
              <th class="text-end">
                <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                  <i class="bi bi-gear"></i>
                </span>
              </th>
            </tr>
          </thead>
          <tbody>
            <% tips.order(:sequence, :id).each do |tip| %>
              <tr>
                <td class="w-40px">
                  <i class="bi bi-grip-vertical text-muted"></i>
                </td>
                <td>
                  <strong>
                    <%= tip.percentage %>%
                    <% if tip.status.to_s == 'inactive' %>
                      <span class="badge bg-secondary ms-2"><%= t('.inactive', default: 'Inactive') %></span>
                    <% end %>
                  </strong>
                </td>
                <td class="text-end">
                  <%= link_to edit_restaurant_tip_path(restaurant, tip),
                      class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                      title: t('.edit', default: 'Edit'),
                      aria: { label: t('.edit', default: 'Edit') },
                      data: { turbo_frame: 'tips_edit_tip' } do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }

  .taxes-tips-lists-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
    gap: var(--space-4);
  }
</style>

<!-- Tax & Tip Templates removed -->

<style>
  .catalog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-4);
  }

  .catalog-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .catalog-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .catalog-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .catalog-info {
    flex: 1;
  }

  .catalog-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .catalog-count {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin: 0;
  }

  /* Templates styles removed */
</style>
