<%#
  Restaurant Taxes & Tips Section
  Taxes and tips management
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_tax_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: '_top' } do %>
      <i class="bi bi-receipt"></i>
      <span><%= t('.add_tax', default: 'Add Tax') %></span>
    <% end %>

    <%= link_to new_restaurant_tip_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: '_top' } do %>
      <i class="bi <%= currency_icon(restaurant.currency) %>"></i>
      <span><%= t('.add_tip', default: 'Add Tip') %></span>
    <% end %>
  </div>
</div>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Taxes & Tips Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-cash-coin"></i>
    <%= t('.taxes_and_tips', default: 'Taxes & Tips') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.taxes_and_tips_description', default: 'Manage taxes and tip configurations') %>
  </p>

  <div class="catalog-grid">
    <!-- Taxes -->
    <div class="catalog-item">
      <div class="catalog-icon bg-primary">
        <i class="bi bi-receipt"></i>
      </div>
      <div class="catalog-info">
        <h4 class="catalog-title"><%= t('.taxes', default: 'Taxes') %></h4>
        <p class="catalog-count">
          <%= restaurant.taxes.where(archived: false).where.not(status: :archived).count %> <%= t('.configured', default: 'configured') %>
        </p>
      </div>
      <%= link_to restaurant_taxes_path(restaurant),
          class: 'btn-2025 btn-2025-secondary btn-2025-sm',
          data: { turbo_frame: '_top' } do %>
        <i class="bi bi-pencil"></i> <%= t('.manage', default: 'Manage') %>
      <% end %>
    </div>

    <!-- Tips -->
    <div class="catalog-item">
      <div class="catalog-icon bg-success">
        <i class="bi <%= currency_icon(restaurant.currency) %>"></i>
      </div>
      <div class="catalog-info">
        <h4 class="catalog-title"><%= t('.tips', default: 'Tips') %></h4>
        <p class="catalog-count">
          <%= restaurant.tips.where(archived: false).where.not(status: :archived).count %> <%= t('.configured', default: 'configured') %>
        </p>
      </div>
      <%= link_to restaurant_tips_path(restaurant),
          class: 'btn-2025 btn-2025-secondary btn-2025-sm',
          data: { turbo_frame: '_top' } do %>
        <i class="bi bi-pencil"></i> <%= t('.manage', default: 'Manage') %>
      <% end %>
    </div>

  </div>
</div>

<!-- Tax & Tip Templates -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.tax_tip_templates', default: 'Tax & Tip Templates') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.templates_description', default: 'Pre-configured tax and tip sets for quick setup') %>
  </p>

  <div class="templates-list">
    <div class="template-card">
      <div class="template-header">
        <h5><%= t('.us_restaurant', default: 'US Restaurant') %></h5>
        <span class="badge bg-primary"><%= t('.recommended', default: 'Recommended') %></span>
      </div>
      <p class="text-sm text-muted">
        <%= t('.us_restaurant_desc', default: 'Sales tax + tip suggestions (15%, 18%, 20%)') %>
      </p>
      <button class="btn-2025 btn-2025-outline btn-2025-sm">
        <i class="bi bi-download"></i> <%= t('.load_template', default: 'Load Template') %>
      </button>
    </div>

    <div class="template-card">
      <div class="template-header">
        <h5><%= t('.eu_restaurant', default: 'EU Restaurant') %></h5>
      </div>
      <p class="text-sm text-muted">
        <%= t('.eu_restaurant_desc', default: 'VAT + service charge included') %>
      </p>
      <button class="btn-2025 btn-2025-outline btn-2025-sm">
        <i class="bi bi-download"></i> <%= t('.load_template', default: 'Load Template') %>
      </button>
    </div>
  </div>
</div>

<style>
  .catalog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-4);
  }

  .catalog-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .catalog-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .catalog-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .catalog-info {
    flex: 1;
  }

  .catalog-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .catalog-count {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin: 0;
  }

  .templates-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-3);
  }

  .template-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .template-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .template-header h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0;
  }
</style>
