<%#
  Restaurant Taxes & Tips Section
  Taxes and tips management
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_tax_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'taxes_new_tax' } do %>
      <i class="bi bi-receipt"></i>
      <span><%= t('.add_tax') %></span>
    <% end %>

    <%= link_to new_restaurant_tip_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'tips_new_tip' } do %>
      <i class="bi <%= currency_icon(restaurant.currency) %>"></i>
      <span><%= t('.add_tip') %></span>
    <% end %>
  </div>
</div>

<%= turbo_frame_tag 'taxes_new_tax' do %>
<% end %>

<%= turbo_frame_tag 'tips_new_tip' do %>
<% end %>

<%= turbo_frame_tag 'taxes_edit_tax' do %>
<% end %>

<%= turbo_frame_tag 'tips_edit_tip' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame) return

    if (frame.id === 'taxes_edit_tax' || frame.id === 'tips_edit_tip') {
      if (frame.innerHTML.trim() === '') return
      frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
    }
  })
</script>

<!-- Taxes & Tips Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-cash-coin"></i>
    <%= t('.taxes_and_tips') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.taxes_and_tips_description') %>
  </p>

  <div class="catalog-grid">
  </div>
</div>

<% taxes = restaurant.taxes.where(archived: false).where.not(status: :archived)
  .order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>
<% tips = restaurant.tips.where(archived: false).where.not(status: :archived)
  .order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>

<div class="taxes-tips-lists-grid">
  <% if taxes.any? %>
    <div class="content-card-2025">
      <h2 class="content-card-title">
        <i class="bi bi-list-check"></i>
        <%= t('.current_taxes') %>
      </h2>

      <div data-controller="localization-bulk">
        <%= form_with url: bulk_update_restaurant_taxes_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
          <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <div class="d-flex align-items-center gap-2">
              <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
              <span class="text-muted small"><%= t('.select_all') %></span>
            </div>

            <div class="d-flex align-items-center gap-2 ms-auto">
              <%= f.select :status,
                  [
                    [t('.status_active'), 'active'],
                    [t('.status_inactive'), 'inactive'],
                    [t('.status_archived'), 'archived'],
                  ],
                  { include_blank: t('.set_status') },
                  { class: 'form-select form-select-sm', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
              <%= f.submit t('.apply'), class: 'btn-2025 btn-2025-primary btn-2025-sm', disabled: true, data: { localization_bulk_target: 'submit' } %>
            </div>
          </div>

        <div class="table-responsive taxes-table-view">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th class="w-40px"></th>
                <th class="w-40px"></th>
                <th><%= t('.name') %></th>
                <th class="text-end"><%= t('.rate') %></th>
                <th class="text-end">
                  <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                    <i class="bi bi-gear"></i>
                  </span>
                </th>
              </tr>
            </thead>
            <tbody data-controller="sortable"
                   data-sortable-url-value="<%= reorder_restaurant_taxes_path(restaurant) %>"
                   data-sortable-handle-value=".tax-handle">
              <% taxes.each do |tax| %>
                <tr data-sortable-id="<%= tax.id %>"
                    class="clickable-row row-status-<%= tax.status.to_s %>"
                    data-href="<%= edit_restaurant_tax_path(restaurant, tax) %>"
                    title="<%= t(".status_#{tax.status}") %>">
                  <td class="w-40px">
                    <input type="checkbox" name="tax_ids[]" value="<%= tax.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                  </td>
                  <td class="w-40px tax-handle cursor-grab">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </td>
                  <td>
                    <strong>
                      <%= tax.name %>
                    </strong>
                    <div class="text-sm text-muted">
                      <%= tax.taxtype.to_s.titleize %>
                    </div>
                  </td>
                  <td class="text-end">
                    <strong><%= tax.taxpercentage %>%</strong>
                  </td>
                  <td class="text-end">
                    <%= link_to edit_restaurant_tax_path(restaurant, tax),
                        class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                        title: t('.edit'),
                        aria: { label: t('.edit') },
                        data: { turbo_frame: 'taxes_edit_tax', row_primary_link: true } do %>
                      <i class="bi bi-chevron-right"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <% end %>
      </div>
    </div>
  <% end %>

  <% if tips.any? %>
    <div class="content-card-2025">
      <h2 class="content-card-title">
        <i class="bi bi-list-check"></i>
        <%= t('.current_tips') %>
      </h2>

      <div data-controller="localization-bulk">
        <%= form_with url: bulk_update_restaurant_tips_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
          <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
            <div class="d-flex align-items-center gap-2">
              <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
              <span class="text-muted small"><%= t('.select_all') %></span>
            </div>

            <div class="d-flex align-items-center gap-2 ms-auto">
              <%= f.select :status,
                  [
                    [t('.status_active'), 'active'],
                    [t('.status_inactive'), 'inactive'],
                    [t('.status_archived'), 'archived'],
                  ],
                  { include_blank: t('.set_status') },
                  { class: 'form-select form-select-sm', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
              <%= f.submit t('.apply'), class: 'btn-2025 btn-2025-primary btn-2025-sm', disabled: true, data: { localization_bulk_target: 'submit' } %>
            </div>
          </div>

        <div class="table-responsive tips-table-view">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th class="w-40px"></th>
                <th class="w-40px"></th>
                <th><%= t('.tip') %></th>
                <th class="text-end">
                  <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                    <i class="bi bi-gear"></i>
                  </span>
                </th>
              </tr>
            </thead>
            <tbody data-controller="sortable"
                   data-sortable-url-value="<%= reorder_restaurant_tips_path(restaurant) %>"
                   data-sortable-handle-value=".tip-handle">
              <% tips.each do |tip| %>
                <tr data-sortable-id="<%= tip.id %>"
                    class="clickable-row row-status-<%= tip.status.to_s %>"
                    data-href="<%= edit_restaurant_tip_path(restaurant, tip) %>"
                    title="<%= t(".status_#{tip.status}") %>">
                  <td class="w-40px">
                    <input type="checkbox" name="tip_ids[]" value="<%= tip.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                  </td>
                  <td class="w-40px tip-handle cursor-grab">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </td>
                  <td>
                    <strong>
                      <%= tip.percentage %>%
                    </strong>
                  </td>
                  <td class="text-end">
                    <%= link_to edit_restaurant_tip_path(restaurant, tip),
                        class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                        title: t('.edit'),
                        aria: { label: t('.edit') },
                        data: { turbo_frame: 'tips_edit_tip', row_primary_link: true } do %>
                      <i class="bi bi-chevron-right"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <% end %>
      </div>
    </div>
  <% end %>
</div>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }

  .taxes-tips-lists-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
    gap: var(--space-4);
  }
</style>

<!-- Tax & Tip Templates removed -->

<style>
  .catalog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-4);
  }

  .catalog-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .catalog-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .catalog-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .catalog-info {
    flex: 1;
  }

  .catalog-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .catalog-count {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin: 0;
  }

  /* Templates styles removed */
</style>
