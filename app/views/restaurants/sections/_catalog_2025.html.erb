<%#
  Restaurant Taxes & Tips Section
  Taxes and tips management
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="mb-3 p-3">
  <h2 class="h5 mb-3">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_tax_path(restaurant),
        class: 'btn btn-primary quick-action-btn',
        data: { turbo_frame: 'taxes_new_tax' } do %>
      <i class="bi bi-receipt"></i>
      <span><%= t('.add_tax') %></span>
    <% end %>

    <%= link_to new_restaurant_tip_path(restaurant),
        class: 'btn btn-primary quick-action-btn',
        data: { turbo_frame: 'tips_new_tip' } do %>
      <i class="bi <%= currency_icon(restaurant.currency) %>"></i>
      <span><%= t('.add_tip') %></span>
    <% end %>
  </div>
</div>

<%= turbo_frame_tag 'taxes_new_tax' do %>
<% end %>

<%= turbo_frame_tag 'tips_new_tip' do %>
<% end %>

<!-- Taxes & Tips Overview -->
<div class="mb-3 p-3">
    <div class="catalog-grid">
    </div>

    <div class="count-panel-2025 mt-3">
      <div class="count-panel-item-2025">
        <div class="count-panel-value-2025"><%= restaurant.taxes.where(archived: false).where.not(status: :archived).count %></div>
        <div class="count-panel-label-2025"><%= t('.total_taxes', default: 'Total taxes') %></div>
      </div>
      <div class="count-panel-item-2025">
        <div class="count-panel-value-2025"><%= restaurant.tips.where(archived: false).where.not(status: :archived).count %></div>
        <div class="count-panel-label-2025"><%= t('.total_tips', default: 'Total tips') %></div>
      </div>
    </div>
</div>

<% taxes = restaurant.taxes.where(archived: false).where.not(status: :archived)
  .order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>
<% tips = restaurant.tips.where(archived: false).where.not(status: :archived)
  .order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>

<div class="taxes-tips-lists-grid">
  <% if taxes.any? %>
    <div class="p-3">
      <h2 class="h5 mb-3">
        <i class="bi bi-cash-coin"></i>
        <%= t('.current_taxes') %>
      </h2>

      <div data-controller="localization-bulk">
        <%= form_with url: bulk_update_restaurant_taxes_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="table-responsive taxes-table-view">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th class="w-40px">
                  <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
                </th>
                <th class="text-end text-nowrap" colspan="4">
                  <div class="d-flex justify-content-end flex-nowrap">
                    <div class="input-group input-group-sm flex-nowrap" style="min-width: 260px; width: auto;">
                      <%= f.select :status,
                          [
                            [t('.status_active'), 'active'],
                            [t('.status_inactive'), 'inactive'],
                            [t('.status_archived'), 'archived'],
                          ],
                          { include_blank: t('.set_status') },
                          { class: 'form-select form-select-sm', disabled: true, style: 'min-width: 0;', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
                      <button type="submit"
                              class="btn btn-primary"
                              title="<%= t('.apply') %>"
                              aria-label="<%= t('.apply') %>"
                              disabled
                              data-localization-bulk-target="submit">
                        <i class="bi bi-check2"></i>
                        <span class="visually-hidden"><%= t('.apply') %></span>
                      </button>
                    </div>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody data-controller="sortable"
                   data-sortable-url-value="<%= reorder_restaurant_taxes_path(restaurant) %>"
                   data-sortable-handle-value=".tax-handle">
              <% taxes.each do |tax| %>
                <tr data-sortable-id="<%= tax.id %>"
                    class="clickable-row row-status-<%= tax.status.to_s %>"
                    data-href="<%= edit_restaurant_tax_path(restaurant, tax) %>"
                    title="<%= t(".status_#{tax.status}") %>">
                  <td class="w-40px">
                    <input type="checkbox" name="tax_ids[]" value="<%= tax.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                  </td>
                  <td class="w-40px tax-handle drag-handle cursor-grab">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </td>
                  <td>
                    <strong>
                      <%= tax.name %>
                    </strong>
                    <div class="text-sm text-muted">
                      <%= tax.taxtype.to_s.titleize %>
                    </div>
                  </td>
                  <td class="text-end">
                    <strong><%= tax.taxpercentage %>%</strong>
                  </td>
                  <td class="text-end">
                    <%= link_to edit_restaurant_tax_path(restaurant, tax),
                        class: 'd-inline-flex align-items-center justify-content-end text-decoration-none link-secondary',
                        title: t('.edit'),
                        aria: { label: t('.edit') },
                        data: { turbo_frame: 'taxes_edit_tax', row_primary_link: true } do %>
                      <i class="bi bi-chevron-right"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="taxes-cards-view"
             data-controller="sortable"
             data-sortable-url-value="<%= reorder_restaurant_taxes_path(restaurant) %>"
             data-sortable-handle-value=".tax-handle">
          <% taxes.each do |tax| %>
            <div class="tax-card-mobile clickable-row row-status-<%= tax.status.to_s %>"
                 data-sortable-id="<%= tax.id %>"
                 data-href="<%= edit_restaurant_tax_path(restaurant, tax) %>"
                 title="<%= t(".status_#{tax.status}") %>">
              <div class="tax-row-mobile">
                <div class="tax-row-mobile-left">
                  <input type="checkbox"
                         name="tax_ids[]"
                         value="<%= tax.id %>"
                         data-localization-bulk-target="checkbox"
                         data-action="change->localization-bulk#sync" />

                  <span class="tax-handle drag-handle cursor-grab" aria-hidden="true">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </span>

                  <div class="tax-row-mobile-text">
                    <div class="fw-semibold d-flex align-items-center gap-2">
                      <span class="tax-name"><%= tax.name %></span>
                    </div>
                    <div class="text-muted small"><%= tax.taxtype.to_s.titleize %></div>
                  </div>
                </div>

                <div class="tax-row-mobile-actions">
                  <span class="badge text-bg-light"><%= tax.taxpercentage %>%</span>

                  <%= link_to edit_restaurant_tax_path(restaurant, tax),
                      class: 'd-inline-flex align-items-center justify-content-end text-decoration-none link-secondary',
                      title: t('.edit'),
                      aria: { label: t('.edit') },
                      data: { turbo_frame: 'taxes_edit_tax', row_primary_link: true } do %>
                    <i class="bi bi-chevron-right"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <% end %>
      </div>
    </div>
  <% end %>

  <% if tips.any? %>
    <div class="p-3">
      <h2 class="h5 mb-3">
        <i class="bi bi-cash-coin"></i>
        <%= t('.current_tips') %>
      </h2>

      <div data-controller="localization-bulk">
        <%= form_with url: bulk_update_restaurant_tips_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="table-responsive tips-table-view">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th class="w-40px">
                  <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
                </th>
                <th class="text-end text-nowrap" colspan="3">
                  <div class="d-flex justify-content-end flex-nowrap">
                    <div class="input-group input-group-sm flex-nowrap" style="min-width: 260px; width: auto;">
                      <%= f.select :status,
                          [
                            [t('.status_active'), 'active'],
                            [t('.status_inactive'), 'inactive'],
                            [t('.status_archived'), 'archived'],
                          ],
                          { include_blank: t('.set_status') },
                          { class: 'form-select form-select-sm', disabled: true, style: 'min-width: 0;', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
                      <button type="submit"
                              class="btn btn-primary"
                              title="<%= t('.apply') %>"
                              aria-label="<%= t('.apply') %>"
                              disabled
                              data-localization-bulk-target="submit">
                        <i class="bi bi-check2"></i>
                        <span class="visually-hidden"><%= t('.apply') %></span>
                      </button>
                    </div>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody data-controller="sortable"
                   data-sortable-url-value="<%= reorder_restaurant_tips_path(restaurant) %>"
                   data-sortable-handle-value=".tip-handle">
              <% tips.each do |tip| %>
                <tr data-sortable-id="<%= tip.id %>"
                    class="clickable-row row-status-<%= tip.status.to_s %>"
                    data-href="<%= edit_restaurant_tip_path(restaurant, tip) %>"
                    title="<%= t(".status_#{tip.status}") %>">
                  <td class="w-40px">
                    <input type="checkbox" name="tip_ids[]" value="<%= tip.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                  </td>
                  <td class="w-40px tip-handle drag-handle cursor-grab">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </td>
                  <td>
                    <strong>
                      <%= tip.percentage %>%
                    </strong>
                  </td>
                  <td class="text-end">
                    <%= link_to edit_restaurant_tip_path(restaurant, tip),
                        class: 'd-inline-flex align-items-center justify-content-end text-decoration-none link-secondary',
                        title: t('.edit'),
                        aria: { label: t('.edit') },
                        data: { turbo_frame: 'tips_edit_tip', row_primary_link: true } do %>
                      <i class="bi bi-chevron-right"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="tips-cards-view"
             data-controller="sortable"
             data-sortable-url-value="<%= reorder_restaurant_tips_path(restaurant) %>"
             data-sortable-handle-value=".tip-handle">
          <% tips.each do |tip| %>
            <div class="tip-card-mobile clickable-row row-status-<%= tip.status.to_s %>"
                 data-sortable-id="<%= tip.id %>"
                 data-href="<%= edit_restaurant_tip_path(restaurant, tip) %>"
                 title="<%= t(".status_#{tip.status}") %>">
              <div class="tip-row-mobile">
                <div class="tip-row-mobile-left">
                  <input type="checkbox"
                         name="tip_ids[]"
                         value="<%= tip.id %>"
                         data-localization-bulk-target="checkbox"
                         data-action="change->localization-bulk#sync" />

                  <span class="tip-handle drag-handle cursor-grab" aria-hidden="true">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </span>

                  <div class="tip-row-mobile-text">
                    <div class="fw-semibold d-flex align-items-center gap-2">
                      <span class="tip-name"><%= t('.tip') %></span>
                    </div>
                  </div>
                </div>

                <div class="tip-row-mobile-actions">
                  <span class="badge text-bg-light"><%= tip.percentage %>%</span>

                  <%= link_to edit_restaurant_tip_path(restaurant, tip),
                      class: 'd-inline-flex align-items-center justify-content-end text-decoration-none link-secondary',
                      title: t('.edit'),
                      aria: { label: t('.edit') },
                      data: { turbo_frame: 'tips_edit_tip', row_primary_link: true } do %>
                    <i class="bi bi-chevron-right"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>

<%= turbo_frame_tag 'taxes_edit_tax' do %>
<% end %>

<%= turbo_frame_tag 'tips_edit_tip' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame) return

    if (frame.id === 'taxes_edit_tax' || frame.id === 'tips_edit_tip') {
      if (frame.innerHTML.trim() === '') return
      frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
    }
  })
</script>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }

  .taxes-tips-lists-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
    gap: var(--space-4);
  }

  @media (max-width: 768px) {
    .taxes-tips-lists-grid {
      grid-template-columns: minmax(0, 1fr);
    }
  }

  /* Taxes & Tips Views - Responsive */
  .taxes-table-view,
  .tips-table-view {
    display: block;
  }

  .taxes-cards-view,
  .tips-cards-view {
    display: none;
  }

  /* Mobile: Show cards, hide tables */
  @media (max-width: 768px) {
    .taxes-table-view,
    .tips-table-view {
      display: block;
    }

    .taxes-cards-view,
    .tips-cards-view {
      display: none;
    }
  }

  .tax-card-mobile,
  .tip-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-3);
    margin-bottom: var(--space-2);
    transition: all var(--transition-base);
  }

  .tax-card-mobile:hover,
  .tip-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }

  .tax-card-mobile:last-child,
  .tip-card-mobile:last-child {
    margin-bottom: 0;
  }

  .tax-row-mobile,
  .tip-row-mobile {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2);
  }

  .tax-row-mobile-actions,
  .tip-row-mobile-actions {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: var(--space-2);
    flex-shrink: 0;
  }

  .tax-row-mobile-left,
  .tip-row-mobile-left {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    min-width: 0;
    flex: 1;
  }

  .tax-row-mobile-text,
  .tip-row-mobile-text {
    min-width: 0;
    flex: 1;
  }

  .tax-row-mobile-text .tax-name {
    display: inline-block;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* Table density tweaks (desktop) */
  .taxes-table-view .table > :not(caption) > * > * ,
  .tips-table-view .table > :not(caption) > * > * {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  /* Reduce wasted width for checkbox / drag columns */
  .taxes-table-view .w-40px,
  .tips-table-view .w-40px {
    width: 32px;
  }
</style>

<!-- Tax & Tip Templates removed -->

<style>
  .catalog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: var(--space-4);
  }

  .catalog-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .catalog-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .catalog-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .catalog-info {
    flex: 1;
  }

  .catalog-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .catalog-count {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin: 0;
  }

  /* Templates styles removed */
</style>
