<%#
  Restaurant Staff Section
  Employee management
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>
<% employees = restaurant.employees.includes(:user).where(archived: false)
  .order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>

<!-- Quick Actions Card -->
<div class="mb-3 p-3">
  <h2 class="h5 mb-3">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_employee_path(restaurant),
        class: 'btn btn-primary quick-action-btn',
        data: { turbo_frame: 'staff_new_employee' } do %>
      <i class="bi bi-person-plus"></i>
      <span><%= t('.add_staff') %></span>
    <% end %>
  </div>
</div>

<%= turbo_frame_tag 'staff_new_employee' do %>
<% end %>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Staff Overview (Stats) -->
<div class="mb-3 p-3">
  <div class="count-panel-2025">
    <div class="count-panel-item-2025">
      <div class="count-panel-value-2025"><%= restaurant.employees.count %></div>
      <div class="count-panel-label-2025"><%= t('.total_staff') %></div>
    </div>
  </div>

</div>

<!-- Staff Management -->
<div class="mb-3 p-3">
  <h2 class="h5 mb-4">
    <i class="bi bi-person-badge"></i>
    <%= t('.staff') %>
  </h2>

  <% if employees.any? %>
    <!-- Desktop Table View (styled like Menu Sections list) -->
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurant_employees_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="table-responsive staff-table-view">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th class="w-40px">
                  <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
                </th>
                <th class="text-end text-nowrap" colspan="4">
                  <div class="d-flex justify-content-end flex-nowrap">
                    <div class="input-group input-group-sm flex-nowrap" style="min-width: 260px; width: auto;">
                      <%= f.select :status,
                          [
                            [t('.status_active'), 'active'],
                            [t('.status_inactive'), 'inactive'],
                            [t('.status_archived'), 'archived'],
                          ],
                          { include_blank: t('.set_status') },
                          { class: 'form-select form-select-sm', disabled: true, style: 'min-width: 0;', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
                      <button type="submit"
                              class="btn btn-primary"
                              title="<%= t('.apply') %>"
                              aria-label="<%= t('.apply') %>"
                              disabled
                              data-localization-bulk-target="submit">
                        <i class="bi bi-check2"></i>
                        <span class="visually-hidden"><%= t('.apply') %></span>
                      </button>
                    </div>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody data-controller="sortable"
                   data-sortable-url-value="<%= reorder_restaurant_employees_path(restaurant) %>"
                   data-sortable-handle-value=".employee-handle">
              <% employees.each do |employee| %>
                <tr data-sortable-id="<%= employee.id %>"
                    class="clickable-row row-status-<%= employee.status.to_s %>"
                    data-href="<%= edit_restaurant_employee_path(restaurant, employee) %>"
                    title="<%= t(".status_#{employee.status}") %>">
                  <td class="w-40px">
                    <input type="checkbox" name="employee_ids[]" value="<%= employee.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                  </td>
                  <td class="w-40px employee-handle drag-handle cursor-grab">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </td>
                  <td>
                    <div class="fw-semibold">
                      <%= employee.user&.email&.split('@')&.first || t('.unnamed') %>
                    </div>
                  </td>
                  <td class="text-end">
                    <% badge_class = case employee.role
                                     when 'manager' then 'text-bg-primary'
                                     when 'staff' then 'text-bg-info'
                                     when 'admin' then 'text-bg-danger'
                                     else 'text-bg-secondary'
                                     end %>
                    <span class="badge <%= badge_class %>">
                      <%= employee.role&.titleize || t('.no_role') %>
                    </span>
                  </td>
                  <td class="text-end">
                    <%= link_to edit_restaurant_employee_path(restaurant, employee),
                        class: 'd-inline-flex align-items-center justify-content-end text-decoration-none link-secondary',
                        title: t('.edit'),
                        aria: { label: t('.edit') },
                        data: { turbo_frame: 'staff_edit_employee', row_primary_link: true } do %>
                      <i class="bi bi-chevron-right"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Mobile Card View -->
        <div class="staff-cards-view"
             data-controller="sortable"
             data-sortable-url-value="<%= reorder_restaurant_employees_path(restaurant) %>"
             data-sortable-handle-value=".employee-handle"
             style="display: none;">
          <% employees.each do |employee| %>
            <div class="staff-card-mobile clickable-row row-status-<%= employee.status.to_s %>"
                 data-sortable-id="<%= employee.id %>"
                 data-href="<%= edit_restaurant_employee_path(restaurant, employee) %>"
                 title="<%= t(".status_#{employee.status}") %>">
              <div class="staff-row-mobile">
                <div class="staff-row-mobile-left">
                  <input type="checkbox"
                         name="employee_ids[]"
                         value="<%= employee.id %>"
                         data-localization-bulk-target="checkbox"
                         data-action="change->localization-bulk#sync" />

                  <span class="employee-handle drag-handle cursor-grab" aria-hidden="true">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </span>

                  <div class="staff-row-mobile-text">
                    <div class="fw-semibold">
                      <span class="staff-name"><%= employee.user&.email&.split('@')&.first || t('.unnamed') %></span>
                    </div>
                    <div class="text-muted small">
                      <%= employee.user&.email || '-' %>
                    </div>
                  </div>
                </div>

                <div class="d-flex align-items-center gap-2">
                  <% badge_class = case employee.role
                                   when 'manager' then 'text-bg-primary'
                                   when 'staff' then 'text-bg-info'
                                   when 'admin' then 'text-bg-danger'
                                   else 'text-bg-secondary'
                                   end %>
                  <span class="badge <%= badge_class %>">
                    <%= employee.role&.titleize || t('.no_role') %>
                  </span>

                  <%= link_to edit_restaurant_employee_path(restaurant, employee),
                      class: 'd-inline-flex align-items-center justify-content-end text-decoration-none link-secondary',
                      title: t('.edit'),
                      aria: { label: t('.edit') },
                      data: { turbo_frame: 'staff_edit_employee', row_primary_link: true } do %>
                    <i class="bi bi-chevron-right"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>

      <% end %>
    </div>
  <% else %>
    <%= render(EmptyStateComponent.new(
      title: t('.no_staff'),
      description: t('.no_staff_description'),
      icon: :staff,
      action_text: t('.add_first_staff'),
      action_url: new_restaurant_employee_path(restaurant),
    )) %>
  <% end %>
</div>

<%= turbo_frame_tag 'staff_edit_employee' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame || frame.id !== 'staff_edit_employee') return
    if (frame.innerHTML.trim() === '') return
    frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
  })
</script>

<!-- Roles & Permissions -->
<div class="mb-3 p-3">
  <h2 class="h5 mb-3">
    <i class="bi bi-shield-check"></i>
    <%= t('.roles_permissions') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.roles_description') %>
  </p>

  <div class="roles-grid">
    <div class="role-card">
      <div class="role-icon bg-danger">
        <i class="bi bi-star-fill"></i>
      </div>
      <h4 class="role-name"><%= t('.manager') %></h4>
      <p class="role-description">
        <%= t('.manager_desc') %>
      </p>
      <ul class="role-permissions">
        <li><i class="bi bi-check text-success"></i> <%= t('.edit_menus') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.manage_staff') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.view_analytics') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.manage_orders') %></li>
      </ul>
    </div>

    <div class="role-card">
      <div class="role-icon bg-primary">
        <i class="bi bi-pencil-fill"></i>
      </div>
      <h4 class="role-name"><%= t('.editor') %></h4>
      <p class="role-description">
        <%= t('.editor_desc') %>
      </p>
      <ul class="role-permissions">
        <li><i class="bi bi-check text-success"></i> <%= t('.edit_menus') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.edit_items') %></li>
        <li><i class="bi bi-x text-danger"></i> <%= t('.no_staff_access') %></li>
        <li><i class="bi bi-x text-danger"></i> <%= t('.no_analytics') %></li>
      </ul>
    </div>

    <div class="role-card">
      <div class="role-icon bg-info">
        <i class="bi bi-eye-fill"></i>
      </div>
      <h4 class="role-name"><%= t('.viewer') %></h4>
      <p class="role-description">
        <%= t('.viewer_desc') %>
      </p>
      <ul class="role-permissions">
        <li><i class="bi bi-check text-success"></i> <%= t('.view_menus') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.view_orders') %></li>
        <li><i class="bi bi-x text-danger"></i> <%= t('.no_editing') %></li>
        <li><i class="bi bi-x text-danger"></i> <%= t('.no_deletion') %></li>
      </ul>
    </div>
  </div>
</div>

<style>
  /* Avatar */
  .avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-primary-light);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--font-semibold);
  }

  /* Staff Views - Responsive */
  .staff-table-view {
    display: block;
  }

  .staff-cards-view {
    display: none;
  }

  /* Mobile: Show cards, hide table */
  @media (max-width: 768px) {
    .staff-table-view {
      display: block;
    }

    .staff-cards-view {
      display: none;
    }
  }

  /* Mobile Staff Card */
  .staff-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-3);
    margin-bottom: var(--space-2);
    transition: all var(--transition-base);
  }

  .staff-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }

  .staff-card-mobile:last-child {
    margin-bottom: 0;
  }

  /* Stats card styling (match Sizes panel) */
  .size-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }
  .size-stat { text-align: center; }
  .size-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-warning);
    margin-bottom: var(--space-2);
  }
  .size-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }

  /* Roles Grid */
  .roles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-4);
  }

  @media (max-width: 768px) {
    .roles-grid {
      grid-template-columns: 1fr;
    }
  }

  .role-card {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
  }

  .role-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.25rem;
    margin-bottom: var(--space-3);
  }

  .role-name {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }

  .role-description {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin-bottom: var(--space-3);
  }

  .role-permissions {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .role-permissions li {
    font-size: var(--text-sm);
    padding: var(--space-2) 0;
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }
</style>
