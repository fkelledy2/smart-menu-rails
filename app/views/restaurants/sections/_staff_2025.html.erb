<%#
  Restaurant Staff Section
  Employee management
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>
<% employees = restaurant.employees.includes(:user).where(archived: false)
  .order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_employee_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'staff_new_employee' } do %>
      <i class="bi bi-person-plus"></i>
      <span><%= t('.add_staff', default: 'Add Staff Member') %></span>
    <% end %>
  </div>
</div>

<%= turbo_frame_tag 'staff_new_employee' do %>
<% end %>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Staff Overview (Stats) -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-people"></i>
    <%= t('.staff_overview', default: 'Staff') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.staff_overview_desc', default: 'Manage your team to collaborate on your restaurant.') %>
  </p>

  <div class="size-stats-card">
    <div class="size-stat">
      <div class="size-stat-value">
        <%= restaurant.employees.count %>
      </div>
      <div class="size-stat-label">
        <%= t('.total_staff', default: 'Total Employees') %>
      </div>
    </div>
  </div>

  
</div>

<%= turbo_frame_tag 'staff_edit_employee' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame || frame.id !== 'staff_edit_employee') return
    if (frame.innerHTML.trim() === '') return
    frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
  })
</script>

<!-- Staff Management -->
<div class="content-card-2025">
  <h2 class="content-card-title mb-4">
    <i class="bi bi-people"></i>
    <%= t('.staff', default: 'Staff Members') %>
  </h2>

  <% if employees.any? %>
    <!-- Desktop Table View (styled like Menu Sections list) -->
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurant_employees_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
          <div class="d-flex align-items-center gap-2">
            <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
            <span class="text-muted small"><%= t('.select_all', default: 'Select all') %></span>
          </div>

          <div class="d-flex align-items-center gap-2 ms-auto">
            <%= f.select :status,
                [
                  [t('.status_active', default: 'Active'), 'active'],
                  [t('.status_inactive', default: 'Inactive'), 'inactive'],
                  [t('.status_archived', default: 'Archived'), 'archived'],
                ],
                { include_blank: t('.set_status', default: 'Set status...') },
                { class: 'form-select form-select-sm', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
            <%= f.submit t('.apply', default: 'Apply'), class: 'btn-2025 btn-2025-primary btn-2025-sm', disabled: true, data: { localization_bulk_target: 'submit' } %>
          </div>
        </div>

      <div class="table-responsive staff-table-view">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th class="w-40px"></th>
              <th class="w-40px"></th>
              <th><%= t('.name', default: 'Name') %></th>
              <th class="text-end"><%= t('.role', default: 'Role') %></th>
              <th class="text-end"><%= t('.status', default: 'Status') %></th>
              <th class="text-end">
                <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                  <i class="bi bi-gear"></i>
                </span>
              </th>
            </tr>
          </thead>
          <tbody data-controller="sortable"
                 data-sortable-url-value="<%= reorder_restaurant_employees_path(restaurant) %>"
                 data-sortable-handle-value=".employee-handle">
            <% employees.each do |employee| %>
              <tr data-sortable-id="<%= employee.id %>">
                <td class="w-40px">
                  <input type="checkbox" name="employee_ids[]" value="<%= employee.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                </td>
                <td class="w-40px employee-handle cursor-grab">
                  <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder', default: 'Drag to reorder') %>"></i>
                </td>
                <td>
                  <div class="fw-semibold">
                    <%= employee.user&.email&.split('@')&.first || t('.unnamed', default: 'Unnamed') %>
                  </div>
                </td>
                <td class="text-end">
                  <% badge_class = case employee.role
                                   when 'manager' then 'bg-primary'
                                   when 'staff' then 'bg-info'
                                   when 'admin' then 'bg-danger'
                                   else 'bg-secondary'
                                   end %>
                  <span class="badge <%= badge_class %>">
                    <%= employee.role&.titleize || t('.no_role', default: 'No role') %>
                  </span>
                </td>
                <td class="text-end">
                  <% status_badge_class = case employee.status
                                          when 'active' then 'bg-success'
                                          when 'inactive' then 'bg-secondary'
                                          when 'archived' then 'bg-dark'
                                          else 'bg-secondary'
                                          end %>
                  <span class="badge <%= status_badge_class %>">
                    <%= employee.status.to_s.titleize %>
                  </span>
                </td>
                <td class="text-end">
                  <%= link_to edit_restaurant_employee_path(restaurant, employee),
                      class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                      title: t('.edit', default: 'Edit'),
                      aria: { label: t('.edit', default: 'Edit') },
                      data: { turbo_frame: 'staff_edit_employee' } do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% end %>
    </div>

    <!-- Mobile Card View -->
    <div class="staff-cards-view">
      <% employees.each do |employee| %>
        <div class="staff-card-mobile">
          <div class="d-flex align-items-start justify-content-between mb-3">
            <div class="d-flex align-items-center gap-2">
              <div class="avatar-circle">
                <%= employee.user&.email&.first&.upcase || '?' %>
              </div>
              <div>
                <div class="fw-semibold">
                  <%= employee.user&.email&.split('@')&.first || t('.unnamed', default: 'Unnamed') %>
                </div>
                <div class="text-muted small">
                  <%= employee.user&.email || '-' %>
                </div>
              </div>
            </div>
            <div class="btn-group">
              <%= link_to edit_restaurant_employee_path(restaurant, employee),
                  class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                  data: { turbo_frame: 'staff_edit_employee' } do %>
                <i class="bi bi-pencil"></i>
              <% end %>
            </div>
          </div>

          <div class="d-flex gap-2 flex-wrap">
            <% badge_class = case employee.role
                             when 'manager' then 'bg-primary'
                             when 'staff' then 'bg-info'
                             when 'admin' then 'bg-danger'
                             else 'bg-secondary'
                             end %>
            <span class="badge <%= badge_class %>">
              <%= employee.role&.titleize || t('.no_role', default: 'No role') %>
            </span>

            <% if employee.active? %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> <%= t('.active', default: 'Active') %>
              </span>
            <% else %>
              <span class="badge bg-secondary">
                <i class="bi bi-dash-circle"></i> <%= t('.inactive', default: 'Inactive') %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-5">
      <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
      <h3 class="mt-3 text-muted">
        <%= t('.no_staff', default: 'No staff members yet') %>
      </h3>
      <p class="text-muted">
        <%= t('.no_staff_description', default: 'Add team members to collaborate on your restaurant') %>
      </p>
      <%= link_to new_restaurant_employee_path(restaurant),
          class: 'btn-2025 btn-2025-primary btn-2025-lg mt-3' do %>
        <i class="bi bi-person-plus"></i>
        <%= t('.add_first_staff', default: 'Add Your First Staff Member') %>
      <% end %>
    </div>
  <% end %>
</div>

<!-- Roles & Permissions -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-shield-check"></i>
    <%= t('.roles_permissions', default: 'Roles & Permissions') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.roles_description', default: 'Define what each role can access and manage') %>
  </p>

  <div class="roles-grid">
    <div class="role-card">
      <div class="role-icon bg-danger">
        <i class="bi bi-star-fill"></i>
      </div>
      <h4 class="role-name"><%= t('.manager', default: 'Manager') %></h4>
      <p class="role-description">
        <%= t('.manager_desc', default: 'Full access to all restaurant settings and data') %>
      </p>
      <ul class="role-permissions">
        <li><i class="bi bi-check text-success"></i> <%= t('.edit_menus', default: 'Edit menus') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.manage_staff', default: 'Manage staff') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.view_analytics', default: 'View analytics') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.manage_orders', default: 'Manage orders') %></li>
      </ul>
    </div>

    <div class="role-card">
      <div class="role-icon bg-primary">
        <i class="bi bi-pencil-fill"></i>
      </div>
      <h4 class="role-name"><%= t('.editor', default: 'Editor') %></h4>
      <p class="role-description">
        <%= t('.editor_desc', default: 'Can edit menus and manage content') %>
      </p>
      <ul class="role-permissions">
        <li><i class="bi bi-check text-success"></i> <%= t('.edit_menus', default: 'Edit menus') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.edit_items', default: 'Edit items') %></li>
        <li><i class="bi bi-x text-danger"></i> <%= t('.no_staff_access', default: 'No staff access') %></li>
        <li><i class="bi bi-x text-danger"></i> <%= t('.no_analytics', default: 'No analytics') %></li>
      </ul>
    </div>

    <div class="role-card">
      <div class="role-icon bg-info">
        <i class="bi bi-eye-fill"></i>
      </div>
      <h4 class="role-name"><%= t('.viewer', default: 'Viewer') %></h4>
      <p class="role-description">
        <%= t('.viewer_desc', default: 'Read-only access to menus and orders') %>
      </p>
      <ul class="role-permissions">
        <li><i class="bi bi-check text-success"></i> <%= t('.view_menus', default: 'View menus') %></li>
        <li><i class="bi bi-check text-success"></i> <%= t('.view_orders', default: 'View orders') %></li>
        <li><i class="bi bi-x text-danger"></i> <%= t('.no_editing', default: 'No editing') %></li>
        <li><i class="bi bi-x text-danger"></i> <%= t('.no_deletion', default: 'No deletion') %></li>
      </ul>
    </div>
  </div>
</div>

<style>
  /* Avatar */
  .avatar-circle {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-primary-light);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: var(--font-semibold);
  }

  /* Staff Views - Responsive */
  .staff-table-view {
    display: block;
  }

  .staff-cards-view {
    display: none;
  }

  /* Mobile: Show cards, hide table */
  @media (max-width: 768px) {
    .staff-table-view {
      display: none;
    }

    .staff-cards-view {
      display: block;
    }
  }

  /* Mobile Staff Card */
  .staff-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-3);
    transition: all var(--transition-base);
  }

  .staff-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }

  .staff-card-mobile:last-child {
    margin-bottom: 0;
  }

  /* Stats card styling (match Sizes panel) */
  .size-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }
  .size-stat { text-align: center; }
  .size-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-warning);
    margin-bottom: var(--space-2);
  }
  .size-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }

  /* Roles Grid */
  .roles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-4);
  }

  @media (max-width: 768px) {
    .roles-grid {
      grid-template-columns: 1fr;
    }
  }

  .role-card {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
  }

  .role-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.25rem;
    margin-bottom: var(--space-3);
  }

  .role-name {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }

  .role-description {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin-bottom: var(--space-3);
  }

  .role-permissions {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .role-permissions li {
    font-size: var(--text-sm);
    padding: var(--space-2) 0;
    display: flex;
    align-items: center;
    gap: var(--space-2);
  }
</style>
