<%#
  Restaurant Sizes Section
  Menu item size variants management
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>
<% sizes = restaurant.sizes.where(archived: false).where.not(status: :archived)
  .order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_size_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'sizes_new_size' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_size', default: 'Add Size') %></span>
    <% end %>
  </div>
</div>

<!-- Inline New Size Frame -->
<%= turbo_frame_tag 'sizes_new_size' do %>
  <!-- New Size form will render here inline -->
<% end %>

<%= turbo_frame_tag 'sizes_edit_size' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame || frame.id !== 'sizes_edit_size') return
    if (frame.innerHTML.trim() === '') return
    frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
  })
</script>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Sizes Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-rulers"></i>
    <%= t('.sizes', default: 'Menu Item Sizes') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.sizes_description', default: 'Define size variants for menu items like Small, Medium, Large, etc.') %>
  </p>

  <div class="size-stats-card">
    <div class="size-stat">
      <div class="size-stat-value">
        <%= restaurant.sizes.where(archived: false).where.not(status: :archived).count %>
      </div>
      <div class="size-stat-label">
        <%= t('.total_sizes', default: 'Total Sizes') %>
      </div>
    </div>
  </div>

  
</div>

<!-- Size List -->
<% if sizes.any? %>
  <div class="content-card-2025">
    <h2 class="content-card-title">
      <i class="bi bi-list-check"></i>
      <%= t('.current_sizes', default: 'Current Sizes') %>
    </h2>

    <!-- Desktop Table View (styled like Table Settings) -->
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurant_sizes_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
          <div class="d-flex align-items-center gap-2">
            <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
            <span class="text-muted small"><%= t('.select_all', default: 'Select all') %></span>
          </div>

          <div class="d-flex align-items-center gap-2 ms-auto">
            <%= f.select :status,
                [
                  [t('.status_active', default: 'Active'), 'active'],
                  [t('.status_inactive', default: 'Inactive'), 'inactive'],
                  [t('.status_archived', default: 'Archived'), 'archived'],
                ],
                { include_blank: t('.set_status', default: 'Set status...') },
                { class: 'form-select form-select-sm', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
            <%= f.submit t('.apply', default: 'Apply'), class: 'btn-2025 btn-2025-primary btn-2025-sm', disabled: true, data: { localization_bulk_target: 'submit' } %>
          </div>
        </div>

      <div class="table-responsive sizes-table-view">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th class="w-40px"></th>
              <th class="w-40px"></th>
              <th><%= t('.name', default: 'Name') %></th>
              <th class="text-end">
                <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                  <i class="bi bi-gear"></i>
                </span>
              </th>
            </tr>
          </thead>
          <tbody data-controller="sortable"
                 data-sortable-url-value="<%= reorder_restaurant_sizes_path(restaurant) %>"
                 data-sortable-handle-value=".size-handle">
            <% sizes.each do |size| %>
              <tr data-sortable-id="<%= size.id %>">
                <td class="w-40px">
                  <input type="checkbox" name="size_ids[]" value="<%= size.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                </td>
                <td class="w-40px size-handle cursor-grab">
                  <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder', default: 'Drag to reorder') %>"></i>
                </td>
                <td>
                  <strong><%= size.name %></strong>
                  <% if size.description.present? %>
                    <div class="text-sm text-muted"><%= size.description %></div>
                  <% end %>
                </td>
                <td class="text-end">
                  <%= link_to edit_restaurant_size_path(restaurant, size),
                      class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                      title: t('.edit', default: 'Edit'),
                      aria: { label: t('.edit', default: 'Edit') },
                      data: { turbo_frame: 'sizes_edit_size' } do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% end %>
    </div>
  </div>
<% end %>

<style>
  .size-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .size-stat {
    text-align: center;
  }

  .size-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-warning);
    margin-bottom: var(--space-2);
  }

  .size-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }

  .templates-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-3);
  }

  .template-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .template-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .template-header h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0;
  }

  .size-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .size-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .size-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .size-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    background: var(--color-warning);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .size-info {
    flex: 1;
  }

  .size-info h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .size-info p {
    margin: 0;
  }
</style>
