<%#
  Restaurant Sizes Section
  Menu item size variants management
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_size_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: '_top' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_size', default: 'Add Size') %></span>
    <% end %>

    <%= link_to restaurant_sizes_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: '_top' } do %>
      <i class="bi bi-pencil"></i>
      <span><%= t('.manage_sizes', default: 'Manage Sizes') %></span>
    <% end %>
  </div>
</div>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Sizes Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-rulers"></i>
    <%= t('.sizes', default: 'Menu Item Sizes') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.sizes_description', default: 'Define size variants for menu items like Small, Medium, Large, etc.') %>
  </p>

  <div class="size-stats-card">
    <div class="size-stat">
      <div class="size-stat-value">
        <%= restaurant.sizes.where(archived: false).where.not(status: :archived).count %>
      </div>
      <div class="size-stat-label">
        <%= t('.total_sizes', default: 'Total Sizes') %>
      </div>
    </div>
  </div>

  
</div>

<!-- Size List -->
<% if restaurant.sizes.where(archived: false).where.not(status: :archived).any? %>
  <div class="content-card-2025">
    <h2 class="content-card-title">
      <i class="bi bi-list-check"></i>
      <%= t('.current_sizes', default: 'Current Sizes') %>
    </h2>

    <div class="size-list">
      <% restaurant.sizes.where(archived: false).where.not(status: :archived).order(:sequence).each do |size| %>
        <div class="size-item">
          <div class="size-icon">
            <i class="bi bi-rulers"></i>
          </div>
          <div class="size-info">
            <h5><%= size.name %></h5>
            <% if size.description.present? %>
              <p class="text-muted small"><%= size.description %></p>
            <% end %>
          </div>
          <%= link_to edit_restaurant_size_path(restaurant, size),
              class: 'btn-2025 btn-2025-ghost btn-2025-sm',
              data: { turbo_frame: '_top' } do %>
            <i class="bi bi-pencil"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<style>
  .size-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .size-stat {
    text-align: center;
  }

  .size-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-warning);
    margin-bottom: var(--space-2);
  }

  .size-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }

  .templates-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-3);
  }

  .template-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .template-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .template-header h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0;
  }

  .size-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .size-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .size-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .size-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    background: var(--color-warning);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .size-info {
    flex: 1;
  }

  .size-info h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .size-info p {
    margin: 0;
  }
</style>
