<%#
  Restaurant Jukebox Section
  Music and Spotify integration
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Jukebox Overview -->
<div class="content-card-2025 py-4">
  <div class="mb-4">
    <h2 class="content-card-title mb-0">
      <i class="bi bi-music-note-beamed"></i>
      <%= t('.jukebox') %>
    </h2>
  </div>

  <p class="text-muted mb-4">
    <%= t('.jukebox_description') %>
  </p>

  <!-- Spotify Integration -->
  <div class="spotify-integration-panel mb-4 p-4 border rounded">
    <div class="d-flex align-items-center justify-content-between mb-4">
      <div class="d-flex align-items-center gap-3">
        <div class="spotify-icon">
          <i class="bi bi-spotify"></i>
        </div>
        <div>
          <h5 class="mb-1"><%= t('.spotify') %></h5>
          <p class="text-muted small mb-0">
            <% if restaurant.spotifyaccesstoken.present? %>
              <span class="text-success">
                <i class="bi bi-check-circle"></i> <%= t('.connected') %>
              </span>
            <% else %>
              <span class="text-muted">
                <i class="bi bi-x-circle"></i> <%= t('.not_connected') %>
              </span>
            <% end %>
          </p>
        </div>
      </div>
      <%= link_to "#{restaurant.spotifyAuthUrl}&return_to=#{CGI.escape(edit_restaurant_path(restaurant, section: 'jukebox'))}",
          class: 'btn-2025 btn-2025-outline btn-2025-sm',
          data: { turbo: false } do %>
        <i class="bi bi-spotify"></i> <%= t('.connect') %>
      <% end %>
    </div>

    <%= restaurant_form_with(restaurant, auto_save: true) do |form| %>
      <div class="row g-3">
        <!-- Spotify User ID -->
        <div class="col-md-6">
          <div class="form-group-2025">
            <%= form.label :spotifyuserid, class: 'form-label-2025' do %>
              <%= t('activerecord.attributes.restaurant.spotifyuserid') %>
            <% end %>
            <%= form.text_field :spotifyuserid,
                class: 'form-control-2025',
                readonly: true,
                disabled: true,
                placeholder: t('.not_connected') %>
          </div>
        </div>

        <!-- Spotify Access Token -->
        <div class="col-md-6">
          <div class="form-group-2025">
            <%= form.label :spotifyaccesstoken, class: 'form-label-2025' do %>
              <%= t('activerecord.attributes.restaurant.spotifyaccesstoken') %>
            <% end %>
            <%= form.text_field :spotifyaccesstoken,
                class: 'form-control-2025',
                readonly: true,
                disabled: true,
                placeholder: t('.not_connected') %>
          </div>
        </div>

        <!-- Spotify Refresh Token -->
        <div class="col-md-12">
          <div class="form-group-2025">
            <%= form.label :spotifyrefreshtoken, class: 'form-label-2025' do %>
              <%= t('activerecord.attributes.restaurant.spotifyrefreshtoken') %>
            <% end %>
            <%= form.text_field :spotifyrefreshtoken,
                class: 'form-control-2025',
                readonly: true,
                disabled: true,
                placeholder: t('.not_connected') %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if restaurant.tracks.any? %>
    <div class="tracks-list">
      <% restaurant.tracks.each do |track| %>
        <div class="track-item">
          <div class="track-info">
            <i class="bi bi-music-note text-primary"></i>
            <div>
              <h5 class="track-title"><%= track.name %></h5>
              <p class="track-artist text-muted">
                <%= track.artist || t('.unknown_artist') %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-4">
      <i class="bi bi-music-note-beamed text-muted" style="font-size: 3rem;"></i>
      <p class="text-muted mt-3">
        <%= t('.no_tracks') %>
      </p>
      <p class="text-muted">
        <%= t('.spotify_integration') %>
      </p>
    </div>
  <% end %>
</div>

<style>
  .tracks-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .track-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-md);
  }

  .track-info {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .track-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .track-artist {
    font-size: var(--text-sm);
    margin: 0;
  }

  /* Spotify Integration Panel */
  .spotify-integration-panel {
    background: var(--color-gray-50);
    border-color: var(--color-gray-200) !important;
  }

  .spotify-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    background: #1DB954;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
  }
</style>
