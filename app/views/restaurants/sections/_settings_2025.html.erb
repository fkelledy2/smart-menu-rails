<%# 
  Restaurant Settings Section
  Core configuration toggles and preferences
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- General Settings -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-toggles"></i>
    <%= t('.general_settings', default: 'General Settings') %>
  </h2>
  
  <%= restaurant_form_with(restaurant, auto_save: true) do |form| %>
    <div class="form-group-2025 mb-4">
      <%= form.label :status, class: 'form-label-2025' do %>
        <%= t('activerecord.attributes.restaurant.status', default: 'Restaurant Status') %>
      <% end %>
      <%= form.select :status,
          options_for_select([
            [t('.status_active', default: 'Active - Restaurant is open and visible'), 1],
            [t('.status_inactive', default: 'Inactive - Restaurant is temporarily closed'), 0],
            [t('.status_archived', default: 'Archived - Restaurant is permanently closed'), 2]
          ], restaurant.status_before_type_cast),
          {},
          class: 'form-control-2025',
          **select_data_attributes(:default) %>
      <div class="form-help-2025">
        <%= t('.status_help', default: 'Controls whether your restaurant is visible to customers') %>
      </div>
    </div>
  <% end %>
</div>

<!-- Localization Settings -->
<div class="content-card-2025">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="content-card-title mb-0">
      <i class="bi bi-globe"></i>
      <%= t('.localization', default: 'Localization & Languages') %>
    </h2>
    
    <%= link_to new_restaurant_restaurantlocale_path(restaurant), 
        class: 'btn-2025 btn-2025-primary btn-2025-md',
        data: { turbo_frame: '_top' } do %>
      <i class="bi bi-plus-circle"></i>
      <%= t('.add_language', default: 'Add Language') %>
    <% end %>
  </div>
  
  <p class="text-muted mb-4">
    <%= t('.localization_description', default: 'Manage translations for your menus in multiple languages') %>
  </p>
  
  <% if restaurant.restaurantlocales.any? %>
    <!-- Desktop Table View -->
    <div class="table-responsive languages-table-view">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th><%= t('.language', default: 'Language') %></th>
            <th><%= t('.locale_code', default: 'Code') %></th>
            <th><%= t('.status', default: 'Status') %></th>
            <th class="text-end"><%= t('.actions', default: 'Actions') %></th>
          </tr>
        </thead>
        <tbody>
          <% restaurant.restaurantlocales.each do |locale| %>
            <tr>
              <td>
                <div class="d-flex align-items-center gap-2">
                  <div class="language-avatar">
                    <i class="bi bi-translate"></i>
                  </div>
                  <div class="fw-semibold">
                    <%= locale.language %>
                  </div>
                </div>
              </td>
              <td class="text-muted">
                <code><%= locale.locale %></code>
              </td>
              <td>
                <% if locale.active? %>
                  <span class="badge bg-success">
                    <i class="bi bi-check-circle"></i> <%= t('.active', default: 'Active') %>
                  </span>
                <% elsif locale.inactive? %>
                  <span class="badge bg-secondary">
                    <i class="bi bi-dash-circle"></i> <%= t('.inactive', default: 'Inactive') %>
                  </span>
                <% end %>
              </td>
              <td class="text-end">
                <%= link_to edit_restaurant_restaurantlocale_path(restaurant, locale), 
                    class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                    data: { turbo_frame: '_top' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    
    <!-- Mobile Card View -->
    <div class="languages-cards-view">
      <% restaurant.restaurantlocales.each do |locale| %>
        <div class="language-card-mobile">
          <div class="d-flex align-items-start justify-content-between mb-3">
            <div class="d-flex align-items-center gap-2">
              <div class="language-avatar">
                <i class="bi bi-translate"></i>
              </div>
              <div>
                <div class="fw-semibold">
                  <%= locale.language %>
                </div>
                <div class="text-muted small">
                  <code><%= locale.locale %></code>
                </div>
              </div>
            </div>
            <%= link_to edit_restaurant_restaurantlocale_path(restaurant, locale), 
                class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                data: { turbo_frame: '_top' } do %>
              <i class="bi bi-pencil"></i>
            <% end %>
          </div>
          
          <div>
            <% if locale.active? %>
              <span class="badge bg-success">
                <i class="bi bi-check-circle"></i> <%= t('.active', default: 'Active') %>
              </span>
            <% elsif locale.inactive? %>
              <span class="badge bg-secondary">
                <i class="bi bi-dash-circle"></i> <%= t('.inactive', default: 'Inactive') %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-4">
      <i class="bi bi-globe text-muted" style="font-size: 3rem;"></i>
      <p class="text-muted mt-3">
        <%= t('.no_locales', default: 'No additional languages configured') %>
      </p>
    </div>
  <% end %>
</div>

<!-- Feature Toggles -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-sliders"></i>
    <%= t('.feature_toggles', default: 'Feature Toggles') %>
  </h2>
  
  <%= restaurant_form_with(restaurant, auto_save: true) do |form| %>
  <div class="features-list">
    <!-- Display Images -->
    <div class="feature-item">
      <div class="feature-icon bg-primary">
        <i class="bi bi-image"></i>
      </div>
      <div class="feature-info">
        <h5 class="feature-title"><%= t('.display_images', default: 'Display Images') %></h5>
        <p class="feature-description">
          <%= t('.display_images_help', default: 'Show menu item images in your digital menu') %>
        </p>
      </div>
      <div class="form-check form-switch">
        <input type="hidden" name="restaurant[displayImages]" value="false">
        <input class="form-check-input" 
               type="checkbox" 
               name="restaurant[displayImages]"
               id="restaurant_displayImages"
               value="true"
               <%= 'checked' if restaurant.displayImages %>
               data-skip-tomselect="true">
      </div>
    </div>
    
    <!-- Display Images in Popup -->
    <div class="feature-item">
      <div class="feature-icon bg-success">
        <i class="bi bi-window-stack"></i>
      </div>
      <div class="feature-info">
        <h5 class="feature-title"><%= t('.display_images_popup', default: 'Display Images in Popup') %></h5>
        <p class="feature-description">
          <%= t('.display_images_popup_help', default: 'Open menu item images in a popup modal when clicked') %>
        </p>
      </div>
      <div class="form-check form-switch">
        <input type="hidden" name="restaurant[displayImagesInPopup]" value="false">
        <input class="form-check-input" 
               type="checkbox" 
               name="restaurant[displayImagesInPopup]"
               id="restaurant_displayImagesInPopup"
               value="true"
               <%= 'checked' if restaurant.displayImagesInPopup %>
               data-skip-tomselect="true">
      </div>
    </div>
    
    <!-- Allow Ordering -->
    <div class="feature-item">
      <div class="feature-icon bg-warning">
        <i class="bi bi-cart-check"></i>
      </div>
      <div class="feature-info">
        <h5 class="feature-title"><%= t('.allow_ordering', default: 'Allow Ordering') %></h5>
        <p class="feature-description">
          <%= t('.allow_ordering_help', default: 'Enable online ordering for customers') %>
        </p>
      </div>
      <div class="form-check form-switch">
        <input type="hidden" name="restaurant[allowOrdering]" value="false">
        <input class="form-check-input" 
               type="checkbox" 
               name="restaurant[allowOrdering]"
               id="restaurant_allowOrdering"
               value="true"
               <%= 'checked' if restaurant.allowOrdering %>
               data-skip-tomselect="true">
      </div>
    </div>
    
    <!-- Inventory Tracking -->
    <div class="feature-item">
      <div class="feature-icon bg-danger">
        <i class="bi bi-boxes"></i>
      </div>
      <div class="feature-info">
        <h5 class="feature-title"><%= t('.inventory_tracking', default: 'Inventory Tracking') %></h5>
        <p class="feature-description">
          <%= t('.inventory_tracking_help', default: 'Track stock levels for menu items (Coming Soon)') %>
        </p>
      </div>
      <div class="form-check form-switch">
        <input class="form-check-input" 
               type="checkbox" 
               name="restaurant[inventoryTracking]"
               id="restaurant_inventoryTracking"
               value="true"
               <%= 'checked' if restaurant.inventoryTracking %>
               data-skip-tomselect="true"
               disabled>
      </div>
    </div>
  </div>
  <% end %>
</div>

<!-- Settings Info -->
<div class="content-card-2025 bg-light">
  <div class="d-flex align-items-start gap-3">
    <div class="text-primary" style="font-size: 1.5rem;">
      <i class="bi bi-info-circle"></i>
    </div>
    <div>
      <h4 class="mb-2"><%= t('.settings_info_title', default: 'About Settings') %></h4>
      <p class="text-sm text-muted mb-2">
        <%= t('.settings_info_desc', default: 'These settings control core functionality of your restaurant. Changes are saved automatically.') %>
      </p>
      <ul class="text-sm text-muted mb-0 ps-3">
        <li><strong><%= t('.status', default: 'Status') %>:</strong> <%= t('.status_info', default: 'Controls restaurant visibility') %></li>
        <li><strong><%= t('.display_images', default: 'Display Images') %>:</strong> <%= t('.images_info', default: 'Toggle menu item photos') %></li>
        <li><strong><%= t('.display_images_popup', default: 'Images in Popup') %>:</strong> <%= t('.popup_info', default: 'Full-screen image viewing') %></li>
      </ul>
    </div>
  </div>
</div>

<style>
  .features-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }
  
  .feature-icon {
    width: 36px;
    height: 36px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1rem;
    flex-shrink: 0;
  }
  
  .feature-info {
    flex: 1;
  }
  
  .feature-title {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }
  
  .feature-description {
    font-size: var(--text-xs);
    color: var(--color-gray-600);
    margin: 0;
    line-height: 1.4;
  }
  
  .bg-light {
    background: var(--color-gray-50) !important;
  }
  
  /* Language Avatar */
  .language-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--color-primary-light);
    color: var(--color-primary);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }
  
  /* Language Views - Responsive */
  .languages-table-view {
    display: block;
  }
  
  .languages-cards-view {
    display: none;
  }
  
  /* Mobile: Show cards, hide table */
  @media (max-width: 768px) {
    .languages-table-view {
      display: none;
    }
    
    .languages-cards-view {
      display: block;
    }
  }
  
  /* Mobile Language Card */
  .language-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-3);
    transition: all var(--transition-base);
  }
  
  .language-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }
  
  .language-card-mobile:last-child {
    margin-bottom: 0;
  }
</style>
