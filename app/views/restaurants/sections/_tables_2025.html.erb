<%#
  Restaurant Tables Section
  Table management and settings
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>
<% tables = restaurant.tablesettings.where(archived: false)
  .order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>

<!-- Quick Actions Card -->
<div class="card mb-3">
  <div class="card-body">
    <h2 class="h5 mb-3">
      <i class="bi bi-lightning-charge"></i>
      <%= t('.quick_actions') %>
    </h2>

    <div class="quick-actions-grid">
      <%= link_to new_restaurant_tablesetting_path(restaurant),
          class: 'btn btn-primary quick-action-btn',
          data: { turbo_frame: 'tables_new_tablesetting' } do %>
        <i class="bi bi-plus-circle"></i>
        <span><%= t('.add_table') %></span>
      <% end %>
    </div>
  </div>
</div>

<!-- Inline New Table Frame -->
<%= turbo_frame_tag 'tables_new_tablesetting' do %>
  <!-- New Table form will render here inline -->
<% end %>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Tables Overview -->
<div class="card mb-3">
  <div class="card-body">
  <h2 class="h5 mb-3">
    <i class="bi bi-rulers"></i>
    <%= t('.tables_overview') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.tables_description') %>
  </p>

  <div class="card bg-light border-0">
    <div class="card-body p-3">
      <div class="h3 mb-0"><%= restaurant.tablesettings.count %></div>
      <div class="text-muted"><%= t('.total_tables') %></div>
    </div>
  </div>

  </div>
</div>

<%= turbo_frame_tag 'tables_edit_tablesetting' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame || frame.id !== 'tables_edit_tablesetting') return
    if (frame.innerHTML.trim() === '') return
    frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
  })
</script>

<!-- Table Settings -->
<% if tables.any? %>
  <div class="card">
    <div class="card-body">
      <h2 class="h5 mb-4">
        <i class="bi bi-layout-wtf"></i>
        <%= t('.table_settings') %>
      </h2>

    <!-- Desktop Table View (styled like Menu Sections list) -->
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurant_tablesettings_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
          <div class="d-flex align-items-center gap-2">
            <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
            <span class="text-muted small"><%= t('.select_all') %></span>
          </div>

          <div class="d-flex align-items-center gap-2 ms-auto">
            <%= f.select :status,
                [
                  [t('.free'), 'free'],
                  [t('.occupied'), 'occupied'],
                  [t('.archived'), 'archived'],
                ],
                { include_blank: t('.set_status') },
                { class: 'form-select form-select-sm', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
            <%= f.submit t('.apply'), class: 'btn btn-primary btn-sm', disabled: true, data: { localization_bulk_target: 'submit' } %>
          </div>
        </div>

        <div class="table-responsive tables-table-view">
          <table class="table table-hover align-middle">
            <thead>
              <tr>
                <th class="w-40px"></th>
                <th class="w-40px"></th>
                <th><%= t('.table_name') %></th>
                <th class="text-end"><%= t('.capacity') %></th>
                <th class="text-end">
                  <span class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-gear"></i>
                  </span>
                </th>
              </tr>
            </thead>
            <tbody data-controller="sortable"
                   data-sortable-url-value="<%= reorder_restaurant_tablesettings_path(restaurant) %>"
                   data-sortable-handle-value=".table-handle">
              <% tables.each do |table| %>
                <% row_status = (table.status.to_s == 'free' ? 'active' : (table.status.to_s == 'occupied' ? 'inactive' : table.status.to_s)) %>
                <tr data-sortable-id="<%= table.id %>"
                    class="clickable-row row-status-<%= row_status %>"
                    data-href="<%= edit_restaurant_tablesetting_path(restaurant, table) %>"
                    title="<%= t(".#{table.status}") %>">
                  <td class="w-40px">
                    <input type="checkbox" name="tablesetting_ids[]" value="<%= table.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                  </td>
                  <td class="w-40px table-handle drag-handle cursor-grab">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </td>
                  <td>
                    <strong><%= table.name %></strong>
                  </td>
                  <td class="text-end">
                    <%= table.capacity.present? ? table.capacity : '-' %>
                  </td>
                  <td class="text-end">
                    <%= link_to edit_restaurant_tablesetting_path(restaurant, table),
                        class: 'btn btn-sm btn-outline-secondary',
                        title: t('.edit'),
                        aria: { label: t('.edit') },
                        data: { turbo_frame: 'tables_edit_tablesetting', row_primary_link: true } do %>
                      <i class="bi bi-chevron-right"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Mobile Card View (compact like localization list) -->
        <div class="tables-cards-view"
             data-controller="sortable"
             data-sortable-url-value="<%= reorder_restaurant_tablesettings_path(restaurant) %>"
             data-sortable-handle-value=".table-handle">
          <% tables.each do |table| %>
            <% row_status = (table.status.to_s == 'free' ? 'active' : (table.status.to_s == 'occupied' ? 'inactive' : table.status.to_s)) %>
            <div class="table-card-mobile clickable-row row-status-<%= row_status %>"
                 data-sortable-id="<%= table.id %>"
                 data-href="<%= edit_restaurant_tablesetting_path(restaurant, table) %>"
                 title="<%= t(".#{table.status}") %>">
              <div class="table-row-mobile">
                <div class="table-row-mobile-left">
                  <input type="checkbox"
                         name="tablesetting_ids[]"
                         value="<%= table.id %>"
                         data-localization-bulk-target="checkbox"
                         data-action="change->localization-bulk#sync" />

                  <span class="table-handle drag-handle cursor-grab" aria-hidden="true">
                    <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                  </span>

                  <div class="table-row-mobile-text">
                    <div class="fw-semibold">
                      <span class="table-name"><%= table.name %></span>
                    </div>
                    <div class="text-muted small">
                      <i class="bi bi-people"></i>
                      <%= table.capacity ? "#{table.capacity} #{t('.seats')}" : t('.no_capacity') %>
                    </div>
                  </div>
                </div>

                <%= link_to edit_restaurant_tablesetting_path(restaurant, table),
                    class: 'btn btn-sm btn-outline-secondary',
                    title: t('.edit'),
                    aria: { label: t('.edit') },
                    data: { turbo_frame: 'tables_edit_tablesetting', row_primary_link: true } do %>
                  <i class="bi bi-chevron-right"></i>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <% end %>
      </div>
    </div>
    </div>
  </div>
<% else %>
  <div class="card">
    <div class="card-body">
    <div class="text-center py-5">
      <i class="bi bi-layout-wtf text-muted" style="font-size: 3rem;"></i>
      <h3 class="mt-3 text-muted">
        <%= t('.no_tables') %>
      </h3>
      <p class="text-muted">
        <%= t('.no_tables_description') %>
      </p>
    </div>
    </div>
  </div>
<% end %>

<style>
  /* Table Views - Responsive */
  .tables-table-view {
    display: block;
  }

  .tables-cards-view {
    display: none;
  }

  /* Mobile: Show cards, hide table */
  @media (max-width: 768px) {
    .tables-table-view {
      display: none;
    }

    .tables-cards-view {
      display: block;
    }
  }

  /* Mobile Table Card */
  .table-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-3);
    margin-bottom: var(--space-2);
    transition: all var(--transition-base);
  }

  .table-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }

  .table-card-mobile:last-child {
    margin-bottom: 0;
  }

  .table-row-mobile {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2);
  }

  .table-row-mobile-left {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    min-width: 0;
    flex: 1;
  }

  .table-row-mobile-text {
    min-width: 0;
    flex: 1;
  }

  .table-row-mobile-text .table-name {
    display: inline-block;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  /* Table density tweaks (desktop) */
  .tables-table-view .table > :not(caption) > * > * {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  /* Reduce wasted width for checkbox / drag columns */
  .tables-table-view .w-40px {
    width: 32px;
  }

  /* Stats card styling (match Sizes panel) */
  .size-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }
  .size-stat { text-align: center; }
  .size-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }
  .size-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }
</style>
