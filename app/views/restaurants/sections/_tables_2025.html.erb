<%#
  Restaurant Tables Section
  Table management and settings
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_tablesetting_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'tables_new_tablesetting' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_table', default: 'Add Table') %></span>
    <% end %>
  </div>
</div>

<!-- Inline New Table Frame -->
<%= turbo_frame_tag 'tables_new_tablesetting' do %>
  <!-- New Table form will render here inline -->
<% end %>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Tables Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-rulers"></i>
    <%= t('.tables_overview', default: 'Tables') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.tables_description', default: 'Manage your restaurant tables to enable QR codes and ordering by table.') %>
  </p>

  <div class="size-stats-card">
    <div class="size-stat">
      <div class="size-stat-value">
        <%= restaurant.tablesettings.count %>
      </div>
      <div class="size-stat-label">
        <%= t('.total_tables', default: 'Total Tables') %>
      </div>
    </div>
  </div>

  
</div>

<!-- Table Settings -->
<% if restaurant.tablesettings.any? %>
  <div class="content-card-2025">
    <h2 class="content-card-title mb-4">
      <i class="bi bi-layout-wtf"></i>
      <%= t('.table_settings', default: 'Table Settings') %>
    </h2>

    <!-- Desktop Table View (styled like Menu Sections list) -->
    <div class="table-responsive tables-table-view">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th class="w-40px"></th>
            <th><%= t('.table_name', default: 'Name') %></th>
            <th class="text-end"><%= t('.capacity', default: 'Seats') %></th>
            <th class="text-end">
              <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                <i class="bi bi-gear"></i>
              </span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% restaurant.tablesettings.order(:name).each do |table| %>
            <tr>
              <td class="w-40px">
                <i class="bi bi-grip-vertical text-muted"></i>
              </td>
              <td>
                <strong><%= table.name %></strong>
              </td>
              <td class="text-end">
                <%= table.capacity.present? ? table.capacity : '-' %>
              </td>
              <td class="text-end">
                <%= link_to edit_restaurant_tablesetting_path(restaurant, table),
                    class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                    title: t('.edit', default: 'Edit'),
                    aria: { label: t('.edit', default: 'Edit') },
                    data: { turbo_frame: '_top' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Mobile Card View -->
    <div class="tables-cards-view">
      <% restaurant.tablesettings.order(:name).each do |table| %>
        <div class="table-card-mobile">
          <div class="d-flex align-items-start justify-content-between mb-3">
            <div class="d-flex align-items-center gap-3">
              <span class="badge bg-primary" style="font-size: 1.25rem; padding: 0.5rem 0.75rem;">
                <%= table.name %>
              </span>
              <div>
                <div class="fw-semibold"><%= table.name %></div>
                <div class="text-muted small">
                  <i class="bi bi-people"></i>
                  <%= table.capacity ? "#{table.capacity} #{t('.seats', default: 'seats')}" : t('.no_capacity', default: 'Capacity not set') %>
                </div>
              </div>
            </div>
            <div class="btn-group">
              <%= link_to edit_restaurant_tablesetting_path(restaurant, table),
                  class: 'btn-2025 btn-2025-ghost btn-2025-sm' do %>
                <i class="bi bi-pencil"></i>
              <% end %>
            </div>
          </div>

          <div class="d-flex gap-2 align-items-center flex-wrap"></div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="content-card-2025">
    <div class="text-center py-5">
      <i class="bi bi-layout-wtf text-muted" style="font-size: 3rem;"></i>
      <h3 class="mt-3 text-muted">
        <%= t('.no_tables', default: 'No tables configured yet') %>
      </h3>
      <p class="text-muted">
        <%= t('.no_tables_description', default: 'Set up your restaurant tables to enable table-specific QR codes and ordering.') %>
      </p>
    </div>
  </div>
<% end %>

<style>
  /* Table Views - Responsive */
  .tables-table-view {
    display: block;
  }

  .tables-cards-view {
    display: none;
  }

  /* Mobile: Show cards, hide table */
  @media (max-width: 768px) {
    .tables-table-view {
      display: none;
    }

    .tables-cards-view {
      display: block;
    }
  }

  /* Mobile Table Card */
  .table-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-3);
    transition: all var(--transition-base);
  }

  .table-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }

  .table-card-mobile:last-child {
    margin-bottom: 0;
  }

  /* Stats card styling (match Sizes panel) */
  .size-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }
  .size-stat { text-align: center; }
  .size-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }
  .size-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }
</style>
