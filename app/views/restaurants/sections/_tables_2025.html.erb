<%#
  Restaurant Tables Section
  Table management and settings
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>
<% tables = restaurant.tablesettings.where(archived: false)
  .order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_tablesetting_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'tables_new_tablesetting' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_table') %></span>
    <% end %>
  </div>
</div>

<!-- Inline New Table Frame -->
<%= turbo_frame_tag 'tables_new_tablesetting' do %>
  <!-- New Table form will render here inline -->
<% end %>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Tables Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-rulers"></i>
    <%= t('.tables_overview') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.tables_description') %>
  </p>

  <div class="size-stats-card">
    <div class="size-stat">
      <div class="size-stat-value">
        <%= restaurant.tablesettings.count %>
      </div>
      <div class="size-stat-label">
        <%= t('.total_tables') %>
      </div>
    </div>
  </div>

  
</div>

<%= turbo_frame_tag 'tables_edit_tablesetting' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame || frame.id !== 'tables_edit_tablesetting') return
    if (frame.innerHTML.trim() === '') return
    frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
  })
</script>

<!-- Table Settings -->
<% if tables.any? %>
  <div class="content-card-2025">
    <h2 class="content-card-title mb-4">
      <i class="bi bi-layout-wtf"></i>
      <%= t('.table_settings') %>
    </h2>

    <!-- Desktop Table View (styled like Menu Sections list) -->
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurant_tablesettings_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
          <div class="d-flex align-items-center gap-2">
            <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
            <span class="text-muted small"><%= t('.select_all') %></span>
          </div>

          <div class="d-flex align-items-center gap-2 ms-auto">
            <%= f.select :status,
                [
                  [t('.free'), 'free'],
                  [t('.occupied'), 'occupied'],
                  [t('.archived'), 'archived'],
                ],
                { include_blank: t('.set_status') },
                { class: 'form-select form-select-sm', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
            <%= f.submit t('.apply'), class: 'btn-2025 btn-2025-primary btn-2025-sm', disabled: true, data: { localization_bulk_target: 'submit' } %>
          </div>
        </div>

      <div class="table-responsive tables-table-view">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th class="w-40px"></th>
              <th class="w-40px"></th>
              <th><%= t('.table_name') %></th>
              <th class="text-end"><%= t('.capacity') %></th>
              <th class="text-end">
                <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                  <i class="bi bi-gear"></i>
                </span>
              </th>
            </tr>
          </thead>
          <tbody data-controller="sortable"
                 data-sortable-url-value="<%= reorder_restaurant_tablesettings_path(restaurant) %>"
                 data-sortable-handle-value=".table-handle">
            <% tables.each do |table| %>
              <% row_status = (table.status.to_s == 'free' ? 'active' : (table.status.to_s == 'occupied' ? 'inactive' : table.status.to_s)) %>
              <tr data-sortable-id="<%= table.id %>"
                  class="clickable-row row-status-<%= row_status %>"
                  data-href="<%= edit_restaurant_tablesetting_path(restaurant, table) %>"
                  title="<%= t(".#{table.status}") %>">
                <td class="w-40px">
                  <input type="checkbox" name="tablesetting_ids[]" value="<%= table.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                </td>
                <td class="w-40px table-handle cursor-grab">
                  <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                </td>
                <td>
                  <strong><%= table.name %></strong>
                </td>
                <td class="text-end">
                  <%= table.capacity.present? ? table.capacity : '-' %>
                </td>
                <td class="text-end">
                  <%= link_to edit_restaurant_tablesetting_path(restaurant, table),
                      class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                      title: t('.edit'),
                      aria: { label: t('.edit') },
                      data: { turbo_frame: 'tables_edit_tablesetting', row_primary_link: true } do %>
                    <i class="bi bi-chevron-right"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% end %>
    </div>

    <!-- Mobile Card View -->
    <div class="tables-cards-view">
      <% tables.each do |table| %>
        <% row_status = (table.status.to_s == 'free' ? 'active' : (table.status.to_s == 'occupied' ? 'inactive' : table.status.to_s)) %>
        <div class="table-card-mobile clickable-row row-status-<%= row_status %>"
             data-href="<%= edit_restaurant_tablesetting_path(restaurant, table) %>"
             title="<%= t(".#{table.status}") %>">
          <div class="d-flex align-items-start justify-content-between mb-3">
            <div class="d-flex align-items-center gap-3">
              <span class="badge bg-primary" style="font-size: 1.25rem; padding: 0.5rem 0.75rem;">
                <%= table.name %>
              </span>
              <div>
                <div class="fw-semibold"><%= table.name %></div>
                <div class="text-muted small">
                  <i class="bi bi-people"></i>
                  <%= table.capacity ? "#{table.capacity} #{t('.seats')}" : t('.no_capacity') %>
                </div>
              </div>
            </div>
            <div class="btn-group">
              <%= link_to edit_restaurant_tablesetting_path(restaurant, table),
                  class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                  data: { turbo_frame: 'tables_edit_tablesetting', row_primary_link: true } do %>
                <i class="bi bi-chevron-right"></i>
              <% end %>
            </div>
          </div>

          <div class="d-flex gap-2 align-items-center flex-wrap"></div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="content-card-2025">
    <div class="text-center py-5">
      <i class="bi bi-layout-wtf text-muted" style="font-size: 3rem;"></i>
      <h3 class="mt-3 text-muted">
        <%= t('.no_tables') %>
      </h3>
      <p class="text-muted">
        <%= t('.no_tables_description') %>
      </p>
    </div>
  </div>
<% end %>

<style>
  /* Table Views - Responsive */
  .tables-table-view {
    display: block;
  }

  .tables-cards-view {
    display: none;
  }

  /* Mobile: Show cards, hide table */
  @media (max-width: 768px) {
    .tables-table-view {
      display: none;
    }

    .tables-cards-view {
      display: block;
    }
  }

  /* Mobile Table Card */
  .table-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    margin-bottom: var(--space-3);
    transition: all var(--transition-base);
  }

  .table-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }

  .table-card-mobile:last-child {
    margin-bottom: 0;
  }

  /* Stats card styling (match Sizes panel) */
  .size-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }
  .size-stat { text-align: center; }
  .size-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }
  .size-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }
</style>
