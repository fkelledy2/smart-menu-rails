<%# 
  Restaurant Advanced Settings Section
  Music, analytics, and advanced features
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Music & Atmosphere -->
<div class="content-card-2025">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="content-card-title mb-0">
      <i class="bi bi-music-note-beamed"></i>
      <%= t('.music_atmosphere', default: 'Music & Atmosphere') %>
    </h2>
    
    <%= link_to restaurant_tracks_path(restaurant), 
        class: 'btn-2025 btn-2025-primary btn-2025-md' do %>
      <i class="bi bi-plus-circle"></i>
      <%= t('.add_track', default: 'Add Track') %>
    <% end %>
  </div>
  
  <p class="text-muted mb-4">
    <%= t('.music_description', default: 'Integrate with Spotify to play music in your restaurant') %>
  </p>
  
  <% if restaurant.tracks.any? %>
    <div class="tracks-list">
      <% restaurant.tracks.limit(5).each do |track| %>
        <div class="track-item">
          <div class="track-info">
            <i class="bi bi-music-note text-primary"></i>
            <div>
              <h5 class="track-title"><%= track.name %></h5>
              <p class="track-artist text-muted">
                <%= track.artist || t('.unknown_artist', default: 'Unknown Artist') %>
              </p>
            </div>
          </div>
          <div class="track-actions">
            <%= link_to edit_restaurant_track_path(restaurant, track), 
                class: 'btn-2025 btn-2025-ghost btn-2025-sm' do %>
              <i class="bi bi-pencil"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    
    <% if restaurant.tracks.count > 5 %>
      <%= link_to restaurant_tracks_path(restaurant), 
          class: 'btn-2025 btn-2025-secondary btn-2025-md mt-3' do %>
        <%= t('.view_all_tracks', default: 'View All Tracks') %> 
        (<%= restaurant.tracks.count %>)
      <% end %>
    <% end %>
  <% else %>
    <div class="text-center py-4">
      <i class="bi bi-music-note-beamed text-muted" style="font-size: 3rem;"></i>
      <p class="text-muted mt-3">
        <%= t('.no_tracks', default: 'No tracks configured') %>
      </p>
      <p class="text-muted">
        <%= t('.spotify_integration', default: 'Connect your Spotify account to manage your restaurant playlist') %>
      </p>
    </div>
  <% end %>
</div>

<!-- Analytics & Tracking -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-graph-up"></i>
    <%= t('.analytics', default: 'Analytics & Tracking') %>
  </h2>
  
  <p class="text-muted mb-4">
    <%= t('.analytics_description', default: 'Configure analytics and tracking for your restaurant') %>
  </p>
  
  <%= restaurant_form_with(restaurant, auto_save: true) do |form| %>
    <div class="row g-4">
      <div class="col-md-12">
        <div class="form-group-2025">
          <%= form.label :google_analytics_id, class: 'form-label-2025' do %>
            <%= t('.google_analytics', default: 'Google Analytics ID') %>
          <% end %>
          <%= form.text_field :google_analytics_id,
              class: 'form-control-2025',
              placeholder: 'G-XXXXXXXXXX' %>
          <div class="form-help-2025">
            <%= t('.google_analytics_help', default: 'Track customer behavior on your digital menu') %>
          </div>
        </div>
      </div>
      
      <div class="col-md-12">
        <div class="form-group-2025">
          <%= form.label :facebook_pixel_id, class: 'form-label-2025' do %>
            <%= t('.facebook_pixel', default: 'Facebook Pixel ID') %>
          <% end %>
          <%= form.text_field :facebook_pixel_id,
              class: 'form-control-2025',
              placeholder: '1234567890' %>
          <div class="form-help-2025">
            <%= t('.facebook_pixel_help', default: 'Track conversions and run Facebook ads') %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<!-- Advanced Features -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-sliders"></i>
    <%= t('.advanced_features', default: 'Advanced Features') %>
  </h2>
  
  <div class="features-list">
    <div class="feature-item">
      <div class="feature-icon bg-primary">
        <i class="bi bi-robot"></i>
      </div>
      <div class="feature-info">
        <h5 class="feature-title"><%= t('.ai_features', default: 'AI-Powered Features') %></h5>
        <p class="feature-description">
          <%= t('.ai_desc', default: 'Enable AI menu descriptions and image generation') %>
        </p>
      </div>
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="enable_ai">
      </div>
    </div>
    
    <div class="feature-item">
      <div class="feature-icon bg-success">
        <i class="bi bi-cash-coin"></i>
      </div>
      <div class="feature-info">
        <h5 class="feature-title"><%= t('.dynamic_pricing', default: 'Dynamic Pricing') %></h5>
        <p class="feature-description">
          <%= t('.dynamic_pricing_desc', default: 'Adjust prices based on time of day or demand') %>
        </p>
      </div>
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="enable_dynamic_pricing">
      </div>
    </div>
    
    <div class="feature-item">
      <div class="feature-icon bg-warning">
        <i class="bi bi-lightbulb"></i>
      </div>
      <div class="feature-info">
        <h5 class="feature-title"><%= t('.recommendations', default: 'Smart Recommendations') %></h5>
        <p class="feature-description">
          <%= t('.recommendations_desc', default: 'Show personalized menu recommendations to customers') %>
        </p>
      </div>
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="enable_recommendations">
      </div>
    </div>
    
    <div class="feature-item">
      <div class="feature-icon bg-danger">
        <i class="bi bi-shield-check"></i>
      </div>
      <div class="feature-info">
        <h5 class="feature-title"><%= t('.age_verification', default: 'Age Verification') %></h5>
        <p class="feature-description">
          <%= t('.age_verification_desc', default: 'Require age verification for alcohol items') %>
        </p>
      </div>
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="enable_age_verification">
      </div>
    </div>
  </div>
</div>

<!-- API & Integrations -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-plug"></i>
    <%= t('.api_integrations', default: 'API & Integrations') %>
  </h2>
  
  <p class="text-muted mb-4">
    <%= t('.api_description', default: 'Connect your restaurant to external services and platforms') %>
  </p>
  
  <div class="integrations-grid">
    <div class="integration-card">
      <i class="bi bi-music-note-beamed integration-icon"></i>
      <h5 class="integration-name">Spotify</h5>
      <p class="integration-status text-muted">
        <%= t('.not_connected', default: 'Not Connected') %>
      </p>
      <button class="btn-2025 btn-2025-outline btn-2025-sm w-100">
        <%= t('.connect', default: 'Connect') %>
      </button>
    </div>
    
    <div class="integration-card">
      <i class="bi bi-stripe integration-icon"></i>
      <h5 class="integration-name">Stripe</h5>
      <p class="integration-status text-muted">
        <%= t('.not_connected', default: 'Not Connected') %>
      </p>
      <button class="btn-2025 btn-2025-outline btn-2025-sm w-100">
        <%= t('.connect', default: 'Connect') %>
      </button>
    </div>
    
    <div class="integration-card">
      <i class="bi bi-mailbox integration-icon"></i>
      <h5 class="integration-name">Email Service</h5>
      <p class="integration-status text-muted">
        <%= t('.not_connected', default: 'Not Connected') %>
      </p>
      <button class="btn-2025 btn-2025-outline btn-2025-sm w-100">
        <%= t('.connect', default: 'Connect') %>
      </button>
    </div>
  </div>
</div>

<style>
  .tracks-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .track-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-md);
  }
  
  .track-info {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }
  
  .track-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }
  
  .track-artist {
    font-size: var(--text-sm);
    margin: 0;
  }
  
  .features-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
  
  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }
  
  .feature-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.25rem;
    flex-shrink: 0;
  }
  
  .feature-info {
    flex: 1;
  }
  
  .feature-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }
  
  .feature-description {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin: 0;
  }
  
  .integrations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-4);
  }
  
  .integration-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    text-align: center;
  }
  
  .integration-icon {
    font-size: 3rem;
    color: var(--color-gray-600);
    margin-bottom: var(--space-2);
  }
  
  .integration-name {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }
  
  .integration-status {
    font-size: var(--text-sm);
    margin-bottom: var(--space-3);
  }
</style>
