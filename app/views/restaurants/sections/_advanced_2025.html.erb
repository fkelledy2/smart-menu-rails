<%# 
  Restaurant Advanced Settings Section
  Music, analytics, and advanced features
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Advanced Features -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-sliders"></i>
    <%= t('.advanced_features', default: 'Advanced Features') %>
  </h2>
  
  <div class="features-grid">
    <div class="feature-card">
      <div class="feature-card-icon bg-primary">
        <i class="bi bi-robot"></i>
      </div>
      <div class="feature-card-content">
        <h5 class="feature-card-title"><%= t('.ai_features', default: 'AI-Powered Features') %></h5>
        <p class="feature-card-description">
          <%= t('.ai_desc', default: 'Enable AI menu descriptions and image generation') %>
        </p>
      </div>
      <div class="feature-card-toggle">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="enable_ai">
        </div>
      </div>
    </div>
    
    <div class="feature-card">
      <div class="feature-card-icon bg-success">
        <i class="bi bi-cash-coin"></i>
      </div>
      <div class="feature-card-content">
        <h5 class="feature-card-title"><%= t('.dynamic_pricing', default: 'Dynamic Pricing') %></h5>
        <p class="feature-card-description">
          <%= t('.dynamic_pricing_desc', default: 'Adjust prices based on time of day or demand') %>
        </p>
      </div>
      <div class="feature-card-toggle">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="enable_dynamic_pricing">
        </div>
      </div>
    </div>
    
    <div class="feature-card">
      <div class="feature-card-icon bg-warning">
        <i class="bi bi-lightbulb"></i>
      </div>
      <div class="feature-card-content">
        <h5 class="feature-card-title"><%= t('.recommendations', default: 'Smart Recommendations') %></h5>
        <p class="feature-card-description">
          <%= t('.recommendations_desc', default: 'Show personalized menu recommendations to customers') %>
        </p>
      </div>
      <div class="feature-card-toggle">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="enable_recommendations">
        </div>
      </div>
    </div>
    
    <div class="feature-card">
      <div class="feature-card-icon bg-danger">
        <i class="bi bi-shield-check"></i>
      </div>
      <div class="feature-card-content">
        <h5 class="feature-card-title"><%= t('.age_verification', default: 'Age Verification') %></h5>
        <p class="feature-card-description">
          <%= t('.age_verification_desc', default: 'Require age verification for alcohol items') %>
        </p>
      </div>
      <div class="feature-card-toggle">
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="enable_age_verification">
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Music & Atmosphere -->
<div class="content-card-2025">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="content-card-title mb-0">
      <i class="bi bi-music-note-beamed"></i>
      <%= t('.music_atmosphere', default: 'Music & Atmosphere') %>
    </h2>
    
    <%= link_to restaurant_tracks_path(restaurant), 
        class: 'btn-2025 btn-2025-primary btn-2025-md' do %>
      <i class="bi bi-plus-circle"></i>
      <%= t('.add_track', default: 'Add Track') %>
    <% end %>
  </div>
  
  <p class="text-muted mb-4">
    <%= t('.music_description', default: 'Integrate with Spotify to play music in your restaurant') %>
  </p>
  
  <!-- Spotify Integration -->
  <div class="spotify-integration-panel mb-4 p-4 border rounded">
    <div class="d-flex align-items-center justify-content-between mb-4">
      <div class="d-flex align-items-center gap-3">
        <div class="spotify-icon">
          <i class="bi bi-spotify"></i>
        </div>
        <div>
          <h5 class="mb-1"><%= t('.spotify', default: 'Spotify') %></h5>
          <p class="text-muted small mb-0">
            <% if restaurant.spotifyaccesstoken.present? %>
              <span class="text-success">
                <i class="bi bi-check-circle"></i> <%= t('.connected', default: 'Connected') %>
              </span>
            <% else %>
              <span class="text-muted">
                <i class="bi bi-x-circle"></i> <%= t('.not_connected', default: 'Not Connected') %>
              </span>
            <% end %>
          </p>
        </div>
      </div>
      <%= link_to restaurant.spotifyAuthUrl, 
          class: 'btn-2025 btn-2025-outline btn-2025-sm',
          data: { turbo: false } do %>
        <i class="bi bi-spotify"></i> <%= t('.connect', default: 'Connect') %>
      <% end %>
    </div>
    
    <%= restaurant_form_with(restaurant, auto_save: true) do |form| %>
      <div class="row g-3">
        <!-- Spotify User ID -->
        <div class="col-md-6">
          <div class="form-group-2025">
            <%= form.label :spotifyuserid, class: 'form-label-2025' do %>
              <%= t('activerecord.attributes.restaurant.spotifyuserid', default: 'Spotify User ID') %>
            <% end %>
            <%= form.text_field :spotifyuserid, 
                class: 'form-control-2025',
                readonly: true,
                disabled: true,
                placeholder: t('.not_connected', default: 'Not Connected') %>
          </div>
        </div>
        
        <!-- Spotify Access Token -->
        <div class="col-md-6">
          <div class="form-group-2025">
            <%= form.label :spotifyaccesstoken, class: 'form-label-2025' do %>
              <%= t('activerecord.attributes.restaurant.spotifyaccesstoken', default: 'Access Token') %>
            <% end %>
            <%= form.text_field :spotifyaccesstoken, 
                class: 'form-control-2025',
                readonly: true,
                disabled: true,
                placeholder: t('.not_connected', default: 'Not Connected') %>
          </div>
        </div>
        
        <!-- Spotify Refresh Token -->
        <div class="col-md-12">
          <div class="form-group-2025">
            <%= form.label :spotifyrefreshtoken, class: 'form-label-2025' do %>
              <%= t('activerecord.attributes.restaurant.spotifyrefreshtoken', default: 'Refresh Token') %>
            <% end %>
            <%= form.text_field :spotifyrefreshtoken, 
                class: 'form-control-2025',
                readonly: true,
                disabled: true,
                placeholder: t('.not_connected', default: 'Not Connected') %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if restaurant.tracks.any? %>
    <div class="tracks-list">
      <% restaurant.tracks.limit(5).each do |track| %>
        <div class="track-item">
          <div class="track-info">
            <i class="bi bi-music-note text-primary"></i>
            <div>
              <h5 class="track-title"><%= track.name %></h5>
              <p class="track-artist text-muted">
                <%= track.artist || t('.unknown_artist', default: 'Unknown Artist') %>
              </p>
            </div>
          </div>
          <div class="track-actions">
            <%= link_to edit_restaurant_track_path(restaurant, track), 
                class: 'btn-2025 btn-2025-ghost btn-2025-sm' do %>
              <i class="bi bi-pencil"></i>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
    
    <% if restaurant.tracks.count > 5 %>
      <%= link_to restaurant_tracks_path(restaurant), 
          class: 'btn-2025 btn-2025-secondary btn-2025-md mt-3' do %>
        <%= t('.view_all_tracks', default: 'View All Tracks') %> 
        (<%= restaurant.tracks.count %>)
      <% end %>
    <% end %>
  <% else %>
    <div class="text-center py-4">
      <i class="bi bi-music-note-beamed text-muted" style="font-size: 3rem;"></i>
      <p class="text-muted mt-3">
        <%= t('.no_tracks', default: 'No tracks configured') %>
      </p>
      <p class="text-muted">
        <%= t('.spotify_integration', default: 'Connect your Spotify account to manage your restaurant playlist') %>
      </p>
    </div>
  <% end %>
</div>

<style>
  .tracks-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .track-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-md);
  }
  
  .track-info {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }
  
  .track-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }
  
  .track-artist {
    font-size: var(--text-sm);
    margin: 0;
  }
  
  /* Spotify Integration Panel */
  .spotify-integration-panel {
    background: var(--color-gray-50);
    border-color: var(--color-gray-200) !important;
  }
  
  .spotify-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    background: #1DB954;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    flex-shrink: 0;
  }
  
  /* Feature Grid Layout */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-4);
  }
  
  .feature-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-4);
    background: white;
    border: 2px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }
  
  .feature-card:hover {
    border-color: var(--color-gray-300);
    box-shadow: var(--shadow-sm);
  }
  
  .feature-card-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    flex-shrink: 0;
  }
  
  .feature-card-content {
    flex: 1;
  }
  
  .feature-card-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-2) 0;
    color: var(--color-gray-900);
  }
  
  .feature-card-description {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin: 0;
    line-height: 1.5;
  }
  
  .feature-card-toggle {
    padding-top: var(--space-2);
    border-top: 1px solid var(--color-gray-100);
  }
  
  .feature-card-toggle .form-switch {
    display: flex;
    justify-content: flex-end;
  }
  
  /* Mobile responsive */
  @media (max-width: 768px) {
    .features-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .integrations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: var(--space-4);
  }
  
  .integration-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    text-align: center;
  }
  
  .integration-icon {
    font-size: 3rem;
    color: var(--color-gray-600);
    margin-bottom: var(--space-2);
  }
  
  .integration-name {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }
  
  .integration-status {
    font-size: var(--text-sm);
    margin-bottom: var(--space-3);
  }
</style>
