<%#
  Restaurant Allergens Section
  Allergen management for menu items
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_allergyn_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: '_top' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_allergen', default: 'Add Allergen') %></span>
    <% end %>
  </div>
</div>

<!-- Allergens Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-exclamation-triangle"></i>
    <%= t('.allergens', default: 'Allergens') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.allergens_description', default: 'Manage allergen information for your menu items to help customers make informed choices.') %>
  </p>

  <div class="allergen-stats-card">
    <div class="allergen-stat">
      <div class="allergen-stat-value">
        <%= restaurant.allergyns.where(archived: false).count %>
      </div>
      <div class="allergen-stat-label">
        <%= t('.total_allergens', default: 'Total Allergens') %>
      </div>
    </div>
  </div>

  <%= link_to restaurant_allergyns_path(restaurant),
      class: 'btn-2025 btn-2025-primary btn-2025-md mt-4',
      data: { turbo_frame: '_top' } do %>
    <i class="bi bi-pencil"></i> <%= t('.manage_allergens', default: 'Manage Allergens') %>
  <% end %>
</div>

<!-- Common Allergen Templates -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.common_templates', default: 'Common Templates') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.templates_description', default: 'Quickly add standard allergen sets') %>
  </p>

  <div class="templates-list">
    <div class="template-card">
      <div class="template-header">
        <h5><%= t('.fda_top_8', default: 'FDA Top 8 Allergens') %></h5>
        <span class="badge bg-primary"><%= t('.recommended', default: 'Recommended') %></span>
      </div>
      <p class="text-sm text-muted mb-3">
        <%= t('.fda_top_8_desc', default: 'Milk, Eggs, Fish, Shellfish, Tree Nuts, Peanuts, Wheat, Soybeans') %>
      </p>
      <button class="btn-2025 btn-2025-outline btn-2025-sm">
        <i class="bi bi-download"></i> <%= t('.load_template', default: 'Load Template') %>
      </button>
    </div>

    <div class="template-card">
      <div class="template-header">
        <h5><%= t('.eu_allergens', default: 'EU 14 Allergens') %></h5>
      </div>
      <p class="text-sm text-muted mb-3">
        <%= t('.eu_allergens_desc', default: 'All 14 major allergens as per EU regulation') %>
      </p>
      <button class="btn-2025 btn-2025-outline btn-2025-sm">
        <i class="bi bi-download"></i> <%= t('.load_template', default: 'Load Template') %>
      </button>
    </div>

    <div class="template-card">
      <div class="template-header">
        <h5><%= t('.common_dietary', default: 'Common Dietary Restrictions') %></h5>
      </div>
      <p class="text-sm text-muted mb-3">
        <%= t('.common_dietary_desc', default: 'Gluten-Free, Vegan, Vegetarian, Halal, Kosher') %>
      </p>
      <button class="btn-2025 btn-2025-outline btn-2025-sm">
        <i class="bi bi-download"></i> <%= t('.load_template', default: 'Load Template') %>
      </button>
    </div>
  </div>
</div>

<!-- Allergen List -->
<% if restaurant.allergyns.where(archived: false).any? %>
  <div class="content-card-2025">
    <h2 class="content-card-title">
      <i class="bi bi-list-check"></i>
      <%= t('.current_allergens', default: 'Current Allergens') %>
    </h2>

    <div class="allergen-list">
      <% restaurant.allergyns.where(archived: false).order(:sequence).each do |allergen| %>
        <div class="allergen-item">
          <div class="allergen-icon">
            <i class="bi bi-exclamation-triangle"></i>
          </div>
          <div class="allergen-info">
            <h5>
              <%= allergen.name %>
              <% if allergen.status == 'inactive' %>
                <span class="badge bg-secondary ms-2"><%= t('.inactive', default: 'Inactive') %></span>
              <% end %>
            </h5>
            <% if allergen.description.present? %>
              <p class="text-muted small"><%= allergen.description %></p>
            <% end %>
          </div>
          <%= link_to edit_restaurant_allergyn_path(restaurant, allergen),
              class: 'btn-2025 btn-2025-ghost btn-2025-sm',
              data: { turbo_frame: '_top' } do %>
            <i class="bi bi-pencil"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

<style>
  .allergen-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .allergen-stat {
    text-align: center;
  }

  .allergen-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }

  .allergen-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }

  .templates-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-3);
  }

  .template-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .template-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .template-header h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0;
  }

  .allergen-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .allergen-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .allergen-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .allergen-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    background: var(--color-danger);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .allergen-info {
    flex: 1;
  }

  .allergen-info h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .allergen-info p {
    margin: 0;
  }
</style>
