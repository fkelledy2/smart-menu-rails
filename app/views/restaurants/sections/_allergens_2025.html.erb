<%#
  Restaurant Allergens Section
  Allergen management for menu items
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>
<% allergens = restaurant.allergyns.where(archived: false).order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>

<!-- Quick Actions Card -->
<div class="mb-3 p-3">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_allergyn_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'allergens_new_allergyn' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_allergen') %></span>
    <% end %>

    <%= link_to restaurant_allergyns_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: '_top' } do %>
      <i class="bi bi-pencil"></i>
      <span><%= t('.manage_allergens') %></span>
    <% end %>
  </div>
</div>

<!-- Inline New Allergen Frame -->
<%= turbo_frame_tag 'allergens_new_allergyn' do %>
  <!-- New Allergen form will render here inline -->
<% end %>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Allergens Overview -->
<div class="mb-3 p-3">
  <div class="allergen-stats-card">
    <div class="allergen-stat">
      <div class="allergen-stat-value">
        <%= restaurant.allergyns.where(archived: false).count %>
      </div>
      <div class="allergen-stat-label">
        <%= t('.total_allergens') %>
      </div>
    </div>
  </div>

  
</div>

<!-- Allergen List -->
<% if allergens.any? %>
  <div class="mt-3 p-3">
    <h2 class="h5 mb-3">
        <i class="bi bi-exclamation-triangle"></i>
        <%= t('.current_allergens') %>
      </h2>

    <!-- Desktop Table View (styled like Table Settings) -->
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurant_allergyns_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
      <div class="table-responsive allergens-table-view">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th class="w-40px">
                <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
              </th>
              <th class="w-40px"></th>
              <th><%= t('.name') %></th>
              <th class="text-end">
                <div class="d-flex justify-content-end">
                  <div class="input-group input-group-sm" style="width: auto;">
                    <%= f.select :status,
                        [
                          [t('.status_active'), 'active'],
                          [t('.status_inactive'), 'inactive'],
                          [t('.status_archived'), 'archived'],
                        ],
                        { include_blank: t('.set_status') },
                        { class: 'form-select form-select-sm w-auto', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
                    <button type="submit"
                            class="btn btn-primary"
                            title="<%= t('.apply') %>"
                            aria-label="<%= t('.apply') %>"
                            disabled
                            data-localization-bulk-target="submit">
                      <i class="bi bi-check2"></i>
                      <span class="visually-hidden"><%= t('.apply') %></span>
                    </button>
                  </div>
                </div>
              </th>
            </tr>
          </thead>
          <tbody data-controller="sortable"
                 data-sortable-url-value="<%= reorder_restaurant_allergyns_path(restaurant) %>"
                 data-sortable-handle-value=".allergen-handle">
            <% allergens.each do |allergen| %>
              <tr data-sortable-id="<%= allergen.id %>"
                  class="clickable-row row-status-<%= allergen.status.to_s %>"
                  data-href="<%= edit_restaurant_allergyn_path(restaurant, allergen) %>"
                  title="<%= t(".status_#{allergen.status}") %>">
                <td class="w-40px">
                  <input type="checkbox" name="allergyn_ids[]" value="<%= allergen.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                </td>
                <td class="w-40px allergen-handle drag-handle cursor-grab">
                  <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                </td>
                <td>
                  <div class="d-flex justify-content-between align-items-start gap-2">
                    <strong><%= allergen.name %></strong>
                  </div>
                  <% if allergen.description.present? %>
                    <div class="text-sm text-muted"><%= allergen.description %></div>
                  <% end %>
                </td>
                <td class="text-end">
                  <%= link_to edit_restaurant_allergyn_path(restaurant, allergen),
                      class: 'btn btn-sm btn-outline-secondary',
                      title: t('.edit'),
                      aria: { label: t('.edit') },
                      data: { turbo_frame: 'allergens_edit_allergyn', row_primary_link: true } do %>
                    <i class="bi bi-chevron-right"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="allergens-cards-view"
           data-controller="sortable"
           data-sortable-url-value="<%= reorder_restaurant_allergyns_path(restaurant) %>"
           data-sortable-handle-value=".allergen-handle">
        <% allergens.each do |allergen| %>
          <div class="allergen-card-mobile clickable-row row-status-<%= allergen.status.to_s %>"
               data-sortable-id="<%= allergen.id %>"
               data-href="<%= edit_restaurant_allergyn_path(restaurant, allergen) %>"
               title="<%= t(".status_#{allergen.status}") %>">
            <div class="allergen-row-mobile">
              <div class="allergen-row-mobile-left">
                <input type="checkbox"
                       name="allergyn_ids[]"
                       value="<%= allergen.id %>"
                       data-localization-bulk-target="checkbox"
                       data-action="change->localization-bulk#sync" />

                <span class="allergen-handle drag-handle cursor-grab" aria-hidden="true">
                  <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                </span>

                <div class="allergen-row-mobile-text">
                  <div class="fw-semibold">
                    <span class="allergen-name"><%= allergen.name %></span>
                  </div>
                  <% if allergen.description.present? %>
                    <div class="text-muted small"><%= allergen.description %></div>
                  <% end %>
                </div>
              </div>

              <%= link_to edit_restaurant_allergyn_path(restaurant, allergen),
                  class: 'btn btn-sm btn-outline-secondary',
                  title: t('.edit'),
                  aria: { label: t('.edit') },
                  data: { turbo_frame: 'allergens_edit_allergyn', row_primary_link: true } do %>
                <i class="bi bi-chevron-right"></i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <% end %>
    </div>
  </div>
<% end %>

<%= turbo_frame_tag 'allergens_edit_allergyn' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame || frame.id !== 'allergens_edit_allergyn') return
    if (frame.innerHTML.trim() === '') return
    frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
  })
</script>

<style>
  .allergen-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .allergen-stat {
    text-align: center;
  }

  .allergen-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }

  .allergen-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }

  .templates-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-3);
  }

  .template-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .template-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .template-header h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0;
  }

  .allergen-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .allergen-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .allergen-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .allergen-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    background: var(--color-danger);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .allergen-info {
    flex: 1;
  }

  .allergen-info h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .allergen-info p {
    margin: 0;
  }

  .allergens-table-view {
    display: block;
  }

  .allergens-cards-view {
    display: none;
  }

  @media (max-width: 768px) {
    .allergens-table-view {
      display: none;
    }

    .allergens-cards-view {
      display: block;
    }
  }

  .allergen-card-mobile {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-3);
    margin-bottom: var(--space-2);
    transition: all var(--transition-base);
  }

  .allergen-card-mobile:hover {
    box-shadow: var(--shadow-sm);
    border-color: var(--color-gray-300);
  }

  .allergen-card-mobile:last-child {
    margin-bottom: 0;
  }

  .allergen-row-mobile {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2);
  }

  .allergen-row-mobile-left {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    min-width: 0;
    flex: 1;
  }

  .allergen-row-mobile-text {
    min-width: 0;
    flex: 1;
  }

  .allergen-row-mobile-text .allergen-name {
    display: inline-block;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .allergens-table-view .table > :not(caption) > * > * {
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }

  .allergens-table-view .w-40px {
    width: 32px;
  }
</style>
