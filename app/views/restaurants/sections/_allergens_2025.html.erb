<%#
  Restaurant Allergens Section
  Allergen management for menu items
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>
<% allergens = restaurant.allergyns.where(archived: false).order(Arel.sql('CASE WHEN sequence IS NULL THEN 1 ELSE 0 END, sequence ASC')) %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_allergyn_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'allergens_new_allergyn' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_allergen') %></span>
    <% end %>

    <%= link_to restaurant_allergyns_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: '_top' } do %>
      <i class="bi bi-pencil"></i>
      <span><%= t('.manage_allergens') %></span>
    <% end %>
  </div>
</div>

<!-- Inline New Allergen Frame -->
<%= turbo_frame_tag 'allergens_new_allergyn' do %>
  <!-- New Allergen form will render here inline -->
<% end %>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Allergens Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-exclamation-triangle"></i>
    <%= t('.allergens') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.allergens_description') %>
  </p>

  <div class="allergen-stats-card">
    <div class="allergen-stat">
      <div class="allergen-stat-value">
        <%= restaurant.allergyns.where(archived: false).count %>
      </div>
      <div class="allergen-stat-label">
        <%= t('.total_allergens') %>
      </div>
    </div>
  </div>

  
</div>

<%= turbo_frame_tag 'allergens_edit_allergyn' do %>
<% end %>

<script>
  document.addEventListener('turbo:frame-load', function (event) {
    const frame = event.target
    if (!frame || frame.id !== 'allergens_edit_allergyn') return
    if (frame.innerHTML.trim() === '') return
    frame.scrollIntoView({ behavior: 'smooth', block: 'start' })
  })
</script>


<!-- Allergen List -->
<% if allergens.any? %>
  <div class="content-card-2025">
    <h2 class="content-card-title">
      <i class="bi bi-list-check"></i>
      <%= t('.current_allergens') %>
    </h2>

    <!-- Desktop Table View (styled like Table Settings) -->
    <div data-controller="localization-bulk">
      <%= form_with url: bulk_update_restaurant_allergyns_path(restaurant), method: :patch, data: { turbo: true, action: 'submit->localization-bulk#beforeSubmit' } do |f| %>
        <div class="d-flex flex-wrap align-items-center gap-2 mb-3">
          <div class="d-flex align-items-center gap-2">
            <input type="checkbox" data-localization-bulk-target="selectAll" data-action="change->localization-bulk#toggleAll" />
            <span class="text-muted small"><%= t('.select_all') %></span>
          </div>

          <div class="d-flex align-items-center gap-2 ms-auto">
            <%= f.select :status,
                [
                  [t('.status_active'), 'active'],
                  [t('.status_inactive'), 'inactive'],
                  [t('.status_archived'), 'archived'],
                ],
                { include_blank: t('.set_status') },
                { class: 'form-select form-select-sm', data: { localization_bulk_target: 'statusSelect', action: 'change->localization-bulk#sync' } } %>
            <%= f.submit t('.apply'), class: 'btn-2025 btn-2025-primary btn-2025-sm', disabled: true, data: { localization_bulk_target: 'submit' } %>
          </div>
        </div>

      <div class="table-responsive allergens-table-view">
        <table class="table table-hover align-middle">
          <thead>
            <tr>
              <th class="w-40px"></th>
              <th class="w-40px"></th>
              <th><%= t('.name') %></th>
              <th class="text-end">
                <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                  <i class="bi bi-gear"></i>
                </span>
              </th>
            </tr>
          </thead>
          <tbody data-controller="sortable"
                 data-sortable-url-value="<%= reorder_restaurant_allergyns_path(restaurant) %>"
                 data-sortable-handle-value=".allergen-handle">
            <% allergens.each do |allergen| %>
              <tr data-sortable-id="<%= allergen.id %>">
                <td class="w-40px">
                  <input type="checkbox" name="allergyn_ids[]" value="<%= allergen.id %>" data-localization-bulk-target="checkbox" data-action="change->localization-bulk#sync" />
                </td>
                <td class="w-40px allergen-handle cursor-grab">
                  <i class="bi bi-grip-vertical text-muted" title="<%= t('.drag_to_reorder') %>"></i>
                </td>
                <td>
                  <div class="d-flex justify-content-between align-items-start gap-2">
                    <strong><%= allergen.name %></strong>
                    <span>
                      <% if allergen.status == 'active' %>
                        <span class="badge bg-success"><%= t('.active') %></span>
                      <% elsif allergen.status == 'inactive' %>
                        <span class="badge bg-secondary"><%= t('.inactive') %></span>
                      <% elsif allergen.status == 'archived' %>
                        <span class="badge bg-dark"><%= t('.archived') %></span>
                      <% end %>
                    </span>
                  </div>
                  <% if allergen.description.present? %>
                    <div class="text-sm text-muted"><%= allergen.description %></div>
                  <% end %>
                </td>
                <td class="text-end">
                  <%= link_to edit_restaurant_allergyn_path(restaurant, allergen),
                      class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                      title: t('.edit'),
                      aria: { label: t('.edit') },
                      data: { turbo_frame: 'allergens_edit_allergyn' } do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% end %>
    </div>
  </div>
<% end %>

<style>
  .allergen-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .allergen-stat {
    text-align: center;
  }

  .allergen-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }

  .allergen-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }

  .templates-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-3);
  }

  .template-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .template-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .template-header h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0;
  }

  .allergen-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .allergen-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .allergen-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .allergen-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    background: var(--color-danger);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .allergen-info {
    flex: 1;
  }

  .allergen-info h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .allergen-info p {
    margin: 0;
  }
</style>
