<%#
  Restaurant Allergens Section
  Allergen management for menu items
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to new_restaurant_allergyn_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: 'allergens_new_allergyn' } do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_allergen', default: 'Add Allergen') %></span>
    <% end %>

    <%= link_to restaurant_allergyns_path(restaurant),
        class: 'quick-action-btn',
        data: { turbo_frame: '_top' } do %>
      <i class="bi bi-pencil"></i>
      <span><%= t('.manage_allergens', default: 'Manage Allergens') %></span>
    <% end %>
  </div>
</div>

<!-- Inline New Allergen Frame -->
<%= turbo_frame_tag 'allergens_new_allergyn' do %>
  <!-- New Allergen form will render here inline -->
<% end %>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- Allergens Overview -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-exclamation-triangle"></i>
    <%= t('.allergens', default: 'Allergens') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.allergens_description', default: 'Manage allergen information for your menu items to help customers make informed choices.') %>
  </p>

  <div class="allergen-stats-card">
    <div class="allergen-stat">
      <div class="allergen-stat-value">
        <%= restaurant.allergyns.where(archived: false).count %>
      </div>
      <div class="allergen-stat-label">
        <%= t('.total_allergens', default: 'Total Allergens') %>
      </div>
    </div>
  </div>

  
</div>


<!-- Allergen List -->
<% if restaurant.allergyns.where(archived: false).any? %>
  <div class="content-card-2025">
    <h2 class="content-card-title">
      <i class="bi bi-list-check"></i>
      <%= t('.current_allergens', default: 'Current Allergens') %>
    </h2>

    <!-- Desktop Table View (styled like Table Settings) -->
    <div class="table-responsive allergens-table-view">
      <table class="table table-hover align-middle">
        <thead>
          <tr>
            <th class="w-40px"></th>
            <th><%= t('.name', default: 'Name') %></th>
            <th class="text-end">
              <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                <i class="bi bi-gear"></i>
              </span>
            </th>
          </tr>
        </thead>
        <tbody>
          <% restaurant.allergyns.where(archived: false).order(:sequence).each do |allergen| %>
            <tr>
              <td class="w-40px">
                <i class="bi bi-grip-vertical text-muted"></i>
              </td>
              <td>
                <strong>
                  <%= allergen.name %>
                  <% if allergen.status == 'inactive' %>
                    <span class="badge bg-secondary ms-2"><%= t('.inactive', default: 'Inactive') %></span>
                  <% end %>
                </strong>
                <% if allergen.description.present? %>
                  <div class="text-sm text-muted"><%= allergen.description %></div>
                <% end %>
              </td>
              <td class="text-end">
                <%= link_to edit_restaurant_allergyn_path(restaurant, allergen),
                    class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                    title: t('.edit', default: 'Edit'),
                    aria: { label: t('.edit', default: 'Edit') },
                    data: { turbo_frame: '_top' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% end %>

<style>
  .allergen-stats-card {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .allergen-stat {
    text-align: center;
  }

  .allergen-stat-value {
    font-size: 2.5rem;
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }

  .allergen-stat-label {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    font-weight: var(--font-semibold);
  }

  .templates-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: var(--space-3);
  }

  .template-card {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .template-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
  }

  .template-header h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0;
  }

  .allergen-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .allergen-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .allergen-item:hover {
    background: white;
    box-shadow: var(--shadow-sm);
  }

  .allergen-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--radius-md);
    background: var(--color-danger);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .allergen-info {
    flex: 1;
  }

  .allergen-info h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin: 0 0 var(--space-1) 0;
  }

  .allergen-info p {
    margin: 0;
  }
</style>
