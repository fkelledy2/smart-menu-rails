<%# 
  Restaurant QR Codes Section
  QR code management and customization
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- QR Code Management -->
<div class="content-card-2025">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="content-card-title mb-0">
      <i class="bi bi-qr-code"></i>
      <%= t('.qr_codes', default: 'QR Codes') %>
    </h2>
    
    <%= link_to smartmenus_path, 
        class: 'btn-2025 btn-2025-primary btn-2025-md',
        target: '_blank' do %>
      <i class="bi bi-eye"></i>
      <%= t('.view_all_qr', default: 'View All QR Codes') %>
    <% end %>
  </div>
  
  <p class="text-muted mb-4">
    <%= t('.qr_description', default: 'Generate QR codes for your menus. Customers can scan these to view your digital menu.') %>
  </p>
  
  <!-- QR Code Types -->
  <div class="qr-types-grid">
    <!-- General Menu QR -->
    <div class="qr-type-card">
      <div class="qr-icon bg-primary">
        <i class="bi bi-qr-code"></i>
      </div>
      <h4 class="qr-type-title"><%= t('.general_qr', default: 'General Menu QR') %></h4>
      <p class="qr-type-description">
        <%= t('.general_qr_desc', default: 'Single QR code for all menus. Best for small restaurants with one location.') %>
      </p>
      <%= link_to smartmenus_path, 
          class: 'btn-2025 btn-2025-secondary btn-2025-sm w-100',
          target: '_blank' do %>
        <i class="bi bi-download"></i> <%= t('.download', default: 'Download') %>
      <% end %>
    </div>
    
    <!-- Table-Specific QR -->
    <div class="qr-type-card">
      <div class="qr-icon bg-success">
        <i class="bi bi-grid-3x3"></i>
      </div>
      <h4 class="qr-type-title"><%= t('.table_qr', default: 'Table-Specific QR') %></h4>
      <p class="qr-type-description">
        <%= t('.table_qr_desc', default: 'Unique QR code for each table. Enables table ordering and tracking.') %>
      </p>
      <%= link_to edit_restaurant_path(restaurant, section: 'tables'), 
          class: 'btn-2025 btn-2025-secondary btn-2025-sm w-100' do %>
        <i class="bi bi-gear"></i> <%= t('.manage_tables', default: 'Manage Tables') %>
      <% end %>
    </div>
    
    <!-- Menu-Specific QR -->
    <div class="qr-type-card">
      <div class="qr-icon bg-warning">
        <i class="bi bi-menu-button-wide"></i>
      </div>
      <h4 class="qr-type-title"><%= t('.menu_qr', default: 'Menu-Specific QR') %></h4>
      <p class="qr-type-description">
        <%= t('.menu_qr_desc', default: 'Separate QR codes for each menu. Great for breakfast, lunch, dinner menus.') %>
      </p>
      <%= link_to smartmenus_path, 
          class: 'btn-2025 btn-2025-secondary btn-2025-sm w-100',
          target: '_blank' do %>
        <i class="bi bi-list"></i> <%= t('.view_menus', default: 'View Menus') %>
      <% end %>
    </div>
  </div>
</div>

<!-- QR Code Customization -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-palette"></i>
    <%= t('.qr_customization', default: 'QR Code Customization') %>
  </h2>
  
  <p class="text-muted mb-4">
    <%= t('.customization_description', default: 'Customize the appearance of your QR codes to match your brand.') %>
  </p>
  
  <div class="row g-4">
    <div class="col-md-6">
      <div class="customization-option">
        <h5><i class="bi bi-palette me-2"></i><%= t('.logo', default: 'Logo') %></h5>
        <p class="text-sm text-muted mb-3">
          <%= t('.logo_desc', default: 'Add your restaurant logo to the center of QR codes') %>
        </p>
        <button class="btn-2025 btn-2025-outline btn-2025-sm">
          <i class="bi bi-upload"></i> <%= t('.upload_logo', default: 'Upload Logo') %>
        </button>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="customization-option">
        <h5><i class="bi bi-droplet me-2"></i><%= t('.colors', default: 'Colors') %></h5>
        <p class="text-sm text-muted mb-3">
          <%= t('.colors_desc', default: 'Choose custom colors for your QR codes') %>
        </p>
        <button class="btn-2025 btn-2025-outline btn-2025-sm">
          <i class="bi bi-palette"></i> <%= t('.customize_colors', default: 'Customize Colors') %>
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  /* QR Types Grid */
  .qr-types-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-4);
  }
  
  @media (max-width: 768px) {
    .qr-types-grid {
      grid-template-columns: 1fr;
    }
  }
  
  .qr-type-card {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    text-align: center;
  }
  
  .qr-icon {
    width: 64px;
    height: 64px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
    margin: 0 auto var(--space-3);
  }
  
  .qr-type-title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }
  
  .qr-type-description {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin-bottom: var(--space-3);
    min-height: 60px;
  }
  
  @media (max-width: 480px) {
    .qr-type-description {
      min-height: auto;
    }
  }
  
  .customization-option {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }
  
  .customization-option h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }
</style>
