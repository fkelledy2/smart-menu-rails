<%#
  Restaurant QR Codes Section
  QR code management and customization
%>

<% restaurant = local_assigns[:restaurant] || @restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions') %>
  </h2>

  <div class="quick-actions-grid">
    <%= link_to smartmenus_path,
        class: 'quick-action-btn',
        target: '_blank' do %>
      <i class="bi bi-eye"></i>
      <span><%= t('.view_all_qr') %></span>
    <% end %>
  </div>
</div>

<style>
  /* Force Quick Actions into two columns on all viewports (including mobile portrait) */
  .quick-actions-grid {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: var(--space-3);
  }
  .quick-actions-grid .quick-action-btn {
    width: 100%;
    justify-content: center;
  }
</style>

<!-- QR Code Management -->
<div class="content-card-2025">
  <h2 class="content-card-title mb-4">
    <i class="bi bi-qr-code"></i>
    <%= t('.qr_codes') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.qr_description') %>
  </p>

  <!-- QR Code Types -->
  <div class="qr-types-grid">
    <!-- General Menu QR -->
    <div class="qr-type-card">
      <div class="qr-icon bg-primary">
        <i class="bi bi-qr-code"></i>
      </div>
      <h4 class="qr-type-title"><%= t('.general_qr') %></h4>
      <p class="qr-type-description">
        <%= t('.general_qr_desc') %>
      </p>
      <%= link_to smartmenus_path,
          class: 'btn-2025 btn-2025-secondary btn-2025-sm w-100',
          target: '_blank' do %>
        <i class="bi bi-download"></i> <%= t('.download') %>
      <% end %>
    </div>

    <!-- Table-Specific QR -->
    <div class="qr-type-card">
      <div class="qr-icon bg-success">
        <i class="bi bi-grid-3x3"></i>
      </div>
      <h4 class="qr-type-title"><%= t('.table_qr') %></h4>
      <p class="qr-type-description">
        <%= t('.table_qr_desc') %>
      </p>
      <%= link_to edit_restaurant_path(restaurant, section: 'tables'),
          class: 'btn-2025 btn-2025-secondary btn-2025-sm w-100' do %>
        <i class="bi bi-gear"></i> <%= t('.manage_tables') %>
      <% end %>
    </div>

    <!-- Menu-Specific QR -->
    <div class="qr-type-card">
      <div class="qr-icon bg-warning">
        <i class="bi bi-menu-button-wide"></i>
      </div>
      <h4 class="qr-type-title"><%= t('.menu_qr') %></h4>
      <p class="qr-type-description">
        <%= t('.menu_qr_desc') %>
      </p>
      <%= link_to smartmenus_path,
          class: 'btn-2025 btn-2025-secondary btn-2025-sm w-100',
          target: '_blank' do %>
        <i class="bi bi-list"></i> <%= t('.view_menus') %>
      <% end %>
    </div>
  </div>
</div>

<!-- QR Code Customization -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-palette"></i>
    <%= t('.qr_customization') %>
  </h2>

  <p class="text-muted mb-4">
    <%= t('.customization_description') %>
  </p>

  <div class="row g-4">
    <div class="col-md-6">
      <div class="customization-option">
        <h5><i class="bi bi-palette me-2"></i><%= t('.logo') %></h5>
        <p class="text-sm text-muted mb-3">
          <%= t('.logo_desc') %>
        </p>
        <button class="btn-2025 btn-2025-outline btn-2025-sm">
          <i class="bi bi-upload"></i> <%= t('.upload_logo') %>
        </button>
      </div>
    </div>

    <div class="col-md-6">
      <div class="customization-option">
        <h5><i class="bi bi-droplet me-2"></i><%= t('.colors') %></h5>
        <p class="text-sm text-muted mb-3">
          <%= t('.colors_desc') %>
        </p>
        <button class="btn-2025 btn-2025-outline btn-2025-sm">
          <i class="bi bi-palette"></i> <%= t('.customize_colors') %>
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  /* QR Types Grid */
  .qr-types-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-4);
  }

  @media (max-width: 768px) {
    .qr-types-grid {
      grid-template-columns: 1fr;
    }
  }

  .qr-type-card {
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
    padding: var(--space-4);
    text-align: center;
  }

  .qr-icon {
    width: 64px;
    height: 64px;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
    margin: 0 auto var(--space-3);
  }

  .qr-type-title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }

  .qr-type-description {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin-bottom: var(--space-3);
    min-height: 60px;
  }

  @media (max-width: 480px) {
    .qr-type-description {
      min-height: auto;
    }
  }

  .customization-option {
    padding: var(--space-4);
    background: var(--color-gray-50);
    border: 1px solid var(--color-gray-200);
    border-radius: var(--radius-lg);
  }

  .customization-option h5 {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }
</style>
