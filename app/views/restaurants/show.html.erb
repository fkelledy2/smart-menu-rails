<%= render 'shared/customcss' %>
<div class="page-header">
  <div class="row">
    <div class="col-10">
          <h1><%= @restaurant.name %></h1>
    </div>
    <div class="col-2">
        <span class="float-end">
          <%= link_to edit_restaurant_path(@restaurant), class: 'btn btn-sm btn-dark' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<ul class="nav nav-tabs" id="restaurantTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark active" id="restaurant-tab" data-bs-toggle="tab" data-bs-target="#restaurant" type="button" role="tab" aria-controls="restaurantConfig" aria-selected="true"><%= t('.tab_restaurant') %></button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark" id="menu-tab" data-bs-toggle="tab" data-bs-target="#menu" type="button" role="tab" aria-controls="menusConfig" aria-selected="false"><%= t('.tab_menus') %></button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark" id="employees-tab" data-bs-toggle="tab" data-bs-target="#employee" type="button" role="tab" aria-controls="employeesConfig" aria-selected="false"><%= t('.tab_employees') %></button>
  </li>
  <% if @current_employee && @current_employee.role == 'manager' %>
      <li class="nav-item" role="presentation">
        <button class="nav-link link-dark" id="tables-tab" data-bs-toggle="tab" data-bs-target="#table" type="button" role="tab" aria-controls="tablesConfig" aria-selected="false"><%= t('.tab_tables') %></button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link link-dark" id="tips-tab" data-bs-toggle="tab" data-bs-target="#tip" type="button" role="tab" aria-controls="tipsConfig" aria-selected="false"><%= t('.tab_tips') %></button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link link-dark" id="taxes-tab" data-bs-toggle="tab" data-bs-target="#tax" type="button" role="tab" aria-controls="taxesConfig" aria-selected="false"><%= t('.tab_taxes') %></button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link link-dark" id="openinghours-tab" data-bs-toggle="tab" data-bs-target="#openinghour" type="button" role="tab" aria-controls="openinghoursConfig" aria-selected="false"><%= t('.tab_openinghours') %></button>
      </li>
      <li class="nav-item" role="presentation">
        <button class="nav-link link-dark" id="billing-tab" data-bs-toggle="tab" data-bs-target="#billing" type="button" role="tab" aria-controls="billingsConfig" aria-selected="false"><%= t('.tab_billing') %></button>
      </li>
  <% end %>
</ul>
<div class="tab-content" id="restaurantConfig">
  <div class="tab-pane fade show active" id="restaurant" role="tabpanel" aria-labelledby="home-tab">
    <p>
    <div class="row">
        <div class="col-12">
            <%= form_with(model: @restaurant) do |form| %>
              <div class="form-group row">
                <div class="col-3">
                </div>
                <div class="col-9">
                    <h4><%=t(".details")%></h4>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-3">
                    <span class="float-md-end"><%= form.label :name, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                  <%= form.text_field :name, class: 'form-control', disabled: true %>
                </div>
              </div>
              <div class="spacing-sm"></div>
              <div class="form-group row">
                <div class="col-3">
                    <span class="float-md-end"><%= form.label :description, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                  <%= form.text_area :description, class: 'form-control', rows: 6, disabled: true %>
                </div>
              </div>
              <div class="spacing-sm"></div>
              <div class="form-group row">
                <div class="col-3">
                    <span class="float-md-end"><%= form.label :currency, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                  <%= form.text_field :currency, class: 'form-control', disabled: true %>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                </div>
                <div class="col-9">
                    <p>
                    <h4><%=t(".address")%></h4>
                </div>
              </div>
              <div class="spacing-sm"></div>
              <div class="form-group row">
                <div class="col-sm-3">
                </div>
                <div class="col-9">
                    <gmp-map style="padding-top:2px;padding-bottom:5px;width:100%;height:200px;" center="40.749933,-73.98633" zoom="13" map-id="DEMO_MAP_ID">
                      <gmp-advanced-marker></gmp-advanced-marker>
                    </gmp-map>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                    <span class="float-md-end"><%= form.label :address1, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                    <%= form.text_field :address1, class: 'form-control', disabled: true %>
                </div>
              </div>
              <div class="spacing-sm"></div>
              <div class="form-group row">
                <div class="col-sm-3">
                    <span class="float-md-end"><%= form.label :postcode, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                    <%= form.text_field :postcode, class: 'form-control', disabled: true %>
                </div>
              </div>
              <div class="spacing-sm"></div>
              <div class="form-group row">
                <div class="col-sm-3">
                    <span class="float-md-end"><%= form.label :country, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                    <%= form.country_select :country, {}, {disabled: true} %>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                </div>
                <div class="col-9">
                    <p>
                    <h4><%=t(".imageSettings")%></h4>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                    <span class="float-md-end"><%= form.label :image, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                    <%= form.text_field :image, class: 'form-control', disabled: true %>
                    <% if @restaurant.image %>
                        <img src="<%=@restaurant.image%>" class="img-fluid" alt="...">
                    <% end %>
                </div>
              </div>
              <div class="spacing-sm"></div>
              <div class="form-group row">
                <div class="col-sm-3">
                    <span class="float-md-end"><%= form.label :genid, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                  <%= form.text_field :genid, class: 'form-control', disabled: true %>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                </div>
                <div class="col-9">
                    <p>
                    <h4><%=t(".settings")%></h4>
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                    <span class="float-md-end"><%= form.label :status, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                    <%= form.select :status, options_for_select(Restaurant.statuses.keys.to_a, form.object.status), {}, disabled: 'disabled' %>
                </div>
              </div>
              <div class="spacing-sm"></div>
              <div class="form-group row">
                <div class="col-sm-3">
                    <span class="float-md-end"><%= form.label :displayImages, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                  <%= form.select :displayImages, [[t('.switch_on'), true], [t('.switch_off'), false]], {}, disabled: 'disabled' %>
                </div>
              </div>
              <div class="spacing-sm"></div>
              <div class="form-group row">
                <div class="col-sm-3">
                    <span class="float-md-end"><%= form.label :allowOrdering, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                  <%= form.select :allowOrdering, [[t('.switch_on'), true], [t('.switch_off'), false]], {}, disabled: 'disabled' %>
                </div>
              </div>
              <div class="spacing-sm"></div>
              <div class="form-group row">
                <div class="col-sm-3">
                    <span class="float-md-end"><%= form.label :inventoryTracking, class: 'col-form-label' %> :</span>
                </div>
                <div class="col-9">
                  <%= form.select :inventoryTracking, [[t('.switch_on'), true], [t('.switch_off'), false]], {}, disabled: 'disabled' %>
                </div>
              </div>
            <% end %>
        </div>
    </div>
  </div>
  <div class="tab-content" id="employeeConfig">
    <div class="tab-pane fade" id="employee" role="tabpanel" aria-labelledby="employee-tab">
        <%= render 'showEmployees', restaurant: @restaurant, edit: false %>
    </div>
  </div>
  <div class="tab-content" id="menusConfig">
    <div class="tab-pane fade" id="menu" role="tabpanel" aria-labelledby="menu-tab">
        <%= render 'showMenus', restaurant: @restaurant, edit: false %>
    </div>
  </div>
  <% if @current_employee && @current_employee.role == 'manager' %>
      <div class="tab-content" id="tablesConfig">
        <div class="tab-pane fade" id="table" role="tabpanel" aria-labelledby="table-tab">
            <%= render 'showTableSettings', restaurant: @restaurant, edit: false %>
        </div>
      </div>
      <div class="tab-content" id="tipsConfig">
        <div class="tab-pane fade" id="tip" role="tabpanel" aria-labelledby="tip-tab">
            <%= render 'showTips', restaurant: @restaurant, edit: false %>
        </div>
      </div>
      <div class="tab-content" id="taxssConfig">
        <div class="tab-pane fade" id="tax" role="tabpanel" aria-labelledby="tax-tab">
            <%= render 'showTaxes', restaurant: @restaurant, edit: false %>
        </div>
      </div>
      <div class="tab-content" id="openinghoursConfig">
        <div class="tab-pane fade" id="openinghour" role="tabpanel" aria-labelledby="openinghour-tab">
            <%= render 'showOpeningHours', restaurant: @restaurant, edit: false %>
        </div>
      </div>
      <div class="tab-content" id="billingsConfig">
        <div class="tab-pane fade" id="billing" role="tabpanel" aria-labelledby="billing-tab">
            <%= t('.billing_content') %>
        </div>
      </div>
  <% end %>
</div>


