<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
          <h1>Show Restaurant</h1>
    </div>
    <div class="col-sm-2">
        <span class="float-end">
          <%= link_to restaurants_path, class: 'btn btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
          <%= link_to edit_restaurant_path(@restaurant), class: 'btn btn-primary' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: @restaurant) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :address1, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :address1, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :address2, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :address2, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :state, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :state, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :city, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :city, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :postcode, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :postcode, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :country, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.country_select :country, {}, {class: "form-control", :id => "form.object.country", disabled: true} %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :image, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :image, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :genid, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :genid, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :status, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :status, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :capacity, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :total_capacity, class: 'form-control', disabled: true %>
    </div>
  </div>
<% end %>
