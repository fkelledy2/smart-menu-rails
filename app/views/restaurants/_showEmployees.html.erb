<p>
<div class="row">
  <div class="col-sm-12 text-end">
    <% if @futureParentRestaurant %>
      <%= link_to restaurant_path(id: @futureParentRestaurant.id), class: 'btn btn-sm btn-light' do %>
        <i class="bi bi-chevron-left"></i>
      <% end %>
    <% end %>
    <button id="activate-employee" class='btn btn-sm btn-success' disabled><%=t(".activate")%></button>
    <button id="deactivate-employee"class='btn btn-sm btn-danger' disabled><%=t(".deactivate")%></button>
    <% if edit %>
        <%= link_to new_employee_path, class: 'btn btn-sm btn-primary' do %>
            <i class="bi bi-plus"></i> <%=t(".employee")%>
        <% end %>
    <% else %>
        <%= link_to new_employee_path, class: 'btn btn-sm btn-primary disabled' do %>
            <i class="bi bi-plus"></i> <%=t(".employee")%>
        <% end %>
    <% end %>
  </div>
</div>
<div style="padding-top:10px" class="table-borderless" id="restaurant-employee-table">
</div>
