<div class="row">
  <div class="col-6">
    <h1>Ingredients</h1>
  </div>
  <div class="col-6 text-end">
  <% if @futureParentRestaurant %>
    <%= link_to new_restaurant_ingredient_path(@futureParentRestaurant), class: 'btn btn-sm btn-dark' do %>
  <% else %>
    <%= link_to new_restaurant_ingredient_path(current_user.restaurants.first), class: 'btn btn-sm btn-dark' do %>
