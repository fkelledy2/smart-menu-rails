<%# Empty State Components - Phase 2 %>

<%# Empty Menu State %>
<% if defined?(empty_type) && empty_type == 'menu' %>
  <div class="empty-state empty-menu">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('.no_menu_items', default: 'No Menu Items Yet') %></h2>
    <p class="empty-description">
      <%= t('.no_menu_description', default: "We're still adding items to our menu. Please check back soon!") %>
    </p>
    <% if defined?(show_action) && show_action %>
      <div class="empty-action">
        <button type="button" class="btn-touch-primary" onclick="location.reload()">
          <i class="bi bi-arrow-clockwise"></i>
          <%= t('.refresh', default: 'Refresh') %>
        </button>
      </div>
    <% end %>
  </div>
<% end %>

<%# Empty Cart State %>
<% if defined?(empty_type) && empty_type == 'cart' %>
  <div class="empty-state empty-cart">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('.cart_empty', default: 'Your Cart is Empty') %></h2>
    <p class="empty-description">
      <%= t('.cart_empty_description', default: 'Start adding delicious items from our menu!') %>
    </p>
    <div class="empty-action">
      <button type="button" class="btn-touch-primary" data-bs-dismiss="modal">
        <i class="bi bi-arrow-left"></i>
        <%= t('.browse_menu', default: 'Browse Menu') %>
      </button>
    </div>
  </div>
<% end %>

<%# Empty Search State %>
<% if defined?(empty_type) && empty_type == 'search' %>
  <div class="empty-state empty-search">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('.no_results', default: 'No Results Found') %></h2>
    <p class="empty-description">
      <%= t('.no_results_description', default: "We couldn't find any items matching your search. Try different keywords.") %>
    </p>
  </div>
<% end %>

<%# Empty Filter State %>
<% if defined?(empty_type) && empty_type == 'filter' %>
  <div class="empty-state empty-filter">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('.no_items_filtered', default: 'No Items Match Your Filters') %></h2>
    <p class="empty-description">
      <%= t('.no_items_filtered_description', default: 'Try adjusting your allergen filters to see more items.') %>
    </p>
    <div class="empty-action">
      <button type="button" class="btn-touch-secondary" data-bs-toggle="modal" data-bs-target="#filterOrderModal">
        <i class="bi bi-funnel"></i>
        <%= t('.adjust_filters', default: 'Adjust Filters') %>
      </button>
    </div>
  </div>
<% end %>

<%# No Table Selected State %>
<% if defined?(empty_type) && empty_type == 'table' %>
  <div class="empty-state empty-table">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('.no_table_selected', default: 'Select Your Table') %></h2>
    <p class="empty-description">
      <%= t('.no_table_description', default: 'Please select a table to start your order.') %>
    </p>
  </div>
<% end %>

<%# Order Complete State %>
<% if defined?(empty_type) && empty_type == 'complete' %>
  <div class="empty-state order-complete">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('.order_complete', default: 'Order Submitted!') %></h2>
    <p class="empty-description">
      <%= t('.order_complete_description', default: 'Your order has been sent to the kitchen. Enjoy your meal!') %>
    </p>
  </div>
<% end %>

<%# Error State %>
<% if defined?(empty_type) && empty_type == 'error' %>
  <div class="empty-state empty-error">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('.error_occurred', default: 'Something Went Wrong') %></h2>
    <p class="empty-description">
      <%= defined?(error_message) ? error_message : t('.error_description', default: "We're having trouble loading this content. Please try again.") %>
    </p>
    <div class="empty-action">
      <button type="button" class="btn-touch-primary" onclick="location.reload()">
        <i class="bi bi-arrow-clockwise"></i>
        <%= t('.try_again', default: 'Try Again') %>
      </button>
    </div>
  </div>
<% end %>
