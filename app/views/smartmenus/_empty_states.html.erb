<%# Empty State Components - Phase 2 %>

<%# Empty Menu State %>
<% if defined?(empty_type) && empty_type == 'menu' %>
  <div class="empty-state empty-menu">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('smartmenus.empty_states.no_menu_items') %></h2>
    <p class="empty-description">
      <%= t('smartmenus.empty_states.no_menu_description') %>
    </p>
    <% if defined?(show_action) && show_action %>
      <div class="empty-action">
        <button type="button" class="btn-touch-primary" onclick="location.reload()">
          <i class="bi bi-arrow-clockwise"></i>
          <%= t('smartmenus.empty_states.refresh') %>
        </button>
      </div>
    <% end %>
  </div>
<% end %>

<%# Empty Cart State %>
<% if defined?(empty_type) && empty_type == 'cart' %>
  <div class="empty-state empty-cart">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('smartmenus.empty_states.cart_empty') %></h2>
    <p class="empty-description">
      <%= t('smartmenus.empty_states.cart_empty_description') %>
    </p>
    <div class="empty-action">
      <button type="button" class="btn-touch-primary" data-bs-dismiss="modal">
        <i class="bi bi-arrow-left"></i>
        <%= t('smartmenus.empty_states.browse_menu') %>
      </button>
    </div>
  </div>
<% end %>

<%# Empty Search State %>
<% if defined?(empty_type) && empty_type == 'search' %>
  <div class="empty-state empty-search">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('smartmenus.empty_states.no_results') %></h2>
    <p class="empty-description">
      <%= t('smartmenus.empty_states.no_results_description') %>
    </p>
  </div>
<% end %>

<%# Empty Filter State %>
<% if defined?(empty_type) && empty_type == 'filter' %>
  <div class="empty-state empty-filter">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('smartmenus.empty_states.no_items_filtered') %></h2>
    <p class="empty-description">
      <%= t('smartmenus.empty_states.no_items_filtered_description') %>
    </p>
    <div class="empty-action">
      <button type="button" class="btn-touch-secondary" data-bs-toggle="modal" data-bs-target="#filterOrderModal">
        <i class="bi bi-funnel"></i>
        <%= t('smartmenus.empty_states.adjust_filters') %>
      </button>
    </div>
  </div>
<% end %>

<%# No Table Selected State %>
<% if defined?(empty_type) && empty_type == 'table' %>
  <div class="empty-state empty-table">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('smartmenus.empty_states.no_table_selected') %></h2>
    <p class="empty-description">
      <%= t('smartmenus.empty_states.no_table_description') %>
    </p>
  </div>
<% end %>

<%# Order Complete State %>
<% if defined?(empty_type) && empty_type == 'complete' %>
  <div class="empty-state order-complete">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('smartmenus.empty_states.order_complete') %></h2>
    <p class="empty-description">
      <%= t('smartmenus.empty_states.order_complete_description') %>
    </p>
  </div>
<% end %>

<%# Error State %>
<% if defined?(empty_type) && empty_type == 'error' %>
  <div class="empty-state empty-error">
    <div class="empty-icon"></div>
    <h2 class="empty-title"><%= t('smartmenus.empty_states.error_occurred') %></h2>
    <p class="empty-description">
      <%= defined?(error_message) ? error_message : t('smartmenus.empty_states.error_description') %>
    </p>
    <div class="empty-action">
      <button type="button" class="btn-touch-primary" onclick="location.reload()">
        <i class="bi bi-arrow-clockwise"></i>
        <%= t('smartmenus.empty_states.try_again') %>
      </button>
    </div>
  </div>
<% end %>
