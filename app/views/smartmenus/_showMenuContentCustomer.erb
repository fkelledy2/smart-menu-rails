    <div class="row">
        <div class="col-12 col-md-12 col-lg-12 scrollspy-example" data-bs-spy="scroll" data-bs-target="#navbar-example2" data-bs-offset="0" tabindex="0" data-testid="menu-sections-container">
            <% menu.menusections.order(:sequence).each do |menusection| %>
                <div style="padding-top:20px" id="menusection_<%= menusection.id %>" data-testid="menu-section-<%= menusection.id %>"></div>
                <% if menu.displayImages == true && menu.restaurant.displayImages == true %>
                    <% if menusection.image %>
                        <div class="card border-light text-bg-dark">
                            <img src="<%= menusection.medium_url %>"
                             srcset="<%= menusection.image_srcset %>"
                             sizes="<%= menusection.image_sizes %>"
                             style="height: 150px"
                             class="card-img img-fluid"
                             alt="<%= menusection.name %>"
                             loading="lazy">
                            <div class="card-img-overlay">
                                <h3 class="card-title">
                                  <%= menusection.name %>
                                  <% if menusection.tasting_menu? %>
                                    <span class="badge bg-warning text-dark ms-2">Tasting</span>
                                  <% end %>
                                </h3>
                                <p class="card-text"><%= menusection.description %></p>
                                <%# Tasting controls moved to Courses card below %>
                            </div>
                        </div>
                    <% else %>
                        <div class="row">
                            <div class="col-12">
                                <span class='h3' data-testid="menu-section-title-<%= menusection.id %>">
                                    <% if ordrparticipant && ordrparticipant.preferredlocale %>
                                        <%= menusection.localised_name(ordrparticipant.preferredlocale) %>
                                    <% else %>
                                        <% if menuparticipant && menuparticipant.preferredlocale %>
                                            <%= menusection.localised_name(menuparticipant.preferredlocale) %>
                                        <% else %>
                                            <%= menusection.name %>
                                        <% end %>
                                    <% end %>
                                    <% if menusection.restricted == true %>
                                        <span class='float-end'>
                                            <small class="text-muted">
                                                <%= format_time_range(menusection.fromhour, menusection.frommin, menusection.tohour, menusection.tomin) %>
                                                <div style='display:none' id="sectionFromOffset"><%= menusection.fromOffset %></div>
                                                <div style='display:none' id="sectionToOffset"><%= menusection.toOffset %></div>
                                            </small>
                                        <span>
                                    <% end %>
                                </span>
                                <%# Tasting controls moved to Courses card below %>
                            </div>
                            <% if menusection.description? %>
                            <div class="col-12">
                                <span class='h6'>
                                    <%= menusection.description %>
                                </span>
                            </div>
                            <% end %>
                        </div>
                    <% end %>
                <% else %>
                        <div class="row">
                            <div class="col-12">
                                <span class='h3' data-testid="menu-section-title-<%= menusection.id %>">
                                    <% if ordrparticipant && ordrparticipant.preferredlocale %>
                                        <%= menusection.localised_name(ordrparticipant.preferredlocale) %>
                                    <% else %>
                                        <% if menuparticipant && menuparticipant.preferredlocale %>
                                            <%= menusection.localised_name(menuparticipant.preferredlocale) %>
                                        <% else %>
                                            <%= menusection.name %>
                                        <% end %>
                                    <% end %>
                                    <% if menusection.restricted == true %>
                                        <span class='float-end'>
                                            <small class="text-muted">
                                                <%= format_time_range(menusection.fromhour, menusection.frommin, menusection.tohour, menusection.tomin) %>
                                                <div style='display:none' id="sectionFromOffset"><%= menusection.fromOffset %></div>
                                                <div style='display:none' id="sectionToOffset"><%= menusection.toOffset %></div>
                                            </small>
                                        <span>
                                    <% end %>
                                </span>
                                <%# Tasting controls moved to Courses card below %>
                            </div>
                        </div>
                <% end %>
                <% if menusection.tasting_menu? %>
                  <% 
                    section_items = menusection.menuitems.where(status: 'active').order(:sequence)
                    carrier = Menuitem.where(menusection_id: menusection.id, tasting_carrier: true).first
                    tasting_meta = {
                      section_id: menusection.id,
                      section_name: menusection.name,
                      price_per: menusection.price_per,
                      tasting_price_cents: menusection.tasting_price_cents.to_i,
                      allow_pairing: menusection.allow_pairing,
                      pairing_price_cents: menusection.pairing_price_cents.to_i,
                      carrier_id: carrier&.id,
                      items: section_items.map { |it| { id: it.id, name: it.name, optional: it.tasting_optional, supplement_cents: it.tasting_supplement_cents.to_i } }
                    }
                  %>
                  <div class="card border-secondary mt-2">
                    <div class="card-body p-2">
                      <div class="row opacity-75" style="pointer-events: none;" aria-disabled="true" title="Courses are part of the tasting menu bundle and cannot be added individually">
                        <% menusection.menuitems.includes([:allergyns,:menuitem_size_mappings]).where(status: 'active').order(:sequence).each do |mi| %>
                          <% next if mi.tasting_carrier || mi.hidden %>
                          <% if ordrparticipant == nil || ordrparticipant && (ordrparticipant.allergyns & mi.allergyns).empty? %>
                            <%= render partial: "smartmenus/showMenuitemHorizontal", locals: { order: order, menu: menu, ordrparticipant: ordrparticipant, menuparticipant: menuparticipant, mi: mi, restaurantCurrency: restaurantCurrency, tablesetting: tablesetting, hide_add_button: true } %>
                          <% end %>
                        <% end %>
                      </div>
                    </div>
                    <div class="card-footer py-0 d-flex align-items-stretch">
                      <div class="ms-auto d-flex flex-wrap align-items-stretch gap-2"
                           data-tasting-meta='<%= tasting_meta.to_json %>'
                           data-section-id="<%= menusection.id %>">
                        <% disabled_attr = ( defined?(order) && order.present? && (order.status != 'billrequested' && order.status != 'closed') ) ? '' : 'disabled' %>
                        <button class="btn btn-lg btn-dark tasting-cta d-flex align-items-center h-100 align-self-stretch" type="button" style="border-radius: 0 0 0.25rem 0;" <%= disabled_attr %>>Add Tasting Menu</button>
                      </div>
                    </div>
                  </div>
                <% else %>
                  <div class="row" data-testid="menu-items-row-<%= menusection.id %>">
                    <% menusection.menuitems.includes([:allergyns,:menuitem_size_mappings]).where(status: 'active').order(:sequence).each do |mi| %>
                      <% if ordrparticipant == nil || ordrparticipant && (ordrparticipant.allergyns & mi.allergyns).empty? %>
                        <%= render partial: "smartmenus/showMenuitemHorizontal", locals: { order: order, menu: menu, ordrparticipant: ordrparticipant, menuparticipant: menuparticipant, mi: mi, restaurantCurrency: restaurantCurrency, tablesetting: tablesetting } %>
                      <% end %>
                    <% end %>
                  </div>
                <% end %>
        <% end %>
        <%= render partial: "smartmenus/showAllergyns", locals: { allergyns: allergyns }  %>
        <%= render partial: "smartmenus/showCoverCharge", locals: { menu: menu, restaurantCurrency: restaurantCurrency } %>
      </div>
    </div>
