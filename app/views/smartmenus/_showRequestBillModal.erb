<!-- Modal -->
<div class="modal fade" id="requestBillModal" tabindex="-1" aria-labelledby="requestBillModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-fullscreen">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="requestBillModalLabel">Request Bill</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
            <% if order %>
                <div class="row">
                    <div class="col-10">
                        <b>Item</b>
                    </div>
                    <div class="col-2">
                      <span class="float-end">
                        <b>Price</b>
                      </span>
                    </div>
                </div>
                <% if order.covercharge > 0 %>
                    <div class="row">
                        <div class="col-10">
                            Cover Charge
                        </div>
                        <div class="col-2">
                          <span class="float-end">
                            <%= number_to_currency(order.covercharge, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                          </span>
                        </div>
                    </div>
                <% end %>
                <div class="row">
                    <div class="col-10">
                        Nett
                    </div>
                    <div class="col-2">
                      <span class="float-end">
                        <%= number_to_currency(order.nett, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                      </span>
                    </div>
                </div>
                <hr>
                <% if order.service > 0 %>
                    <div class="row">
                        <div class="col-10">
                            Service
                        </div>
                        <div class="col-2">
                          <span class="float-end">
                            <%= number_to_currency(order.service, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                          </span>
                        </div>
                    </div>
                <% end %>
                <% if order.tax > 0 %>
                    <div class="row">
                        <div class="col-10">
                            Tax
                        </div>
                        <div class="col-2">
                          <span class="float-end">
                            <%= number_to_currency(order.tax, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                          </span>
                        </div>
                    </div>
                <% end %>
                <div class="row">
                    <div class="col-10">
                    </div>
                    <div class="col-2">
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-10">
                        <b>Total</b> <i>(excl. tip)</i>
                    </div>
                    <div class="col-2">
                      <span class="float-end">
                        <b><%= number_to_currency(order.gross, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %></b>
                      </span>
                    </div>
                </div>
            <% end %>
      </div>
      <div class="modal-footer">
        <% if order && order.gross > 0 %>
            <button id="request-bill" type="button" data-bs-dismiss="modal" class="btn btn-dark">Request Bill</button>
        <% else %>
            <button id="request-bill" type="button" data-bs-dismiss="modal" class="btn btn-dark" disabled>Request Bill</button>
        <% end %>
      </div>
    </div>
  </div>
</div>