    <div style="padding-top:20px" class="col-6 col-md-6 col-lg-6">
        <div class="card">
                <% if @openOrder %>
                    <div class="row">
                        <div class="col-12">
                            <div class="d-grid gap-2">
                                <div class="btn-group">
                                    <button type="button" class="addItemToOrder btn btn-lg btn-primary" data-bs-toggle="modal" data-bs-target="#addItemToOrderModal"
                                                data-bs-ordr_id="<%= @openOrder.id %>"
                                                data-bs-menuitem_id="<%= menuitem.id %>"
                                                data-bs-menuitem_name="<%= menuitem.name %>"
                                                data-bs-menuitem_price="<%= menuitem.price %>"
                                                data-bs-menuitem_description="<%= menuitem.description %>"
                                                data-bs-menuitem_image="<%= menuitem.image_url %>">
                                                    <%= menuitem.name %>
                                    </button>
                                    <% if menuitem.menuitem_size_mappings.count > 0 %>
                                        <button type="button" style='max-width:50px' class="btn btn btn-lg btn-dark dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                            <span class="visually-hidden">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <% menuitem.menuitem_size_mappings.includes([:size]).each do |menuitemsize| %>
                                                <li>
                                                    <a class="dropdown-item" href="#">
                                                        <button style="background: none!important;border: none;padding: 0!important;" type="button" class="addItemToOrder" data-bs-toggle="modal" data-bs-target="#addItemToOrderModal"
                                                            data-bs-ordr_id="<%= @openOrder.id %>"
                                                            data-bs-menuitem_id="<%= menuitem.id %>"
                                                            data-bs-menuitem_name="<%= menuitem.name %>"
                                                            data-bs-menuitem_price="<%= menuitemsize.price %>"
                                                            data-bs-menuitem_description="<%= menuitem.description %> (<%= menuitemsize.size.name %>)"
                                                            data-bs-menuitem_image="<%= menuitem.image_url %>">
                                                                <i class="bi bi-plus"></i> <%= menuitemsize.size.name %>
                                                        </button>
                                                    </a>
                                                </li>
                                            <% end %>
                                        </ul>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% else %>
                    <div class="row">
                        <div class="col-12">
                            <h6 style='padding:5px' class="card-title"><strong><%= menuitem.name %></strong></h6>
                        </div>
                    </div>
                <% end %>
        </div>
    </div>
