<div class="btn-group" role="group">
    <button id="table-selector-staff" type="button" class="btn-touch-dark btn-touch-sm dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
        <% if tablesetting %>
            <%= tablesetting.name %>
        <% else %>
            <%= t(".table") %>
        <% end %>
    </button>
    <ul class="dropdown-menu dropdown-menu-dark" style="z-index: 1050; --bs-dropdown-padding-y: 0.5rem;">
        <% Smartmenu.where( restaurant_id: restaurant.id, menu_id: menu.id ).includes([:tablesetting]).order('id ASC').each do |smartmenu| %>
            <% if smartmenu.tablesetting && smartmenu.tablesetting.status == 'free' %>
                <li>
                    <%= link_to smartmenu_path(smartmenu.slug), data: { turbo: false }, class: "dropdown-item", style: "min-height: 44px; display: flex; align-items: center; padding: 8px 12px;" do %>
                        <%= smartmenu.tablesetting.name %>
                    <% end %>
                </li>
            <% end %>
        <% end %>
    </ul>
</div>

