<div id="modalsContainer">

    <div class="modal fade" id="openOrderModal" tabindex="-1" aria-labelledby="openOrderModalLabel">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="openOrderModalLabel"><%= t(".startOrder") %></h5>
                </div>
                <div class="modal-body">
                    <% if tablesetting %>
                        Would you like to start an order for <input class="modal-input-width" type="number" id="orderCapacity" value=<%= tablesetting.capacity%> oninput="validateIntegerInput(this)"> at this table?
                    <% end %>
                </div>
                <div class="modal-footer" style="padding: 16px; gap: 12px; justify-content: flex-end;">
                    <button type="button" class="btn-touch-secondary" data-bs-dismiss="modal" aria-label="<%= t('common.close') %>"><%= t(".cancel") %></button>
                    <button id="start-order" type="button" data-bs-dismiss="modal" class="btn-touch-primary"><%= t(".start") %></button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addItemToOrderModal" tabindex="-1" aria-labelledby="addItemToOrderModalLabel">
      <% if menu.displayImages == true && menu.restaurant.displayImages == true %>
      <div class="modal-dialog modal-dialog-scrollable modal-fullscreen">
      <% else %>
      <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-fullscreen">
      <% end %>
        <div class="modal-content">
          <%= render partial: "smartmenus/modal_header_add_item" %>
          <div class="modal-body modal-body-no-padding">
                <% if (menu.displayImages == true && menu.restaurant.displayImages == true) || (menu.displayImagesInPopup == true && menu.restaurant.displayImagesInPopup == true) %>
                    <div class="row">
                        <div class="col-12">
                            <div class="image-container position-relative">
                                <!-- Placeholder image (same size as final image) -->
                                <img id="placeholder" src="https://placehold.co/600x400/white/white" class="w-100" style="visibility: visible;">
                                <!-- Spinner overlay -->
                                <div id="spinner" class="position-absolute top-50 start-50 translate-middle">
                                    <div class="spinner-border text-primary"></div>
                                </div>
                                <%= image_tag "",
                                    :id => "a2o_menuitem_image",
                                    :title => "",
                                    :class => "addItemToOrderImage card-img-top",
                                    :onload => "fadeIn(this)",
                                    :style => "display:none;"
                                %>
                            </div>
                        </div>
                    </div>
                    <div style="margin-top:20px;"></div>
            <% end %>
            <span style="display:none" id="a2o_ordr_id"></span>
            <span style="display:none" id="a2o_menuitem_id"></span>
            <div style="padding-left:15px;padding-right:15px;" class="row">
                <div class="col-12">
                    <span class="h4" id="a2o_menuitem_name"></span>
                </div>
            </div>
            <div style="padding-left:15px;padding-right:15px;" class="row">
                <div class="col-12">
                    <span id="a2o_menuitem_description"></span>
                </div>
            </div>
            <div style="padding-left:15px;padding-right:15px;" class="row mt-2" id="a2o_tasting_controls" hidden>
              <div class="col-12 d-flex align-items-center gap-2 flex-wrap">
                <div class="input-group input-group-sm" style="width: 140px;">
                  <button class="btn btn-outline-secondary" type="button" id="a2o_tasting_qty_decr" aria-label="Decrease">-</button>
                  <input type="number" class="form-control text-center" id="a2o_tasting_qty" value="1" min="1">
                  <button class="btn btn-outline-secondary" type="button" id="a2o_tasting_qty_incr" aria-label="Increase">+</button>
                </div>
                <div class="form-check form-check-inline" id="a2o_tasting_pairing_wrap" hidden>
                  <input class="form-check-input" type="checkbox" id="a2o_tasting_pairing">
                  <label class="form-check-label" for="a2o_tasting_pairing">Pairing</label>
                </div>
              </div>
            </div>
          </div>
          <%= render partial: "smartmenus/modal_footer_add_item", locals: { restaurantCurrency: restaurantCurrency } %>
        </div>
      </div>
    </div>

    <% if ordrparticipant %>
    <div class="modal fade" id="filterOrderModal" tabindex="-1" aria-labelledby="filterOrderModalLabel">
        <div class="modal-dialog modal-dialog-scrollable modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="filterOrderModalLabel"><%= t(".filterAllergyns") %></h1>
                </div>
                <%= form_with(model: [menu.restaurant, ordrparticipant]) do |form| %>
                    <div class="modal-body">
                        <div class="form-group row">
                            <div class="col-8">
                                <%= form.collection_check_boxes :allergyn_ids, Allergyn.where(restaurant_id: menu.restaurant.id), :id, :name, { hide_label: true } do |b| %>
                                    <div form-check">
                                        <%= b.check_box %>
                                        <label class="form-check-label">
                                            <%= b.label %>
                                        </label>
                                    </div>
                                <% end %>
                            </div>
                            <div class="col-sm-4">
                                <div class="float-end form-check form-switch">
                                    <input class="form-check-input" type="checkbox" id="toggleFilters">
                                    <label class="form-check-label" for="toggleFilters"><%= t(".noneAll") %></label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer modal-footer-spaced">
                        <button type="button" class="btn-touch-secondary" data-bs-dismiss="modal" aria-label="Close"><%= t(".cancel") %></button>
                        <%= form.submit value: t(".filterBy"), class: 'btn-touch-primary' %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
    <div class="modal fade" id="viewOrderModal" tabindex="-1" aria-labelledby="viewOrderModalLabel" data-testid="view-order-modal" data-controller="order-totals">
      <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-fullscreen">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="viewOrderModalLabel"><%= t(".yourOrder")%></h5>
          </div>
          <div class="modal-body" data-testid="order-modal-body">
            <% if order %>
                <div class="row">
                    <div class="col-8">
                    </div>
                    <div class="col-2">
                    </div>
                    <div class="col-2">
                      <span class="float-end">
                        <b><%= t(".price")%></b>
                      </span>
                    </div>
                </div>
                <% if order && order.addedCount > 0 %>
                    <div class="row" data-testid="order-items-selected-section">
                        <div class="col-2">
                            <p><%= t('.selected') %></p>
                        </div>
                        <div class="col-10">
                            <hr>
                        </div>
                    </div>
                    <% order.ordractions.includes([:ordritem]).each do |ordraction| %>
                        <% if ordraction.ordritem && ordraction.ordritem.status == 'opened' && ordraction.ordritem.in?(order.ordritems) %>
                            <div id="ordritem_<%= ordraction.ordritem.id %>" style="margin-top:5px" class="row" data-testid="order-item-<%= ordraction.ordritem.id %>">
                                <div class="col-8">
                                    <div class="d-flex w-100 overflow-hidden">
                                        <p class="text-truncate">
                                            <button type="button" class="removeItemFromOrderButton btn-touch-danger btn-touch-icon btn-touch-sm"
                                                data-bs-ordritem_id="<%= ordraction.ordritem.id %>"
                                                aria-label="<%= t('.remove_item', default: 'Remove item') %>"
                                                data-testid="remove-order-item-<%= ordraction.ordritem.id %>-btn">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                            <% if ordrparticipant && ordrparticipant.preferredlocale %>
                                                <%= ordraction.ordritem.menuitem.localised_name(ordrparticipant.preferredlocale) %>
                                            <% else %>
                                                <% if menuparticipant && menuparticipant.preferredlocale %>
                                                    <%= ordraction.ordritem.menuitem.localised_name(menuparticipant.preferredlocale) %>
                                                <% else %>
                                                    <%= ordraction.ordritem.menuitem.name %>
                                                <% end %>
                                            <% end %>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="d-flex w-100 overflow-hidden">
                                        <p class="text-truncate">
                                            <%= ordraction.ordrparticipant.name %>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <span class="float-end">
                                        <%= number_to_currency(ordraction.ordritem.ordritemprice, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                                    </span>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                <% end %>
                <% if order && order.orderedCount > 0 %>
                    <div class="row">
                        <div class="col-2">
                            <p><%= t('.submitted') %></p>
                        </div>
                        <div class="col-10">
                            <hr>
                        </div>
                    </div>
                    <% order.ordractions.includes([:ordritem]).each do |ordraction| %>
                        <% if ordraction.ordritem && (ordraction.ordritem.status == 'ordered' || ordraction.ordritem.status == 'preparing' || ordraction.ordritem.status == 'ready'  || ordraction.ordritem.status == 'delivered') && ordraction.ordritem.in?(order.ordritems) %>
                            <div id="ordritem_<%= ordraction.ordritem.id %>" style="margin-top:5px" class="row">
                                <div class="col-8">
                                    <div class="d-flex w-100 overflow-hidden">
                                        <p class="text-muted text-truncate">
                                            <button type="button" class="btn-touch-dark btn-touch-icon btn-touch-sm" disabled>
                                                <i class="bi bi-arrow-right-circle-fill"></i>
                                            </button>
                                            <% if ordrparticipant && ordrparticipant.preferredlocale %>
                                                <%= ordraction.ordritem.menuitem.localised_name(ordrparticipant.preferredlocale) %>
                                            <% else %>
                                                <% if menuparticipant && menuparticipant.preferredlocale %>
                                                    <%= ordraction.ordritem.menuitem.localised_name(menuparticipant.preferredlocale) %>
                                                <% else %>
                                                    <%= ordraction.ordritem.menuitem.name %>
                                                <% end %>
                                            <% end %>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <div class="d-flex w-100 overflow-hidden">
                                        <p class="text-muted text-truncate">
                                            <%= ordraction.ordrparticipant.name %>
                                        </p>
                                    </div>
                                </div>
                                <div class="col-2">
                                    <span class="text-muted float-end">
                                        <%= number_to_currency(ordraction.ordritem.menuitem.price, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                                    </span>
                                </div>
                            </div>
                        <% end %>
                    <% end %>
                <% end %>

                <div class="row" data-testid="order-total-row">
                    <div class="col-8">
                    </div>
                    <div class="col-2">
                        <b><%= t(".total")%>:</b>
                    </div>
                    <div class="col-2">
                        <span class="float-end" data-testid="order-total-amount"><b><%= number_to_currency(order.nett, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %></b></span>
                    </div>
                </div>
            <% end %>
          </div>
          <div class="modal-footer" style="padding: 16px; gap: 12px; justify-content: flex-end;">
            <button type="button" class="btn-touch-secondary" data-bs-dismiss="modal" aria-label="<%= t('common.close') %>"><%= t('.cancel') %></button>
            <% if order && order.addedCount > 0 %>
              <button id="confirm-order" type="button" data-bs-dismiss="modal" class="btn-touch-primary" data-testid="submit-order-btn"><%= t('.submit') %></button>
            <% else %>
              <button id="confirm-order" type="button" data-bs-dismiss="modal" class="btn-touch-primary" disabled data-testid="submit-order-btn"><%= t('.submit') %></button>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="modal fade" id="requestBillModal" tabindex="-1" aria-labelledby="requestBillModalLabel" data-controller="order-totals">
      <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-fullscreen">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="requestBillModalLabel"><%= t(".requestBill") %></h5>
          </div>
          <div class="modal-body">
                <% if order %>
                    <div class="row">
                        <div class="col-10">
                            <b><%= t('.item') %></b>
                        </div>
                        <div class="col-2">
                          <span class="float-end">
                            <b><%= t('.price') %></b>
                          </span>
                        </div>
                    </div>
                    <% if order.covercharge.to_f > 0 %>
                        <div class="row">
                            <div class="col-10">
                                <%= t('.cover_charge') %>
                            </div>
                            <div class="col-2">
                              <span class="float-end">
                                <%= number_to_currency(order.covercharge, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                              </span>
                            </div>
                        </div>
                    <% end %>
                    <div class="row">
                        <div class="col-10">
                            <%= t('.nett') %>
                        </div>
                        <div class="col-2">
                          <span class="float-end">
                            <%= number_to_currency(order.nett, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                          </span>
                        </div>
                    </div>
                    <hr>
                    <% if order.service.to_f > 0 %>
                        <div class="row">
                            <div class="col-10">
                                <%= t('.service') %>
                            </div>
                            <div class="col-2">
                              <span class="float-end">
                                <%= number_to_currency(order.service, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                              </span>
                            </div>
                        </div>
                    <% end %>
                    <% if order.tax.to_f > 0 %>
                        <div class="row">
                            <div class="col-10">
                                <%= t('.tax') %>
                            </div>
                            <div class="col-2">
                              <span class="float-end">
                                <%= number_to_currency(order.tax, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>
                              </span>
                            </div>
                        </div>
                    <% end %>
                    <div class="row">
                        <div class="col-10">
                        </div>
                        <div class="col-2">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-10">
                            <b><%= t('.total') %></b> <i>(<%= t('.excluding_tip') %>)</i>
                        </div>
                        <div class="col-2">
                          <span class="float-end">
                            <b><%= number_to_currency(order.gross, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %></b>
                          </span>
                        </div>
                    </div>
                <% end %>
          </div>
          <%= render partial: "smartmenus/modal_footer_primary", locals: { primary_id: 'request-bill', primary_text: t('.requestBill'), disabled: !(order && order.gross.to_f > 0) } %>
        </div>
      </div>
    </div>

    <div class="modal fade" id="payOrderModal" tabindex="-1" aria-labelledby="payOrderModalLabel" data-controller="order-totals">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="payOrderModalLabel"><%= t(".payBill") %></h5>
                </div>
                <div style='padding-right:0px' class="modal-body">
                    <form>
                        <div class="row">
                            <% if order %>
                                <div class="row">
                                    <div class="col-9">
                                        <b><%= t('.item') %></b>
                                    </div>
                                    <div class="col-3">
                                        <span class="float-end">
                                            <b><%= t('.price') %></b>
                                        </span>
                                    </div>
                                </div>
                                <% if order.covercharge.to_f > 0 %>
                                    <div class="row">
                                        <div class="col-10">
                                            <%= t('.cover_charge') %>
                                        </div>
                                        <div class="col-2">
                                          <span class="float-end">
                                            <span id="orderCoverCharge"><%= number_to_currency(order.covercharge, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %></span>
                                          </span>
                                        </div>
                                    </div>
                                <% end %>
                                <div class="row">
                                    <div class="col-9">
                                        <%= t('.nett') %>
                                    </div>
                                    <div class="col-3">
                                        <span class="float-end">
                                            <span id="orderNett"><%= number_to_currency(order.nett, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %></span>
                                        </span>
                                    </div>
                                </div>
                                <% if order.service.to_f > 0 %>
                                    <div class="row">
                                        <div class="col-9">
                                            <%= t('.service') %>
                                        </div>
                                        <div class="col-3">
                                            <span class="float-end">
                                                <span id="orderService"><%= number_to_currency(order.service, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %></span>
                                            </span>
                                        </div>
                                    </div>
                                <% end %>
                                <% if order.tax.to_f > 0 %>
                                    <div class="row">
                                        <div class="col-9">
                                            <%= t('.tax') %>
                                        </div>
                                        <div class="col-3">
                                            <span class="float-end">
                                                <span id="orderTax"><%= number_to_currency(order.tax, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %></span>
                                            </span>
                                        </div>
                                    </div>
                                <% end %>
                                <div class="row">
                                    <div class="col-9">
                                    </div>
                                    <div class="col-3">
                                        <hr>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-9">
                                        <b><%= t('.total') %></b> <i>(<%= t('.excluding_tip') %>)</i>
                                    </div>
                                    <div class="col-3">
                                        <span class="float-end">
                                            <b><%= restaurantCurrency.symbol ? restaurantCurrency.symbol : "" %><span id="orderGross"><%= number_to_currency(order.gross, unit: "") %></span></b>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <p></p>
                                        <span class="float-end">
                                            <div style="position:relative;left:15px" class="btn-toolbar btn-toolbar-sm mb-3" role="toolbar" aria-label="<%= t('.tip_options') %>">
                                                <div class="btn-group btn-group-sm mr-2" role="group" aria-label="First group">
                                                    <% order.menu.restaurant.tips.sort_by(&:percentage).each do |tip| %>
                                                        <button type="button" class="btn-touch-secondary btn-touch-sm"><span class="tipPreset"><%= tip.percentage %></span>%</button>
                                                    <% end %>
                                                    <input id="tipNumberField" style="width:80px" type="number" min="0.00" max="<%= number_to_currency(order.gross, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %>" class="form-control float-end text-end" id="tip" value="0.00">
                                                </div>
                                            </div>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-9">
                                    </div>
                                    <div class="col-3">
                                        <hr>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-9">
                                        <b><%= t('.total') %></b> <i>(<%= t('.including_tip') %>)</i>
                                    </div>
                                    <div class="col-3">
                                        <span class="float-end">
                                            <b><span id="orderGrandTotal"><%= number_to_currency(order.gross, unit: restaurantCurrency.symbol ? restaurantCurrency.symbol : "") %></span></b>
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <p></p>
                                    <div style='display: flex;justify-content: center;' class="col-12">
                                        <button id="refreshPaymentLink" type="button" class="btn-touch-dark" style="min-width: 200px;"><%= t('.payment_link') %></button>
                                    </div>
                                </div>
                                <div class="row">
                                    <p></p>
                                    <div class="row">
                  <p></p>
                  <div style='display: flex;justify-content: center;' class="col-12">
                    <div id="wallet-button-container"
                         data-controller="stripe-wallet"
                         data-stripe-wallet-open-order-id-value="<%= order&.id %>"
                         data-stripe-wallet-amount-cents-value="<%= order&.grossInCents %>"
                         data-stripe-wallet-currency-value="<%= restaurantCurrency.code %>"></div>
                  </div>
                </div>
                                <div class="row">
                                    <p></p>
                                    <p></p>
                                    <div style='display: flex;justify-content: center;' class="col-12">
                                        <input type="hidden" id="openOrderId" value="<%= order.id %>">
                                        <input type="hidden" id="paymentAmount" value="<%= order.grossInCents %>">
                                        <input type="hidden" id="paymentCurrency" value="<%= restaurantCurrency.code %>">
                                        <input type="hidden" id="paymentRestaurantName" value="<%= t('.bill_prefix') %> <%= order.restaurant.name %>">
                                        <input type="hidden" id="paymentRestaurantId" value="<%= order.restaurant.id %>">
                                        <span style='display:none' id="qrIcon"><%= image_url('qr-icon.svg') %></span>
                                        <span style='display:none' id="paymentlink"></span>
                                        <a id="paymentAnchor" target="_blank" href="">
                                            <span id="paymentQR"></span>
                                        </a>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </form>
                </div>
                <%= render partial: "smartmenus/modal_footer_primary", locals: { primary_id: 'pay-order-confirm', primary_text: t('.confirmPayment'), disabled: !(order && order.gross.to_f > 0) } %>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addNameToParticipantModal" tabindex="-1" aria-labelledby="addItemToOrderModalLabel">
        <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered  modal-fullscreen">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="addNameToParticipantModalLabel"><%= t(".customiseOrderWithName") %></h1>
                </div>
                <div class="modal-body">
                    <form>
                        <input type="hidden" class="form-control" id="ordr_id">
                          <div class="form-group row">
                            <div class="col-3">
                            <label for="name" class="form-label"><%= t('.name_label') %></label>
                            </div>
                            <div class="col-9">
                            <input type="text" class="form-control" id="name">
                            </div>
                          </div>
                    </form>
                </div>
                <div class="modal-footer modal-footer-spaced">
                    <button type="button" class="btn-touch-secondary" data-bs-dismiss="modal" aria-label="Close"><%= t(".cancel") %></button>
                    <button id="addNameToParticipantButton" type="button" class="btn-touch-primary" data-bs-dismiss="modal"><i class="bi bi-plus"></i> <%= t(".add") %></button>
                </div>
            </div>
        </div>
    </div>
</div>