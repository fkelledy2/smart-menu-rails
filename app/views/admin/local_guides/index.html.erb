<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Local Guides</h1>
    <%= link_to 'New Guide', new_admin_local_guide_path, class: 'btn btn-dark' %>
  </div>

  <ul class="nav nav-tabs mb-4">
    <li class="nav-item">
      <%= link_to 'All', admin_local_guides_path, class: "nav-link #{'active' unless params[:status].present?}" %>
    </li>
    <% LocalGuide.statuses.keys.each do |s| %>
      <li class="nav-item">
        <%= link_to s.titleize, admin_local_guides_path(status: s), class: "nav-link #{'active' if params[:status] == s}" %>
      </li>
    <% end %>
  </ul>

  <% if @local_guides.any? %>
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Title</th>
          <th>City</th>
          <th>Category</th>
          <th>Status</th>
          <th>Updated</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @local_guides.each do |guide| %>
          <tr>
            <td><%= link_to guide.title, admin_local_guide_path(guide) %></td>
            <td><%= guide.city %>, <%= guide.country %></td>
            <td><%= guide.category || 'â€”' %></td>
            <td>
              <% badge_class = { 'draft' => 'bg-warning', 'published' => 'bg-success', 'archived' => 'bg-secondary' }[guide.status] || 'bg-light' %>
              <span class="badge <%= badge_class %>"><%= guide.status.titleize %></span>
            </td>
            <td><%= time_ago_in_words(guide.updated_at) %> ago</td>
            <td>
              <%= link_to 'Edit', edit_admin_local_guide_path(guide), class: 'btn btn-sm btn-outline-dark' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted text-center py-5">No guides found.</p>
  <% end %>
</div>
