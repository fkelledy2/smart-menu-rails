<div class="container-fluid px-4 py-5">
  <div class="row">
    <div class="col-12">

      <!-- Header Section -->
      <div class="text-center mb-4">
        <h1 class="pb-2 border-bottom d-inline-block"><%= t(".account") %></h1>
        <p class="text-muted mt-3">Update your account information and password</p>
      </div>

      <!-- Account Settings Card -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-body px-4 py-4 px-md-5 py-md-5">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

            <!-- Error Messages -->
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Account Information Section -->
            <h5 class="mb-3 pb-2 border-bottom">Account Information</h5>

            <!-- Full Name Field -->
            <div class="mb-4">
              <label for="user_name" class="form-label fw-semibold">
                <i class="bi bi-person me-2"></i>Full Name
              </label>
              <%= f.text_field :name,
                  autofocus: true,
                  placeholder: t(".fullName"),
                  class: 'form-control form-control-lg',
                  id: 'user_name' %>
            </div>

            <!-- Email Field -->
            <div class="mb-4">
              <label for="user_email" class="form-label fw-semibold">
                <i class="bi bi-envelope me-2"></i>Email Address
              </label>
              <%= f.email_field :email,
                  placeholder: t(".emailAddress"),
                  class: 'form-control form-control-lg',
                  id: 'user_email' %>
            </div>

            <% if 1==2 %>
            <!-- Avatar Upload (Disabled) -->
            <div class="mb-4">
              <%= f.label :avatar, class: "form-label fw-semibold" %>
              <%= f.file_field :avatar, accept:'image/*', class: 'form-control' %>
            </div>
            <%= image_tag avatar_path(f.object), class: "rounded border shadow-sm d-block mx-auto my-3" %>
            <% end %>

            <!-- Email Confirmation Alert -->
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="alert alert-warning mb-4" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Pending confirmation:</strong> <%= resource.unconfirmed_email %>
              </div>
            <% end %>

            <!-- Change Password Section -->
            <h5 class="mb-3 pb-2 border-bottom mt-4">Change Password</h5>
            <p class="text-muted small mb-3">Leave blank to keep your current password</p>

            <div data-controller="password-confirmation-toggle">
              <!-- New Password Field -->
              <div class="mb-4">
              <label for="user_password" class="form-label fw-semibold">
                <i class="bi bi-lock me-2"></i>New Password
              </label>
              <%= f.password_field :password,
                  autocomplete: "new-password",
                  placeholder: "New password",
                  class: 'form-control form-control-lg',
                  data: { "password-confirmation-toggle-target": "password", action: "input->password-confirmation-toggle#toggle" },
                  id: 'user_password' %>
              </div>

              <!-- Confirm New Password Field -->
              <div class="mb-4 d-none" data-password-confirmation-toggle-target="confirmationWrapper">
              <label for="user_password_confirmation" class="form-label fw-semibold">
                <i class="bi bi-lock-fill me-2"></i>Confirm New Password
              </label>
              <%= f.password_field :password_confirmation,
                  autocomplete: "new-password",
                  placeholder: "Confirm new password",
                  class: 'form-control form-control-lg',
                  data: { "password-confirmation-toggle-target": "confirmation" },
                  id: 'user_password_confirmation' %>
              </div>
            </div>

            <!-- Current Password Field (Required) -->
            <div class="mb-4">
              <label for="user_current_password" class="form-label fw-semibold">
                <i class="bi bi-shield-lock me-2"></i>Current Password <span class="text-danger">*</span>
              </label>
              <%= f.password_field :current_password,
                  autocomplete: "current-password",
                  placeholder: t(".currentPassword"),
                  class: 'form-control form-control-lg',
                  id: 'user_current_password' %>
              <div class="form-text small"><%= t(".currentPasswordHelp") %></div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <%= f.submit t(".saveChanges"), class: 'btn btn-danger btn-lg' %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Danger Zone Card -->
      <div class="card border-danger mb-4">
        <div class="card-header bg-danger text-white">
          <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Danger Zone</h5>
        </div>
        <div class="card-body">
          <p class="mb-3">Once you deactivate your account, there is no going back. Please be certain.</p>
          <%= link_to t(".deactivateMyAccount"),
              registration_path(resource_name),
              data: {
                turbo_method: :delete,
                turbo_confirm: t(".deactivateMyAccountAreYouSure")
              },
              class: 'btn btn-outline-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
