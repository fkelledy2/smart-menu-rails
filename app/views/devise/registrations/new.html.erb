<div class="container px-4 py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-11 col-md-9 col-lg-6 col-xl-5">

      <!-- Header Section -->
      <div class="text-center mb-4">
        <h1 class="pb-2 border-bottom d-inline-block"><%= t(".signUp") %></h1>
        <p class="text-muted mt-3">Create your account to get started with mellow.menu</p>
      </div>

      <!-- Sign Up Card -->
      <div data-testid="signup-card">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { testid: 'signup-form' } }) do |f| %>

            <!-- Error Messages -->
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Full Name Field -->
            <div class="mb-4">
              <label for="user_name" class="form-label fw-semibold">
                <i class="bi bi-person me-2"></i>Full Name
              </label>
              <%= f.text_field :name,
                  autofocus: true,
                  placeholder: t(".fullName"),
                  class: 'form-control form-control-lg',
                  id: 'user_name',
                  data: { testid: 'signup-name-input' } %>
            </div>

            <!-- Email Field -->
            <div class="mb-4">
              <label for="user_email" class="form-label fw-semibold">
                <i class="bi bi-envelope me-2"></i>Email Address
              </label>
              <%= f.email_field :email,
                  autofocus: false,
                  placeholder: t(".emailAddress"),
                  class: 'form-control form-control-lg',
                  id: 'user_email',
                  data: { testid: 'signup-email-input' } %>
            </div>

            <!-- Password Field -->
            <div class="mb-4">
              <label for="user_password" class="form-label fw-semibold">
                <i class="bi bi-lock me-2"></i>Password
              </label>
              <%= f.password_field :password,
                  autocomplete: "off",
                  placeholder: t(".password"),
                  class: 'form-control form-control-lg',
                  id: 'user_password',
                  data: { testid: 'signup-password-input' } %>
              <div class="form-text small">Minimum 6 characters</div>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-4">
              <label for="user_password_confirmation" class="form-label fw-semibold">
                <i class="bi bi-lock-fill me-2"></i>Confirm Password
              </label>
              <%= f.password_field :password_confirmation,
                  autocomplete: "off",
                  placeholder: t(".confirmPassword"),
                  class: 'form-control form-control-lg',
                  id: 'user_password_confirmation',
                  data: { testid: 'signup-password-confirmation-input' } %>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <%= f.submit "Create Account", class: "btn btn-danger btn-lg", data: { testid: 'signup-submit-btn' } %>
            </div>
          <% end %>

          <!-- Divider -->
          <div class="position-relative my-4">
            <hr>
            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
              or
            </span>
          </div>
          <!-- Social Sign-In -->
          <div class="my-3">
          <div class="row g-2">
            <div class="col-6">
              <%= button_to 'Sign up with Google', user_google_oauth2_omniauth_authorize_path, method: :post, class: 'btn btn-outline-dark btn-lg w-100', data: { testid: 'signin-google-btn' } %>
            </div>
            <div class="col-6">
              <%= button_to 'Sign up with Apple', user_apple_omniauth_authorize_path, method: :post, class: 'btn btn-outline-dark btn-lg w-100', data: { testid: 'signin-apple-btn' } %>
            </div>
          </div>
        </div>

          <!-- Divider -->
          <div class="position-relative my-4">
            <hr>
            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
              Already have an account?
            </span>
          </div>

          <!-- Sign In Link -->
          <div class="d-grid">
            <%= link_to "Sign In", new_user_session_path, class: "btn btn-outline-dark btn-lg", data: { testid: 'login-link' } %>
          </div>
      </div>

      <!-- Additional Links -->
      <div class="text-center text-muted small">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
