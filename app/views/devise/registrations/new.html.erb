<div class="row">
  <div class="col-lg-4 offset-lg-4">
    <br>
    <h1 class="text-center"><%= t(".signUp") %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.text_field :name, autofocus: false, class: 'form-control', placeholder: t(".fullName") %>
      </div>

      <div class="mb-3">
        <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: t(".emailAddress") %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: t(".password") %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: t(".confirmPassword") %>
      </div>

      <div class="mb-3 d-grid">
        <%= f.submit "Sign up", class: "btn btn-danger btn-lg" %>
      </div>
    <% end %>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
