<div class="container px-3 py-4">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-11 col-md-8 col-lg-6 col-xl-5">

      <!-- Header Section -->
      <div class="text-center mb-4">
        <h1 class="pb-2 border-bottom d-inline-block"><%= t(".signUp") %></h1>
        <p class="text-muted mt-3">Create your account.</p>
      </div>

      <!-- Sign Up Card -->
      <div data-testid="signup-card">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: { testid: 'signup-form' } }) do |f| %>

            <!-- Error Messages -->
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Full Name Field -->
            <div class="mb-3">
              <label for="user_name" class="visually-hidden">
                Full Name
              </label>
              <%= f.text_field :name,
                  autofocus: true,
                  placeholder: t(".fullName"),
                  class: 'form-control form-control-lg',
                  id: 'user_name',
                  data: { testid: 'signup-name-input' } %>
            </div>

            <!-- Email Field -->
            <div class="mb-3">
              <label for="user_email" class="visually-hidden">
                Email Address
              </label>
              <%= f.email_field :email,
                  autofocus: false,
                  placeholder: t(".emailAddress"),
                  class: 'form-control form-control-lg',
                  id: 'user_email',
                  data: { testid: 'signup-email-input' } %>
            </div>

            <!-- Password Field -->
            <div class="mb-3">
              <label for="user_password" class="visually-hidden">
                Password
              </label>
              <%= f.password_field :password,
                  autocomplete: "off",
                  placeholder: t(".password"),
                  class: 'form-control form-control-lg',
                  id: 'user_password',
                  data: { testid: 'signup-password-input' } %>
              <div class="form-text small">Minimum 6 characters</div>
            </div>

            <!-- Confirm Password Field -->
            <div class="mb-3">
              <label for="user_password_confirmation" class="visually-hidden">
                Confirm Password
              </label>
              <%= f.password_field :password_confirmation,
                  autocomplete: "off",
                  placeholder: t(".confirmPassword"),
                  class: 'form-control form-control-lg',
                  id: 'user_password_confirmation',
                  data: { testid: 'signup-password-confirmation-input' } %>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <%= f.submit "Create Account", class: "btn btn-danger btn-lg", data: { testid: 'signup-submit-btn' } %>
            </div>
          <% end %>

          <!-- Divider -->
          <div class="text-center">
            <span class="text-muted">Already have an account?</span>
            <%= link_to "Sign in", new_user_session_path, class: "text-decoration-none fw-semibold", data: { testid: 'login-link' } %>
          </div>
      </div>

      <!-- Additional Links -->
      <div class="text-center text-muted small">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
