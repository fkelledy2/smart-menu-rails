<div class="row">
  <div class="col-lg-4 offset-lg-4">
    <br>
    <h1 class="text-center"><%= t(".login") %></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-3">
        <%= f.email_field :email, autofocus: true, placeholder: t(".emailAddress"), class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: t(".password"), class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <label class="form-check-label">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= t(".rememberMe") %>
              </label>
            </div>
      <% end %>

      <div class="mb-3 d-grid">
            <%= f.submit t(".login"), class: "btn btn-danger btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
