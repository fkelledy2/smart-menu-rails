<div class="container px-4 py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-11 col-md-9 col-lg-6 col-xl-5">

      <!-- Header Section -->
      <div class="text-center mb-4">
        <h1 class="pb-2 border-bottom d-inline-block">Forgot Your Password?</h1>
        <p class="text-muted mt-3">No worries! Enter your email address and we'll send you instructions to reset your password.</p>
      </div>

      <!-- Reset Password Card -->
      <div data-testid="forgot-password-card">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { testid: 'forgot-password-form' } }) do |f| %>

            <!-- Error Messages -->
            <%= render "devise/shared/error_messages", resource: resource %>

            <!-- Email Field -->
            <div class="mb-4">
              <label for="user_email" class="form-label fw-semibold">
                <i class="bi bi-envelope me-2"></i>Email Address
              </label>
              <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  placeholder: 'Enter your email address',
                  class: 'form-control form-control-lg',
                  id: 'user_email',
                  data: { testid: 'forgot-password-email-input' } %>
              <div class="form-text small">We'll send password reset instructions to this email</div>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <%= f.submit "Send Reset Instructions", class: 'btn btn-danger btn-lg', data: { testid: 'forgot-password-submit-btn' } %>
            </div>
          <% end %>

          <!-- Divider -->
          <div class="position-relative my-4">
            <hr>
            <span class="position-absolute top-50 start-50 translate-middle bg-white px-3 text-muted small">
              Remember your password?
            </span>
          </div>

          <!-- Back to Sign In Link -->
          <div class="d-grid">
            <%= link_to "Back to Sign In", new_user_session_path, class: "btn btn-outline-dark btn-lg", data: { testid: 'back-to-login-link' } %>
          </div>
      </div>

      <!-- Additional Links -->
      <div class="text-center text-muted small">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
