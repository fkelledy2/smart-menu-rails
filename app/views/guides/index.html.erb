<div class="container py-5">
  <h1 class="mb-4">Local Restaurant Guides</h1>
  <p class="lead text-muted mb-5">AI-powered guides grounded in real menu data. Discover the best restaurants by city and cuisine.</p>

  <div class="row g-4">
    <% @guides.each do |guide| %>
      <div class="col-md-6 col-lg-4">
        <a href="<%= guide_path(slug: guide.slug) %>" class="text-decoration-none">
          <div class="card h-100 shadow-sm border-0">
            <div class="card-body">
              <h5 class="card-title text-dark"><%= guide.title %></h5>
              <p class="card-text text-muted small"><%= guide.content.to_s.truncate(120, separator: ' ') %></p>
              <div class="d-flex justify-content-between align-items-center">
                <small class="text-muted"><%= guide.city %>, <%= guide.country %></small>
                <% if guide.category.present? %>
                  <span class="badge bg-light text-dark"><%= guide.category %></span>
                <% end %>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>

  <% if @guides.empty? %>
    <div class="text-center text-muted py-5">
      <p>No guides available yet. Check back soon!</p>
    </div>
  <% end %>
</div>
