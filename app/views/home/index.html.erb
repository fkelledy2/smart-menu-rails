                  <% if plan.attribute1 %>
                      <%= t_html(plan.attribute1, locations: plan.locations) %>
                  <% else %>
                      <li>&nbsp</li>
                  <% end %>
                  <% if plan.attribute2 %>
                      <%= t_html(plan.attribute2, locations: plan.getLocations, menus: plan.getMenusPerLocation, dishes: plan.getItemsPerMenu, languages: plan.getLanguages) %>
                  <% else %>
                      <li>&nbsp</li>
                  <% end %>
