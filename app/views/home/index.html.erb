          <div class="hero-caption carousel-caption text-start">
            <h1><%=t(".ctaTitle1")%></h1>
            <p><strong><%=t(".ctaBody1")%></strong></p>
            <p><%= link_to t(".signUp"), new_user_registration_path, class: "btn btn-danger" %></p>
          </div>
        </div>
      </div>
