<div class="page-header">
  <div class="row">
    <div class="col-10">
        <h1><%= t(".size") %></h1>
    </div>
    <div class="col-2">
        <span class="float-end">
          <%= link_to restaurant_sizes_path(@size.restaurant), class: 'btn btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
          <%= link_to edit_restaurant_size_path(@size.restaurant, @size), class: 'btn btn-dark' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: [@size.restaurant, @size]) do |form| %>
  <div class="form-group row">
    <%= form.label :size, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.text_field :size, class: 'form-control', disabled: true %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :name, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :name, class: 'form-control', disabled: 'disabled'  %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :description, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_area :description, class: 'form-control', disabled: 'disabled'  %>
    </div>
  </div>
<% end %>
