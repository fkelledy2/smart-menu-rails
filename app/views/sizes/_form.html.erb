<%= form_with(model: [@restaurant, size]) do |form| %>
  <% if @futureParentRestaurant %>
    <%= form.hidden_field :restaurant_id, value: @futureParentRestaurant.id %>
  <% else %>
    <%= form.hidden_field :restaurant_id %>
  <% end %>
  
  <!-- Size Type -->
  <div class="form-group-2025 mb-4">
    <%= form.label :size, class: 'form-label-2025' do %>
      <%= t('.size_type', default: 'Size Type') %>
      <span class="text-danger">*</span>
    <% end %>
    <%= form.select :size, 
        options_for_select(Size.sizes.keys.to_a, form.object.size), 
        {}, 
        class: 'form-control-2025',
        required: true %>
    <div class="form-help-2025">
      <%= t('.size_type_help', default: 'Select the general size category') %>
    </div>
  </div>
  
  <!-- Name -->
  <div class="form-group-2025 mb-4">
    <%= form.label :name, class: 'form-label-2025' do %>
      <%= t('.name', default: 'Display Name') %>
      <span class="text-danger">*</span>
    <% end %>
    <%= form.text_field :name, 
        class: 'form-control-2025',
        placeholder: t('.name_placeholder', default: 'e.g., Large, 16oz, Family Size'),
        required: true %>
    <div class="form-help-2025">
      <%= t('.name_help', default: 'This is how the size will appear to customers') %>
    </div>
  </div>
  
  <!-- Description -->
  <div class="form-group-2025 mb-4">
    <%= form.label :description, class: 'form-label-2025' do %>
      <%= t('.description', default: 'Description') %>
    <% end %>
    <%= form.text_area :description, 
        class: 'form-control-2025',
        rows: 3,
        placeholder: t('.description_placeholder', default: 'Optional details about this size...') %>
    <div class="form-help-2025">
      <%= t('.description_help', default: 'Optional: Add any additional details') %>
    </div>
  </div>
  
  <!-- Error Messages -->
  <% if size.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
        <i class="bi bi-exclamation-triangle"></i>
        <%= t('common.errors', default: 'Errors') %>
      </h6>
      <ul class="mb-0">
        <% size.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <!-- Form Actions -->
  <div class="d-flex justify-content-end gap-2 pt-3 border-top">
    <%= link_to restaurant_sizes_path(@restaurant), 
        class: 'btn-2025 btn-2025-ghost btn-2025-md' do %>
      <%= t('common.cancel', default: 'Cancel') %>
    <% end %>
    
    <%= form.submit t('common.save', default: 'Save'), 
        class: 'btn-2025 btn-2025-primary btn-2025-md' %>
  </div>
<% end %>