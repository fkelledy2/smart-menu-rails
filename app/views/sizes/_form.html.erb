<%= form_with(model: [@restaurant, size]) do |form| %>
  <% if @futureParentRestaurant %>
    <%= form.hidden_field :restaurant_id, value: @futureParentRestaurant.id %>
  <% else %>
    <%= form.hidden_field :restaurant_id %>
  <% end %>

  <!-- Size Type -->
  <div class="form-group-2025 mb-4">
    <%= form.label :size, class: 'form-label-2025' do %>
      <%= t('.size_type') %>
      <span class="text-danger">*</span>
    <% end %>
    <%= form.select :size,
        options_for_select(Size.sizes.keys.to_a, form.object.size),
        {},
        class: 'form-control-2025',
        required: true %>
    <div class="form-help-2025">
      <%= t('.size_type_help') %>
    </div>
  </div>

  <!-- Name -->
  <div class="form-group-2025 mb-4">
    <%= form.label :name, class: 'form-label-2025' do %>
      <%= t('.name') %>
      <span class="text-danger">*</span>
    <% end %>
    <%= form.text_field :name,
        class: 'form-control-2025',
        placeholder: t('.name_placeholder'),
        required: true %>
    <div class="form-help-2025">
      <%= t('.name_help') %>
    </div>
  </div>

  <!-- Description -->
  <div class="form-group-2025 mb-4">
    <%= form.label :description, class: 'form-label-2025' do %>
      <%= t('.description') %>
    <% end %>
    <%= form.text_area :description,
        class: 'form-control-2025',
        rows: 3,
        placeholder: t('.description_placeholder') %>
    <div class="form-help-2025">
      <%= t('.description_help') %>
    </div>
  </div>

  <!-- Error Messages -->
  <% if size.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h6 class="alert-heading">
        <i class="bi bi-exclamation-triangle"></i>
        <%= t('common.errors') %>
      </h6>
      <ul class="mb-0">
        <% size.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Form Actions -->
  <div class="d-flex justify-content-end gap-2 pt-3 border-top">
    <% if defined?(turbo_frame_request?) && turbo_frame_request? %>
      <%= link_to edit_restaurant_path((@restaurant || size.restaurant), section: 'sizes'),
          class: 'btn-2025 btn-2025-ghost btn-2025-md',
          data: { turbo_frame: 'restaurant_content' } do %>
        <%= t('common.cancel') %>
      <% end %>
    <% else %>
      <%= link_to restaurant_sizes_path(@restaurant),
          class: 'btn-2025 btn-2025-ghost btn-2025-md' do %>
        <%= t('common.cancel') %>
      <% end %>
    <% end %>

    <%= form.submit t('common.save'),
        class: 'btn-2025 btn-2025-primary btn-2025-md' %>
  </div>
<% end %>
