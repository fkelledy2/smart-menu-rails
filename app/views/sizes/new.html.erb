<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
          <h1>New Size</h1>
    </div>
    <div class="col-sm-2">
        <% if @size.persisted? %>
          <%= link_to "Cancel", @size, class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to "Cancel", sizes_path, class: "float-end btn btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'form', size: @size %>
