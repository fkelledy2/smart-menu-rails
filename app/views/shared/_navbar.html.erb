<% if current_user != true_user %>
  <div class="alert alert-warning text-center">
    <%= t('.impersonated_as') %> <b><%= current_user.name %> (<%= current_user.email %>)</b>
    <%= button_to admin_impersonation_path,
          method: :delete,
          form: { class: 'd-inline', data: { testid: 'stop-impersonation-form' } },
          class: 'btn btn-link p-0 align-baseline',
          data: { testid: 'stop-impersonation-btn' } do %><i class="fas fa-times" aria-hidden="true"></i> <%= t('.logout') %> <% end %>
  </div>
<% end %>

<% station_screen = controller_name == 'kitchen_dashboard' || controller_name == 'bar_dashboard' %>

<nav class="p-0 navbar navbar-expand-md navbar-light bg-light <%= 'sticky-top' if station_screen %>">
  <div class="container-fluid mx-auto">
    <%= link_to root_path, class: "navbar-brand" do %>
        <%= image_tag "qr-icon.svg", height:'56' %><%= image_tag("logo.png", height:'56') unless station_screen %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarsExample04" aria-expanded="false" aria-label="<%= t('.toggle_navigation') %>">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarMain">
      <ul class="navbar-nav me-auto mt-2 mt-md-0">
        <% if station_screen %>
          <li class="nav-item d-flex align-items-center">
            <span class="navbar-text fw-semibold">
              <i class="bi bi-shop"></i>
              <%= @restaurant&.name %>
              <%= controller_name == 'kitchen_dashboard' ? 'Kitchen' : 'Bar' %>
            </span>
          </li>
        <% elsif current_user %>
            <li class="z-index-high nav-item dropdown">
              <%= link_to "#", id: "navbar-dropdown", class: "nav-link dropdown-toggle", data: { target: "nav-account-dropdown", bs_toggle: "dropdown" }, aria: { haspopup: true, expanded: false } do %>
                <%= t(".restaurants") %>
              <% end %>
              <div id="nav-account-dropdown" class="dropdown-menu" aria-labelledby="navbar-dropdown">
                <%= link_to restaurants_path, class: "dropdown-item" do %>
                    <%= t(".restaurants") %>
                <% end %>
                <% restaurants_list = @restaurants || [] %>
                <% if restaurants_list.count > 0 %>
                <hr class="dropdown-divider">
                <% restaurants_list.each do |restaurant| %>
                    <%= link_to edit_restaurant_path(id: restaurant.id), class: "dropdown-item" do %>
                        <%= restaurant.name %>
                    <% end %>
                <% end %>
                <% end %>
              </div>
            </li>
        <% end %>
      </ul>
      <ul class="navbar-nav">
        <% if station_screen %>
          <li class="nav-item d-flex align-items-center me-2">
            <span class="badge bg-secondary" title="Staff online">
              <i class="bi bi-people me-1"></i>
              <span id="kitchen-presence-count">0</span>
            </span>
          </li>
          <li class="nav-item d-flex align-items-center me-3">
            <span id="current-time" class="navbar-text fw-semibold"></span>
          </li>
        <% end %>
        <% if user_signed_in? %>
          <li class="z-index-high nav-item dropdown">
            <%= link_to "#", id: "navbar-dropdown", class: "nav-link dropdown-toggle", data: { target: "nav-account-dropdown", bs_toggle: "dropdown" }, aria: { haspopup: true, expanded: false } do %>
              <%= current_user.name %>
              <% if 1==2 %>
                <%= image_tag avatar_path(current_user, size: 40), height: 20, width: 20, class: "rounded" %>
              <% end %>
            <% end %>
            <div id="nav-account-dropdown" class="dropdown-menu dropdown-menu-end" aria-labelledby="navbar-dropdown">
              <%= link_to t(".settings"), edit_user_registration_path, class: "dropdown-item" %>
              <% if @userplan && @userplan.id %>
                  <%= link_to t(".billing"), edit_userplan_path(@userplan), class: "dropdown-item" %>
              <% end %>
              <% if current_user.admin? && respond_to?(:madmin_root_path) %>
                <div class="dropdown-divider"></div>
                <h6 class="dropdown-header"><i class="bi bi-shield-lock me-2"></i><%= t(".adminArea") %></h6>
                <%= link_to madmin_root_path, class: "dropdown-item ps-4" do %>
                  <i class="bi bi-speedometer2 me-2"></i><%= t(".dashboard") %>
                <% end %>
                <% if current_user.respond_to?(:super_admin?) && current_user.super_admin? %>
                  <%= link_to new_admin_impersonation_path, class: "dropdown-item ps-4" do %>
                    <i class="bi bi-person-badge me-2"></i>Act as user
                  <% end %>
                <% end %>
                <%= link_to testimonials_path, class: "dropdown-item ps-4" do %>
                  <i class="bi bi-chat-quote me-2"></i><%= t(".testimonials") %>
                <% end %>
                <%= link_to hero_images_path, class: "dropdown-item ps-4" do %>
                  <i class="bi bi-image me-2"></i><%= t(".heroImages") %>
                <% end %>
              <% end %>
              <div class="dropdown-divider"></div>
              <%= button_to t(".logout"), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>

        <% else %>
          <li class="z-index-high nav-item"><%= link_to t(".signUp"), new_user_registration_path, class: "nav-link" %></li>
          <li class="z-index-high nav-item"><%= link_to t(".login"), new_user_session_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
