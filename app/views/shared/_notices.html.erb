<% flash.each do |msg_type, message| %>
  <div class="container">
    <div style="top:5px;padding-top:1px!important;padding-bottom:1px !important;" class="alert alert-sm <%= bootstrap_class_for(msg_type) %> alert-dismissible fade show" role="alert">
      <%= message %>
      <button type="button" style="top:-15px!important" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
<% end %>
