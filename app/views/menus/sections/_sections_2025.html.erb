<%# 
  Menu Sections Section
  Manage menu sections (categories)
%>

<% menu = local_assigns[:menu] || @menu %>
<% restaurant = menu.restaurant %>

<!-- Quick Actions Card -->
<div class="quick-actions-card">
  <h2 class="quick-actions-title">
    <i class="bi bi-lightning-charge"></i>
    <%= t('.quick_actions', default: 'Quick Actions') %>
  </h2>
  
  <div class="quick-actions-grid">
    <%= link_to new_restaurant_menu_menusection_path(restaurant, menu), class: 'quick-action-btn' do %>
      <i class="bi bi-plus-circle"></i>
      <span><%= t('.add_section', default: 'Add Section') %></span>
    <% end %>
    
    <% if menu.smartmenu&.slug %>
      <%= link_to smartmenu_path(menu.smartmenu.slug), 
          class: 'quick-action-btn',
          target: '_blank',
          title: 'Preview menu as staff (authenticated view)' do %>
        <i class="bi bi-eye"></i>
        <span><%= t('.preview_staff', default: 'Preview (Staff)') %></span>
      <% end %>
      
      <%= link_to smartmenu_path(menu.smartmenu.slug, view: 'customer'), 
          class: 'quick-action-btn quick-action-btn-secondary',
          target: '_blank',
          rel: 'noopener noreferrer',
          title: 'Preview menu as customers see it (authenticated as staff but viewing customer interface)' do %>
        <i class="bi bi-eye-slash"></i>
        <span><%= t('.preview_customer', default: 'Preview (Customer)') %></span>
      <% end %>
    <% end %>
  </div>
</div>

<!-- Sections List -->
<div class="content-card-2025 py-4">
  <h2 class="content-card-title">
    <i class="bi bi-layout-text-sidebar"></i>
    <%= t('.menu_sections', default: 'Menu Sections') %>
  </h2>
  
  <p class="text-muted mb-4">
    <%= t('.sections_description', default: 'Organize your menu into sections like Appetizers, Main Courses, Desserts, etc.') %>
  </p>
  
  <% if menu.menusections.any? %>
    <!-- Sections Table -->
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th style="width: 40px;"></th>
            <th><%= t('.name', default: 'Name') %></th>
            <th class="text-end"><%= t('.items', default: 'Items') %></th>
            <th class="text-end">
              <span class="btn-2025 btn-2025-ghost btn-2025-sm">
                <i class="bi bi-gear"></i>
              </span>
            </th>
          </tr>
        </thead>
        <tbody data-controller="sortable"
               data-sortable-url-value="<%= reorder_restaurant_menu_menusections_path(restaurant, menu) %>"
               data-sortable-handle-value=".section-handle">
          <% menu.menusections.order(:sequence).each do |section| %>
            <tr data-sortable-id="<%= section.id %>">
              <td class="section-handle" style="width: 40px; cursor: grab;">
                <i class="bi bi-grip-vertical text-muted"></i>
              </td>
              <td>
                <strong><%= section.name %></strong>
              </td>
              <td class="text-end">
                <%= section.menuitems.count %>
              </td>
              <td class="text-end">
                <%= link_to edit_restaurant_menu_menusection_path(restaurant, menu, section), 
                    class: 'btn-2025 btn-2025-ghost btn-2025-sm',
                    data: { turbo_frame: '_top' } do %>
                  <i class="bi bi-pencil"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-5">
      <i class="bi bi-layout-text-sidebar text-muted" style="font-size: 4rem;"></i>
      <h4 class="mt-3"><%= t('.no_sections', default: 'No sections yet') %></h4>
      <p class="text-muted">
        <%= t('.no_sections_desc', default: 'Add your first section to start building your menu') %>
      </p>
      <%= link_to new_restaurant_menu_menusection_path(restaurant, menu), 
          class: 'btn-2025 btn-2025-primary btn-2025-lg mt-3' do %>
        <i class="bi bi-plus-circle"></i>
        <%= t('.add_first_section', default: 'Add First Section') %>
      <% end %>
    </div>
  <% end %>
</div>

<style>
  /* Section drag handle styles */
  .section-handle {
    cursor: grab;
    user-select: none;
  }
  
  .section-handle:active {
    cursor: grabbing;
  }
  
  /* Sortable states */
  .sortable-ghost {
    opacity: 0.4;
    background: var(--color-primary-light);
  }
  
  .sortable-drag {
    opacity: 1;
    cursor: grabbing;
  }
</style>
