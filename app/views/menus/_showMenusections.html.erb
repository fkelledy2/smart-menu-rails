<div class="row">
  <div class="col-6">
    <h4><%= t('.sections') %></h4>
  </div>
  <div class="col-6 text-end">
    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
      <div class="btn-group" role="group">
        <button id="menusection-actions" type="button" class="btn btn-dark dropdown-toggle" disabled data-bs-toggle="dropdown" aria-expanded="false">
          <%= t('common.actions') %>
        </button>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="allergyn-actions">
          <li><a id="activate-menusection" class="dropdown-item" href="#"><%= t('common.activate') %></a></li>
          <li><a id="deactivate-menusection" class="dropdown-item" href="#"><%= t('common.deactivate') %></a></li>
        </ul>
      </div>
      <button type="button" class="btn btn-dark">
        <%= link_to new_restaurant_menu_menusection_path(@menu.restaurant, @menu), class: 'link-light' do %>
          <i class="bi bi-plus"></i>
        <% end %>
      </button>
    </div>
  </div>
</div>
<div class="table-container-spacing table-borderless" id="menu-menusection-table" data-bs-menu="<%= @menu.id %>" data-bs-restaurant="<%= @menu.restaurant.id %>">
</div>
