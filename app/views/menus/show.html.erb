<% if current_user %>
<div id="menuu" style="padding-bottom:10px;box-shadow: 0 4px 2px -2px gray;" class="sticky-top bg-white">
<% else %>
<div id="menuc" style="padding-bottom:10px;box-shadow: 0 4px 2px -2px gray;" class="sticky-top bg-white">
<% end %>
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="row">
            <div class="col-12">
                    <div style="padding-top:5px" class="row">
                        <div class="col-7">
                            <h2>
                                <%= @menu.restaurant.name %>
                                <% if current_user %>
                                    <%= link_to edit_menu_path(@menu), class: 'btn btn-sm btn-outline-secondary' do %>
                                        <i class="bi bi-pencil-fill"></i>
                                    <% end %>
                                <% end %>
                            </h2>
                        </div>
                        <div class="col-5">
                            <span class="float-end">
                                <% if @ordrparticipant && @ordrparticipant.name == nil %>
                                    <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-target="#addNameToParticipantModal">
                                      <i class="bi bi-person-fill-add"></i>
                                    </button>
                                <% else %>
                                    <% if @ordrparticipant && @ordrparticipant.name %>
                                            <b><%= @ordrparticipant.name %></b>
                                    <% end %>
                                <% end %>
                                <% if @tablesetting %>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">
                                        <%= @tablesetting.name %>
                                    </button>
                                <% end %>
                            </span>
                        </div>
                    </div>
            </div>
        </div>

        <div class="row">
            <div class="col-5">
                <h4>
                    <%= @menu.name %>
                    <% if current_user %>
                    <% else %>
                        <% if @ordrparticipant %>
                            <button type="button" class="btn btn-sm btn-light" data-bs-toggle="modal" data-bs-restaurant="<%= @menu.restaurant.id %>" data-bs-menu="<%= @menu.id %>" data-bs-target="#filterOrderModal"><i class="bi bi-filter"></i></button>
                        <% end %>
                    <% end %>
                </h4>
            </div>
            <div class="col-7">
                <span class="float-end">
                    <% if @tablesetting %>
                        <% if @openOrder %>
                            <% if @openOrder.status == 'opened' %>
                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-restaurant="<%= @menu.restaurant.id %>" data-bs-menu="<%= @menu.id %>" data-bs-target="#viewOrderModal">
                                    Order <i class="bi bi-cart"></i>:<%= number_to_currency(@openOrder.runningTotal) %>
                                </button>
                            <% end %>
                            <% if @openOrder.status == 'ordered' %>
                                <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-restaurant="<%= @menu.restaurant.id %>" data-bs-menu="<%= @menu.id %>" data-bs-target="#requestBillModal">
                                    Bill <i class="bi bi-receipt"></i></i>
                                </button>
                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-restaurant="<%= @menu.restaurant.id %>" data-bs-menu="<%= @menu.id %>" data-bs-target="#viewOrderModal">
                                    Order <i class="bi bi-cart"></i>:<%= number_to_currency(@openOrder.runningTotal) %>
                                </button>
                            <% end %>
                            <% if @openOrder.status == 'billrequested' %>
                                <% if current_user %>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-restaurant="<%= @menu.restaurant.id %>" data-bs-menu="<%= @menu.id %>" data-bs-target="#payOrderModal">
                                        Take Payment <i class="bi bi-credit-card"></i>
                                    </button>
                                <% else %>
                                    <button type="button" class="btn btn-sm btn-danger">
                                        Staff Alerted <i class="bi bi-receipt"></i></i>
                                    </button>
                                <% end %>
                            <% end %>
                        <% else %>
                            <% if @menu.allowOrdering == true && @menu.restaurant.allowOrdering == true %>
                                <button type="button" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-restaurant="<%= @menu.restaurant.id %>" data-bs-menu="<%= @menu.id %>" data-bs-target="#openOrderModal">Start Order <i class="bi bi-plus-circle"></i></button>
                            <% end %>
                        <% end %>
                    <% end %>
                </span>
            </div>
        </div>
        <div style="padding-top:5px" class=" container-fluid">
            <nav class="nav flex-nowrap overflow-auto">
                <% @menu.menusections.order(:sequence).each do |menusection| %>
                      <a class="sectionnav btn btn-sm btn-outline-secondary text-nowrap" aria-current="page" href="#menusection_<%= menusection.id %>"><%= menusection.name %></a>&nbsp;
                <% end %>
            </nav>
        </div>
      </div>
    </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-12 col-lg-12">
    <% @menu.menusections.order(:sequence).each do |menusection| %>
        <div style="padding-top:20px" id="menusection_<%= menusection.id %>"></div>
        <% if @menu.displayImages == true && @menu.restaurant.displayImages == true %>
            <% if menusection.image %>
                <div class="card border-light text-bg-dark">
                  <img src="<%= menusection.image %>" style="height: 150px" class="card-img" alt="<%= menusection.name %>">
                  <div class="card-img-overlay">
                    <h3 class="card-title"><%= menusection.name %></h3>
                    <p class="card-text"><%= menusection.description %></p>
                  </div>
                </div>
            <% else %>
                <h2><%= menusection.name %></h2>
            <% end %>
        <% else %>
            <h2><%= menusection.name %></h2>
        <% end %>
        <div class="row">
            <% menusection.menuitems.order(:sequence).each do |menuitem| %>

                <% if @ordrparticipant == nil || @ordrparticipant && (@ordrparticipant.allergyns & menuitem.allergyns).empty? %>
                    <div style="padding-top:20px" class="col-sm-12 col-md-6 col-lg-4">
                        <div class="card">
                          <% if @menu.displayImages == true && @menu.restaurant.displayImages == true %>
                              <img class="card-img-bottom" src="<%= menuitem.image %>" alt="<%= menuitem.name %>">
                          <% end %>
                          <div class="card-body">
                                 <div class="row">
                                    <% if @menu.allowOrdering == true && @menu.restaurant.allowOrdering == true %>
                                        <div class="col-10">
                                             <div class="row">
                                                <div class="col-9">
                                                    <h5 class="card-title"><%= menuitem.name %> <span class="float-end"></span></h5>
                                                </div>
                                                <div class="col-3">
                                                    <h5 class="float-end card-title"><%= number_to_currency(menuitem.price) %></span></h5>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-2">
                                            <span class="float-end">
                                                <% if @openOrder %>
                                                    <button type="button" class="addItemToOrder btn btn-primary" data-bs-toggle="modal" data-bs-target="#addItemToOrderModal"
                                                        data-bs-ordr_id="<%= @openOrder.id %>",
                                                        data-bs-menuitem_id="<%= menuitem.id %>"
                                                        data-bs-menuitem_name="<%= menuitem.name %>"
                                                        data-bs-menuitem_price="<%= menuitem.price %>"
                                                        data-bs-menuitem_description="<%= menuitem.description %>"
                                                        title="Add to Order">
                                                        <i class="bi bi-plus"></i>
                                                    </button>
                                                <% else %>
                                                    <button type="button" class="addItemToOrder btn btn-primary" disabled>
                                                        <i class="bi bi-plus"></i>
                                                    </button>
                                                <% end %>
                                            </span>
                                        </div>
                                    <% else %>
                                        <div class="col-12">
                                             <div class="row">
                                                <div class="col-9">
                                                    <h5 class="card-title"><%= menuitem.name %> <span class="float-end"></span></h5>
                                                </div>
                                                <div class="col-3">
                                                    <h5 class="float-end card-title"><%= number_to_currency(menuitem.price) %></span></h5>
                                                </div>
                                            </div>
                                        </div>
                                    <% end %>
                                 </div>
                                 <div class="row">
                                    <div class="col-12">
                                        <h6 class="card-text">
                                            <%= menuitem.description %>
                                        </h6>
                                        <% if @menu.restaurant.allowOrdering == true && @menu.inventoryTracking == true && menuitem.inventory %>
                                            <% if menuitem.inventory.currentinventory == 0 %>
                                                <i>Not available.</i>
                                            <% else %>
                                                <small><i><b><%= menuitem.inventory.currentinventory %></b> remaining.</i></small>
                                            <% end %>
                                        <% end %>
                                        <div class="row">
                                            <div class="col-12">
                                                <span class="float-end">
                                                    <div class="btn-group" role="group" aria-label="Allergyns">
                                                        <% menuitem.allergyns.each do |allergyn| %>
                                                            <button type="button" class="btn btn-xs btn-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" title="<%= allergyn.name %>">
                                                                <%= allergyn.symbol %>
                                                            </button>
                                                        <%end %>
                                                    </div>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                          </div>
                        </div>
                    </div>
                <% end %>
            <%end %>
        </div>
    <%end %>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="openOrderModal" tabindex="-1" aria-labelledby="openOrderModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="openOrderModalLabel">Open Order</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button id="start-order" type="button" data-bs-dismiss="modal" class="btn btn-primary">Open</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="viewOrderModal" tabindex="-1" aria-labelledby="viewOrderModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="viewOrderModalLabel">Your Order</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% if @openOrder %>
            <div class="row">
                <div class="col-6">
                    <b>Menu Item</b>
                </div>
                <div class="col-2">
                  <span class="float-end">
                    <b>Ordered By</b>
                  </span>
                </div>
                <div class="col-2">
                  <span class="float-end">
                    <b>Price</b>
                  </span>
                </div>
                <div class="col-2">
                </div>
            </div>
            <% @openOrder.ordractions.each do |ordraction| %>
                <% if ordraction.ordritem && ordraction.ordritem.in?(@openOrder.ordritems) %>
                <div style="margin-top:5px" class="row">
                    <div class="col-6">
                        &nbsp;-&nbsp;<%= ordraction.ordritem.menuitem.name %>
                    </div>
                    <div class="col-2">
                        <span class="float-end">
                            <%= ordraction.ordrparticipant.name %>
                        </span>
                    </div>
                    <div class="col-2">
                        <span class="float-end">
                            <%= number_to_currency(ordraction.ordritem.menuitem.price) %>
                        </span>
                    </div>
                    <div class="col-2">
                        <span class="float-end">
                            <button type="button" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </span>
                    </div>
                </div>
                <% end %>
            <% end %>
            <div class="row">
                <div class="col-9">
                </div>
                <div class="col-3">
                    <hr>
                </div>
            </div>
            <div class="row">
                <div class="col-9">
                    <span class="float-end"><b>Total:</b></span>
                </div>
                <div class="col-2">
                    <span class="float-end"><b><%= number_to_currency(@openOrder.nett) %></b></span>
                </div>
            </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="confirm-order" type="button" data-bs-dismiss="modal" class="btn btn-primary">Submit Order</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="requestBillModal" tabindex="-1" aria-labelledby="requestBillModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="requestBillModalLabel">Request Bill</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <% if @openOrder %>
                <div class="col-2">
                    <span class="form-label float-end">Nett:</span>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control" value="<%= number_to_currency(@openOrder.nett) %>" disabled>
                </div>
                <div class="col-2">
                    <span class="form-label float-end">Service:</span>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control" value="<%= number_to_currency(@openOrder.service) %>" disabled>
                </div>
                <div class="col-2">
                    <span class="form-label float-end">Tax:</span>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control" value="<%= number_to_currency(@openOrder.tax) %>" disabled>
                </div>
            <% end %>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button id="request-bill" type="button" data-bs-dismiss="modal" class="btn btn-primary">Request Bill</button>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="payOrderModal" tabindex="-1" aria-labelledby="payOrderModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="payOrderModalLabel">Pay Bill</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <div class="row">
            <% if @openOrder %>
                <div class="col-2">
                    <span class="form-label float-end">Nett:</span>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control" value="<%= number_to_currency(@openOrder.nett) %>" disabled>
                </div>
                <div class="col-2">
                    <span class="form-label float-end">Service:</span>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control" value="<%= number_to_currency(@openOrder.service) %>" disabled>
                </div>
                <div class="col-2">
                    <span class="form-label float-end">Tax:</span>
                </div>
                <div class="col-10">
                    <input type="text" class="form-control" value="<%= number_to_currency(@openOrder.tax) %>" disabled>
                </div>
            <% end %>
          </div>
          <div class="row">
            <div class="col-2">
                <span class="form-label float-end">Add a tip:</span>
            </div>
            <div class="col-10">
                <input type="text" class="form-control" id="tip" value="0">
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button id="pay-order" type="button" data-bs-dismiss="modal" class="btn btn-primary">Confirm Payment</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="addNameToParticipantModal" tabindex="-1" aria-labelledby="addItemToOrderModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="addNameToParticipantModalLabel">Personalise your order by adding your name</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <input type="hidden" class="form-control" id="ordr_id">
          <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" id="name">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="addNameToParticipantButton" type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="bi bi-plus"></i> Add</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="addItemToOrderModal" tabindex="-1" aria-labelledby="addItemToOrderModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="addItemToOrderModalLabel">Add to order</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          <input type="hidden" class="form-control" id="ordr_id">
          <input type="hidden" class="form-control" id="menuitem_id">
          <div class="row">
            <div class="col-3">
                <label for="menuitem_name" class="form-label">Name:</label>
            </div>
            <div class="col-9">
                <input type="text" class="form-control" id="menuitem_name" disabled>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
                <label for="menuitem_description" class="form-label">Description:</label>
            </div>
            <div class="col-9">
                <textarea class="form-control" id="menuitem_description" disabled></textarea>
            </div>
          </div>
          <div class="row">
            <div class="col-3">
                <label for="menuitem_price" class="form-label">Price:</label>
            </div>
            <div class="col-9">
                <input type="text" class="form-control" id="menuitem_price" disabled>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="addItemToOrderButton" type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="bi bi-plus"></i> Item</button>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="filterOrderModal" tabindex="-1" aria-labelledby="filterOrderModalLabel" aria-hidden="true">
  <%= form_with(model: @ordrparticipant) do |form| %>
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="filterOrderModalLabel">Filter order by</h1>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
              <div class="form-group row">
                <%= form.label :allergyns, class: 'col-sm-2 col-form-label' %>
                <div class="col-sm-10">
                    <div class="form-control">
                        <%= form.collection_check_boxes :allergyn_ids, Allergyn.all, :id, :name, { hide_label: true } do |b| %>
                            <div class="form-check">
                              <%= b.check_box %>
                              <label class="form-check-label">
                                <%= b.label %>
                              </label>
                            </div>
                        <% end %>
                    </div>
                </div>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <%= form.submit value: 'Filer By', class: 'btn btn-primary' %>
          </div>
        </div>
      </div>
  <% end %>
</div>


<div style="margin-top: 20px" class="card">
    <div class="card-body">
        <h3>Debug:</h3>
        <% if @openOrder %>
            <div class="row">
                <div class="col-2">
                    currentOrder:
                </div>
                <div class="col-10">
                    <div id="currentOrder"><%= @openOrder.id %></div>
                </div>
            </div>
        <% end %>
        <% if @tablesetting %>
            <div class="row">
                <div class="col-2">
                    currentTable:
                </div>
                <div class="col-10">
                    <div id="currentTable"><%= @tablesetting.id %></div>
                </div>
            </div>
        <% end %>
        <% if current_user %>
            <div class="row">
                <div class="col-2">
                    currentEmployee:
                </div>
                <div class="col-10">
                    <div id="currentEmployee"><%= @current_employee.id %></div>
                </div>
            </div>
        <% end %>
        <% if @menu %>
            <div class="row">
                <div class="col-2">
                    currentMenu:
                </div>
                <div class="col-10">
                    <div id="currentMenu"><%= @menu.id %></div>
                </div>
            </div>
        <% end %>
        <% if @menu.restaurant %>
            <div class="row">
                <div class="col-2">
                    currentRestaurant:
                </div>
                <div class="col-10">
                    <div id="currentRestaurant"><%= @menu.restaurant.id %></div>
                </div>
            </div>
        <% end %>
        <% if @ordrparticipant %>
            <div class="row">
                <div class="col-2">
                    currentParticipant:
                </div>
                <div class="col-10">
                    <div id="currentParticipant"><%= @ordrparticipant.id %></div>
                </div>
            </div>
        <% end %>
    </div>
</div>
