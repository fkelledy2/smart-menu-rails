<div class="page-header">
  <%= link_to menus_path, class: 'btn btn-default' do %>
    All Menus
  <% end %>
  <%= link_to edit_menu_path(@menu), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show menu</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @menu.name %></dd>
  <dt>Description:</dt>
  <dd><%= @menu.description %></dd>
  <dt>Image:</dt>
  <dd><%= @menu.image %></dd>
  <dt>Status:</dt>
  <dd><%= @menu.status %></dd>
  <dt>Sequence:</dt>
  <dd><%= @menu.sequence %></dd>
  <dt>Restaurant:</dt>
  <dd><%= @menu.restaurant %></dd>
</dl>
