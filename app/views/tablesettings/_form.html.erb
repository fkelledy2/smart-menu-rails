<%= form_with(model: tablesetting) do |form| %>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :name, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :description, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :tabletype, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.select :tabletype, options_for_select(Tablesetting.tabletypes.keys.to_a, form.object.tabletype), {} %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :status, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.select :status, options_for_select(Tablesetting.statuses.keys.to_a, form.object.status), {} %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :capacity, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.text_field :capacity, class: 'form-control' %>
    </div>
  </div>
  <% if @futureParentRestaurant %>
      <%= form.hidden_field :restaurant_id, value: @futureParentRestaurant.id %>
  <% else %>
      <%= form.hidden_field :restaurant_id %>
  <% end %>
  <div style='height:8px'></div>
  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-9">
        <span class="float-end">
        <% if tablesetting.persisted? %>
          <div class="btn btn-dark ">
            <%= link_to t(".delete"), tablesetting, method: :delete, class: "text-white text-decoration-none", data: { confirm: t(".sure") } %>
          </div>
        <% end %>
        <%= form.submit value: t(".save"), class: 'btn btn-dark' %>
        </span>
    </div>
  </div>
  <div style='height:4px'></div>
  <% if tablesetting.errors.any? %>
  <div class="row">
    <div class="col-3">
      <span class="float-md-end"><%= t(".errors") %></span>
    </div>
    <div class="col-9">
      <ul>
          <% tablesetting.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>
