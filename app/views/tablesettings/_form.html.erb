<%= form_with(model: tablesetting) do |form| %>
  <% if tablesetting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tablesetting.errors.count, "error") %> prohibited this tablesetting from being saved:</h2>

      <ul>
      <% tablesetting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :status, class: 'form-label' %>
      <%= form.number_field :status, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :capacity, class: 'form-label' %>
      <%= form.number_field :capacity, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :restaurant_id, class: 'form-label' %>
      <%= form.text_field :restaurant_id, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <% if tablesetting.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', tablesetting, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if tablesetting.persisted? %>
      <%= link_to "Cancel", tablesetting, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", tablesettings_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
