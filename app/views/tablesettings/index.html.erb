


<div class="row">
  <div class="col-sm-6">
    <h1>Tablesettings</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_tablesetting_path, class: 'btn btn-primary' do %>
    Add New Tablesetting
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Description</th>
            <th>Status</th>
            <th>Capacity</th>
            <th>Restaurant</th>
            
      </tr>
    </thead>

    <tbody>
      <% @tablesettings.each do |tablesetting| %>
        <%= content_tag :tr, id: dom_id(tablesetting), class: dom_class(tablesetting) do %>
          
            <td><%= link_to tablesetting.name, tablesetting %></td>
          

                      <td><%= tablesetting.description %></td>
                      <td><%= tablesetting.status %></td>
                      <td><%= tablesetting.capacity %></td>
                      <td><%= tablesetting.restaurant %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
