<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
          <h1>Show Table Setting</h1>
    </div>
    <div class="col-sm-2">
        <span class="float-end">
          <%= link_to tablesettings_path, class: 'btn btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
          <%= link_to edit_tablesetting_path(@tablesetting), class: 'btn btn-primary' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: @tablesetting) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :status, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.select :status, options_for_select(Tablesetting.statuses.keys.to_a, form.object.status), {}, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :tabletype, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.select :tabletype, options_for_select(Tablesetting.tabletypes.keys.to_a, form.object.tabletype), {}, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :capacity, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :capacity, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :restaurant_id, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.collection_select :restaurant_id, Restaurant.all ,:id, :name, options = {:prompt => 'Select a Restaurant...'}, html_options = {class: "form-control" , disabled: 'disabled'}%>
    </div>
  </div>
<% end %>

<p>
    <%== @qr.as_svg %>
</p>
