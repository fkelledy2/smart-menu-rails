<div class="page-header">
  <div class="row">
    <div class="col-10">
        <h2><%= t(".menuAvailability") %></h2>
    </div>
    <div class="col-sm-2">
      <% if @menuavailability.persisted? %>
        <%= link_to t('.cancel'), edit_restaurant_menu_path(@menuavailability.menu.restaurant, @menuavailability.menu), class: "float-end btn btn-light" %>
      <% else %>
        <% if @futureParentMenu %>
          <%= link_to t('.cancel'), edit_restaurant_menu_path(@futureParentMenu.restaurant, @futureParentMenu), class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to t('.cancel'), menuavailabilities_path, class: "float-end btn btn-light" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-12">
    <%= render 'form', menuavailability: @menuavailability %>
  </div>
</div>
