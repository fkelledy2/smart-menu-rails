<%= render 'shared/customcss' %>
<div class="page-header">
  <div class="row">
    <div class="col-12">
      <h3>
        <%= link_to edit_restaurant_path(@menuavailability.menu.restaurant), class: "link-dark" do %>
          <%= @menuavailability.menu.restaurant.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= link_to edit_menu_path(@menuavailability.menu), class: "link-dark" do %>
          <%= @menuavailability.menu.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= @menuavailability.menu.name %>
      </h3>
    </div>
  </div>
</div>

<ul style="height:43px;overflow-y:hidden;" class="nav nav-tabs overflow-auto flex-nowrap" id="inventoryTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark">
      <%= link_to edit_menu_path(@menuavailability.menu), class: "link-dark" do %>
        <strong><i class="bi bi-chevron-double-left"></i></strong>
      <% end %>
    </button>
  </li>
</ul>
<ul style="position:relative;top:-43px;left:50px;height:43px;overflow-y:hidden;width:85%;mask-image: linear-gradient(to right, #008080, rgba(0,32,32,0) 120%" class="nav nav-tabs overflow-auto flex-nowrap" id="inventoryTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark active" id="item-tab" data-bs-toggle="tab" data-bs-target="#availability" type="button" role="tab" aria-controls="availabilityConfig" aria-selected="true">Availability</button>
  </li>
</ul>

<div class="tab-content" id="availabilityConfig">
  <div class="tab-pane fade show active" id="inventory" role="tabpanel" aria-labelledby="home-tab">
    <p>
    <div class="row">
        <div class="col-12">
        <%= render 'form', menuavailability: @menuavailability %>
      </div>
    </div>
  </div>
</div>