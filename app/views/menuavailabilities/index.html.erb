<div class="row">
  <div class="col-sm-6">
    <h1><%= t(".menuAvailabilities") %></h1>
  </div>
  <div class="col-sm-6 text-end">
    <% if @futureParentRestaurant %>
      <%= link_to restaurant_path(id: @futureParentRestaurant.id), class: 'btn btn-sm btn-light' do %>
        <i class="bi bi-chevron-left"></i>
      <% end %>
    <% end %>
    <button id="activate-row" class='btn btn-sm btn-success' disabled><%= t(".activate") %></button>
    <button id="deactivate-row"class='btn btn-sm btn-danger' disabled><%= t(".deactivate") %></button>
    <%= link_to new_menuavailability_path, class: 'btn btn-sm btn-dark' do %>
      <i class="bi bi-plus"></i> <%= t(".menuAvailability") %>
    <% end %>
  </div>
</div>
<div style="padding-top:10px" class="table-borderless" id="menuavailability-table">
</div>
