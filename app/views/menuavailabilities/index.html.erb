<div class="row">
  <div class="col-sm-6">
    <h1><%= t(".menuAvailabilities") %></h1>
  </div>
  <div class="col-sm-6 text-end">
    <% if @futureParentRestaurant %>
      <%= link_to restaurant_path(id: @futureParentRestaurant.id), class: 'btn btn-sm btn-light' do %>
        <i class="bi bi-chevron-left"></i>
      <% end %>
    <% end %>
    <button id="activate-row" class='btn btn-sm btn-success' disabled><%= t('common.activate') %></button>
    <button id="deactivate-row"class='btn btn-sm btn-danger' disabled><%= t('common.deactivate') %></button>
    <% if @menu %>
      <%= link_to new_restaurant_menu_menuavailability_path(@menu.restaurant, @menu), class: 'btn btn-sm btn-dark' do %>
        <i class="bi bi-plus"></i> <%= t(".menuAvailability") %>
      <% end %>
    <% else %>
      <%= link_to '#', class: 'btn btn-sm btn-dark disabled' do %>
        <i class="bi bi-plus"></i> <%= t(".menuAvailability") %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="table-container-spacing table-borderless" id="menuavailability-table">
</div>
