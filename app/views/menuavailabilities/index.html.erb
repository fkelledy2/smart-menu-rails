<!-- 2025 Design System: Updated with new button styles -->
<div class="row mb-4">
  <div class="col-sm-6">
    <h1><%= t(".menuAvailabilities") %></h1>
  </div>
  <div class="col-sm-6 text-end">
    <% if @futureParentRestaurant %>
      <%= link_to restaurant_path(id: @futureParentRestaurant.id), class: 'btn-2025 btn-2025-secondary btn-2025-sm' do %>
        <i class="bi bi-chevron-left"></i>
      <% end %>
    <% end %>
    <button id="activate-row" class='btn-2025 btn-2025-primary btn-2025-sm' disabled><%= t('common.activate') %></button>
    <button id="deactivate-row" class='btn-2025 btn-2025-outline-danger btn-2025-sm' disabled><%= t('common.deactivate') %></button>
    <% if @menu %>
      <%= link_to new_restaurant_menu_menuavailability_path(@menu.restaurant, @menu), class: 'btn-2025 btn-2025-primary btn-2025-md' do %>
        <i class="bi bi-plus"></i> <%= t(".menuAvailability") %>
      <% end %>
    <% else %>
      <%= link_to '#', class: 'btn-2025 btn-2025-primary btn-2025-md disabled' do %>
        <i class="bi bi-plus"></i> <%= t(".menuAvailability") %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="table-container-spacing table-borderless" id="menuavailability-table">
</div>
