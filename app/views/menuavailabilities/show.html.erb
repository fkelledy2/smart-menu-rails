<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
        <h1><%= t(".menuAvailability") %></h1>
    </div>
    <div class="col-sm-2">
        <span class="float-end">
          <%= link_to menuavailabilities_path, class: 'btn btn-sm btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
          <%= link_to edit_restaurant_menu_menuavailability_path(@menuavailability.menu.restaurant, @menuavailability.menu, @menuavailability), class: 'btn btn-sm btn-dark' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: [@menuavailability.menu.restaurant, @menuavailability.menu, @menuavailability]) do |form| %>
  <div class="form-group row">
    <%= form.label :dayofweek, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.select :dayofweek, options_for_select(Menuavailability.dayofweeks.keys.to_a, form.object.dayofweek), {}, disabled: 'disabled' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :starthour, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :starthour, class: 'form-control', disabled: 'disabled'%>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :startmin, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :startmin, class: 'form-control', disabled: 'disabled'%>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :endhour, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :endhour, class: 'form-control', disabled: 'disabled'%>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :endmin, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :endmin, class: 'form-control', disabled: 'disabled'%>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :sequence, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :sequence, class: 'form-control', disabled: 'disabled'%>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :status, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.select :status, options_for_select(Menuavailability.statuses.keys.to_a, form.object.status), {}, disabled: 'disabled' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :menu, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.collection_select :menu_id, Menu.all ,:id, :name, options = {:prompt => t(".selectMenu")}, html_options = {disabled: "disabled"}%>
    </div>
  </div>
<% end %>
