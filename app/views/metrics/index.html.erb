


<div class="row">
  <div class="col-6">
    <h1>Metrics</h1>
  </div>

  <div class="col-6 text-end">
  <%= link_to new_metric_path, class: 'btn btn-primary' do %>
    Add New Metric
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @metrics.each do |metric| %>
        <%= content_tag :tr, id: dom_id(metric), class: dom_class(metric) do %>
          

          
          
            <td><%= link_to 'Show', metric %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
