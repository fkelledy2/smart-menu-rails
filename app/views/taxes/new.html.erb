<style>
    .form-control:disabled {
        background-color: #fafafa;
        opacity: 1;
    }
    .disabled .ts-control {
        opacity: 1.0;
        background-color: #fafafa;
    }
    .ts-dropdown, .ts-control, .ts-control input {
        color: #000000;
        padding-left:12px;
        font-size: 16px;
        line-height: 18px;
    }
</style>
<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
        <h1><%=t('.tax')%></h1>
    </div>
    <div class="col-sm-2">
        <% if @tax.persisted? %>
          <%= link_to t(".cancel"), restaurant_path(id: @tax.restaurant.id), class: "float-end btn btn-light" %>
        <% else %>
          <% if @futureParentRestaurant %>
              <%= link_to t('.cancel'), restaurant_path(id: @futureParentRestaurant.id), class: "float-end btn btn-light" %>
          <% else %>
              <%= link_to t('.cancel'), taxes_path, class: "float-end btn btn-light" %>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'form', tax: @tax %>