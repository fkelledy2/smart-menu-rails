<style>
    .form-control:disabled {
        background-color: #fafafa;
        opacity: 1;
    }
    .disabled .ts-control {
        opacity: 1.0;
        background-color: #fafafa;
    }
    .ts-dropdown, .ts-control, .ts-control input {
        color: #000000;
        padding-left:12px;
        font-size: 16px;
        line-height: 18px;
    }
</style>
<div class="page-header">
  <div class="row">
    <div class="col-10">
        <h1><%=t('.tax')%></h1>
    </div>
    <div class="col-2">
        <span class="float-end">
          <%= link_to restaurant_path(id: @tax.restaurant.id), class: 'btn btn-sm btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
          <%= link_to edit_tax_path(@tax), class: 'btn btn-sm btn-dark' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: @tax) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :name, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :taxType, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.select :taxtype, options_for_select(Tax.taxtypes.keys.to_a, form.object.taxtype), {}, disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :taxPercentage, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.text_field :taxpercentage, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <%= form.label :restaurant, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.collection_select :restaurant_id, Restaurant.all ,:id, :name, options = {:prompt => t(".selectRestaurant")}, html_options = {disabled: 'disabled'}%>
    </div>
  </div>
<% end %>
