<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
        <h1><%=t('.tax')%></h1>
    </div>
    <div class="col-sm-2">
        <span class="float-end">
          <%= link_to taxes_path, class: 'btn btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
          <%= link_to edit_tax_path(@tax), class: 'btn btn-primary' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: @tax) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :taxType, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.select :taxtype, options_for_select(Tax.taxtypes.keys.to_a, form.object.taxtype), {}, disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :taxPercentage, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :taxpercentage, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :restaurant, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.collection_select :restaurant_id, Restaurant.all ,:id, :name, options = {:prompt => t(".selectRestaurant")}, html_options = {disabled: 'disabled'}%>
    </div>
  </div>
<% end %>
