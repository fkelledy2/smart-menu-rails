<%= form_with(model: [tax.restaurant, tax]) do |form| %>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :name, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :taxType, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.select :taxtype, options_for_select(Tax.taxtypes.keys.to_a, form.object.taxtype), {} %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :taxPercentage, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.text_field :taxpercentage, class: 'form-control' %>
    </div>
  </div>
  <% if @futureParentRestaurant %>
      <%= form.hidden_field :restaurant_id, value: @futureParentRestaurant.id %>
  <% else %>
      <%= form.hidden_field :restaurant_id %>
  <% end %>
  <div class="spacing-md"></div>
  <div class="row">
    <div class="col-12">
        <span class="float-end">
        <% if tax.persisted? %>
          <div class="btn btn-dark ">
            <%= link_to t('common.delete'), [tax.restaurant, tax], method: :delete, class: "text-white text-decoration-none", data: { confirm: t('common.confirm') } %>
          </div>
        <% end %>
        <%= form.submit value: t('common.save'), class: 'btn btn-dark' %>
        </span>
    </div>
  </div>
  <% if tax.errors.any? %>
  <div class="row">
    <div class="col-3">
      <span class="float-md-end"><%= t('common.errors') %></span>
    </div>
    <div class="col-9">
      <ul>
          <% tax.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>