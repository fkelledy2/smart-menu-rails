<%= form_with(model: tax) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :taxType, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.select :taxtype, options_for_select(Tax.taxtypes.keys.to_a, form.object.taxtype), {} %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :taxPercentage, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :taxpercentage, class: 'form-control' %>
    </div>
  </div>
  <% if @futureParentRestaurant %>
      <%= form.hidden_field :restaurant_id, value: @futureParentRestaurant.id %>
  <% else %>
      <%= form.hidden_field :restaurant_id %>
  <% end %>
  <div style='height:8px'></div>
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
        <span class="float-end">
        <% if tax.persisted? %>
          <div class="btn btn-danger ">
            <%= link_to t(".delete"), tax, method: :delete, class: "text-white text-decoration-none", data: { confirm: t(".sure") } %>
          </div>
        <% end %>
        <%= form.submit value: t(".save"), class: 'btn btn-primary' %>
        </span>
    </div>
  </div>
  <% if tax.errors.any? %>
  <div class="row">
    <div class="col-sm-2">
        Errors
    </div>
    <div class="col-sm-10">
      <ul>
          <% tax.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>