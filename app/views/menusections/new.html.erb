<div class="page-header">
  <div class="row">
    <div class="col-10">
        <h2><%= t(".menuSection") %></h2>
    </div>
    <div class="col-2">
      <% if @menusection.persisted? %>
        <%= link_to t('.cancel'), edit_restaurant_menu_path(@menusection.menu.restaurant, @menusection.menu), class: "float-end btn btn-light" %>
      <% else %>
        <% if @futureParentMenu %>
          <%= link_to t('.cancel'), edit_restaurant_menu_path(@futureParentMenu.restaurant, @futureParentMenu), class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to t('.cancel'), menuavailabilities_path, class: "float-end btn btn-light" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <%= render 'form', menusection: @menusection %>
  </div>
</div>
