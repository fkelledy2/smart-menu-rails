<div class="page-header">
  <div class="row">
    <div class="col-9">
        <h2><%= t(".menuSection") %></h2>
    </div>
    <div class="col-sm-2">
      <% if @menusection.persisted? %>
        <%= link_to t('.cancel'), edit_menu_path(id: @menusection.menu.id), class: "float-end btn btn-light" %>
      <% else %>
        <% if @futureParentMenu %>
          <%= link_to t('.cancel'), edit_menu_path(id: @futureParentMenu.id), class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to t('.cancel'), menuavailabilities_path, class: "float-end btn btn-light" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-sm-11">
    <%= render 'form', menusection: @menusection %>
  </div>
</div>
