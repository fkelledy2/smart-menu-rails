<!-- 2025 Design System: Updated with new button styles -->
<div class="row mb-4">
  <div class="col-6">
    <h1><%= t(".menuSections") %></h1>
  </div>
  <div class="col-6 text-end">
    <button id="activate-row" class='btn-2025 btn-2025-primary btn-2025-sm' disabled><%= t('common.activate') %></button>
    <button id="deactivate-row" class='btn-2025 btn-2025-outline-danger btn-2025-sm' disabled><%= t('common.deactivate') %></button>
    <% if @menu %>
      <%= link_to new_restaurant_menu_menusection_path(@menu.restaurant, @menu), class: 'btn-2025 btn-2025-primary btn-2025-md' do %>
        <i class="bi bi-plus"></i> <%= t(".menuSection") %>
      <% end %>
    <% else %>
      <%= link_to '#', class: 'btn-2025 btn-2025-primary btn-2025-md disabled' do %>
        <i class="bi bi-plus"></i> <%= t(".menuSection") %>
      <% end %>
    <% end %>
  </div>
</div>
<div class="table-container-spacing table-borderless" id="menusection-table">
</div>
