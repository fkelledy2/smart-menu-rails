<%= render 'shared/customcss' %>
<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
      <h3>
        <%= link_to edit_restaurant_path(@menusection.menu.restaurant), class: "link-dark" do %>
          <%= @menusection.menu.restaurant.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= link_to edit_menu_path(@menusection.menu), class: "link-dark" do %>
          <%= @menusection.menu.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= @menusection.name %>
      </h3>
    </div>
  </div>
</div>

<ul style="height:43px;overflow-y:hidden;" class="nav nav-tabs overflow-auto flex-nowrap" id="sectionTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark">
      <%= link_to edit_menu_path(@menusection.menu), class: "link-dark" do %>
        <strong><i class="bi bi-chevron-double-left"></i></strong>
      <% end %>
    </button>
  </li>
</ul>
<ul style="position:relative;top:-43px;left:50px;height:43px;overflow-y:hidden;width:90%;" class="nav nav-tabs overflow-auto flex-nowrap" id="sectionTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark active" id="section-tab" data-bs-toggle="tab" data-bs-target="#section" type="button" role="tab" aria-controls="sectionConfig" aria-selected="true">Section</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark" id="menuitem-tab" data-bs-toggle="tab" data-bs-target="#menuitem" type="button" role="tab" aria-controls="menuitemConfig" aria-selected="false">Items</button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark" id="inventory-tab" data-bs-toggle="tab" data-bs-target="#inventory" type="button" role="tab" aria-controls="inventoryConfig" aria-selected="false">Inventories</button>
  </li>
</ul>

<div class="tab-content" id="sectionConfig">
  <div class="tab-pane fade show active" id="section" role="tabpanel" aria-labelledby="home-tab">
    <p>
    <div class="row">
      <div class="col-sm-11">
        <%= render 'form', menusection: @menusection %>  </div>
      </div>
    </div>
  </div>
  <div class="tab-content" id="menuitemConfig">
      <div class="tab-pane fade" id="menuitem" role="tabpanel" aria-labelledby="menuitem-tab">
        <div class="row">
          <div class="col-sm-12">
            <%= render 'showMenuitems', menusection: @menusection, edit: false %>
          </div>
        </div>
      </div>
  </div>
  <div class="tab-content" id="inventoryConfig">
      <div class="tab-pane fade" id="inventory" role="tabpanel" aria-labelledby="inventory-tab">
        <p>
        <div class="row">
          <div class="col-sm-12">
            <%= render 'showInventories', menusection: @menusection, edit: false %>
          </div>
        </div>
      </div>
  </div>
</div>
