<div class="row">
  <div class="col-6">
    <h4><%= t('.menuItems') %></h4>
  </div>
  <div class="col-6 text-end">
    [<%=@menuItemCount %>/<%= current_user.plan.itemspermenu %>]
    <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
      <div class="btn-group" role="group">
        <button id="menuitem-actions" type="button" class="btn btn-dark dropdown-toggle" disabled data-bs-toggle="dropdown" aria-expanded="false">
          <%= t('common.actions') %>
        </button>
        <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="allergyn-actions">
          <li><a id="activate-menuitem" class="dropdown-item" href="#"><%= t('common.activate') %></a></li>
          <li><a id="deactivate-menuitem" class="dropdown-item" href="#"><%= t('common.deactivate') %></a></li>
          <li><a id="genimage-menuitem" class="dropdown-item" href="#"><%=t(".genimage")%></a></li>
        </ul>
      </div>
      <% if @canAddMenuItem %>
          <button type="button" class="btn btn-dark">
            <%= link_to new_restaurant_menu_menusection_menuitem_path(@menusection.menu.restaurant, @menusection.menu, @menusection), class: 'link-light' do %>
              <i class="bi bi-plus"></i>
            <% end %>
          </button>
      <% end %>
    </div>
  </div>
</div>
<%= render 'shared/currency' %>
<div class="table-container-spacing table-borderless" id="menusection-menuitem-table" data-bs-menusection="<%= menusection.id %>" data-bs-menu="<%= menusection.menu.id %>" data-bs-restaurant="<%= menusection.menu.restaurant.id %>">