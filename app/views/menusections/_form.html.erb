<%
  # Determine the menu and restaurant for nested routing
  menu = menusection.menu || @futureParentMenu
  raise "No menu context available for menusection form" unless menu
  restaurant = menu.restaurant
  raise "No restaurant context available for menusection form" unless restaurant
%>
<%= form_with(model: [restaurant, menu, menusection], html: { data: { turbo_frame: '_top' } }) do |form| %>
  <div data-menusection-form-root>
    <% if menusection.errors.any? %>
      <div class="alert alert-danger mb-3">
        <div class="fw-semibold mb-2"><%= t('common.errors') %></div>
        <ul class="mb-0">
          <% menusection.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Details Card -->
    <div class="edit-card">
      <div class="edit-card-header">
        <i class="bi bi-card-text"></i>
        <h2><%= t(".details") %></h2>
      </div>
      <div class="edit-card-body">
        <div class="edit-field">
          <%= form.label :name, class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>
        <div class="edit-field">
          <%= form.label :description, class: 'form-label' %>
          <%= form.text_area :description, class: 'form-control', rows: 2 %>
        </div>
      </div>
    </div>

    <!-- Availability Time Card -->
    <div class="edit-card">
      <div class="edit-card-header">
        <i class="bi bi-clock"></i>
        <h2><%= t('.availability_time', default: 'Availability Time') %></h2>
      </div>
      <div class="edit-card-body">
        <%= form.hidden_field :fromhour, class: 'from-hour-field' %>
        <%= form.hidden_field :frommin, class: 'from-min-field' %>
        <%= form.hidden_field :tohour, class: 'to-hour-field' %>
        <%= form.hidden_field :tomin, class: 'to-min-field' %>

        <div class="time-slider-container">
          <div class="d-flex justify-content-between align-items-center mb-1">
            <div class="time-display opening-time">
              <i class="bi bi-sunrise"></i>
              <span class="time-value"><%= sprintf('%02d:%02d', menusection.fromhour || 9, menusection.frommin || 0) %></span>
            </div>
            <div class="time-display closing-time">
              <i class="bi bi-sunset"></i>
              <span class="time-value"><%= sprintf('%02d:%02d', menusection.tohour || 22, menusection.tomin || 0) %></span>
            </div>
          </div>

          <%
            open_minutes = ((menusection.fromhour || 9) * 60) + (menusection.frommin || 0)
            close_minutes = ((menusection.tohour || 22) * 60) + (menusection.tomin || 0)
          %>
          <div class="time-range-slider"
               id="section_time_slider"
               data-open="<%= open_minutes %>"
               data-close="<%= close_minutes %>">
          </div>
        </div>

        <div class="edit-field">
          <%= form.label :restricted, class: 'form-label' %>
          <%= form.select :restricted, [['on', true], ['off', false]], {}, class: 'form-control' %>
        </div>
      </div>
    </div>

    <!-- Settings Card -->
    <div class="edit-card">
      <div class="edit-card-header">
        <i class="bi bi-gear"></i>
        <h2><%= t(".settings") %></h2>
      </div>
      <div class="edit-card-body">
        <div class="edit-field">
          <%= form.label :status, class: 'form-label' %>
          <%= form.select :status, options_for_select(Menusection.statuses.keys.to_a, form.object.status), {}, class: 'form-control' %>
        </div>
      </div>
    </div>

    <!-- Tasting Menu Card -->
    <div class="edit-card">
      <div class="edit-card-header">
        <i class="bi bi-list-stars"></i>
        <h2><%= t('.tasting_menu_settings', default: 'Tasting Menu Settings') %></h2>
      </div>
      <div class="edit-card-body">
        <div class="edit-field">
          <div class="d-flex align-items-center gap-3">
            <%= form.check_box :tasting_menu %>
            <%= form.label :tasting_menu, class: 'form-label mb-0' %>
          </div>
          <small class="text-muted"><%= t('.tasting_menu_help', default: 'When enabled, this section is a fixed-price tasting. Item prices are hidden; supplements may be added per item.') %></small>
        </div>

        <div data-tasting-menu-advanced class="<%= menusection.tasting_menu? ? '' : 'd-none' %>">
          <div class="edit-field">
            <small class="text-muted">
              <i class="bi bi-info-circle"></i>
              <%= t('.carrier_auto_help', default: 'A hidden carrier menu item is created and kept in sync automatically with this section\'s name, description, and tasting price.') %>
            </small>
          </div>

          <div class="field-row-inline">
            <div class="edit-field">
              <span class="field-label"><%= t('.tasting_price', default: 'Tasting Price') %></span>
              <div class="d-flex align-items-center gap-2">
                <%= form.number_field :tasting_price_amount, class: 'form-control', min: 0, step: 0.01, inputmode: 'decimal' %>
                <small class="text-muted"><%= restaurant.currency %></small>
              </div>
              <small class="text-muted"><%= t('.tasting_price_help', default: 'Enter the fixed price in the restaurant currency. Currency is inferred from restaurant settings.') %></small>
            </div>
            <div class="edit-field">
              <%= form.label :price_per, class: 'form-label' %>
              <%= form.select :price_per, options_for_select([['Per Person', 'person'], ['Per Table', 'table']], form.object.price_per || 'person'), {}, class: 'form-control' %>
            </div>
          </div>

          <div class="field-row-inline">
            <div class="edit-field">
              <span class="field-label"><%= t('.party_size', default: 'Party Size (optional)') %></span>
              <div class="d-flex gap-2">
                <%= form.number_field :min_party_size, class: 'form-control', min: 1, placeholder: 'Min' %>
                <%= form.number_field :max_party_size, class: 'form-control', min: 1, placeholder: 'Max' %>
              </div>
            </div>
            <div class="edit-field">
              <span class="field-label"><%= t('.includes_description', default: 'Includes (description)') %></span>
              <%= form.text_area :includes_description, class: 'form-control', rows: 2 %>
            </div>
          </div>

          <div class="field-row-inline">
            <div class="edit-field">
              <div class="d-flex align-items-center gap-3">
                <%= form.check_box :allow_substitutions %>
                <%= form.label :allow_substitutions, class: 'form-label mb-0' %>
              </div>
            </div>
            <div class="edit-field">
              <div class="d-flex align-items-center gap-3">
                <%= form.check_box :allow_pairing %>
                <%= form.label :allow_pairing, class: 'form-label mb-0' %>
              </div>
              <small class="text-muted"><%= t('.allow_pairing_help', default: 'Enable beverage pairing as an add-on.') %></small>
            </div>
          </div>

          <div class="edit-field">
            <span class="field-label"><%= t('.pairing_price', default: 'Pairing Price') %></span>
            <div class="d-flex align-items-center gap-2">
              <%= form.number_field :pairing_price_amount, class: 'form-control', min: 0, step: 0.01, inputmode: 'decimal', style: 'max-width: 200px' %>
              <small class="text-muted"><%= restaurant.currency %></small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script data-turbo-eval="true">
      (function() {
        const root = document.querySelector('[data-menusection-form-root]');
        if (!root) return;

        const checkbox = root.querySelector('input[name="menusection[tasting_menu]"]');
        const advanced = root.querySelector('[data-tasting-menu-advanced]');
        if (!checkbox || !advanced) return;

        if (checkbox.dataset.tastingMenuBound === '1') return;
        checkbox.dataset.tastingMenuBound = '1';

        const sync = function() {
          advanced.classList.toggle('d-none', !checkbox.checked);
        };

        sync();
        checkbox.addEventListener('change', sync);
      })();
    </script>

    <!-- Form actions -->
    <div class="edit-actions">
      <% if menusection.persisted? %>
        <%= link_to t(".delete"),
            restaurant_menu_menusection_path(restaurant, menu, menusection),
            method: :delete,
            class: 'btn btn-outline-danger',
            data: { confirm: t(".sure") } %>
      <% end %>
      <%= form.submit value: t(".save"), class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
