<%= form_with(model: restaurantavailability) do |form| %>
  <div class="form-group row">
    <%= form.label :dayofweek, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.select :dayofweek, options_for_select(Restaurantavailability.dayofweeks.keys.to_a, form.object.dayofweek), {} %>
    </div>
  </div>
  <div class="form-group row">
    <%= form.label :starthour, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :starthour, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :startmin, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :startmin, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :endhour, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :endhour, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :endmin, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :endmin, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :sequence, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :sequence, class: 'form-control'%>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :status, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.select :status, options_for_select(Restaurantavailability.statuses.keys.to_a, form.object.status), {} %>
    </div>
  </div>
  <% if @futureParentRestaurant %>
      <%= form.hidden_field :restaurant_id, value: @futureParentRestaurant.id %>
  <% else %>
      <%= form.hidden_field :restaurant_id %>
  <% end %>
  <div style='height:8px'></div>
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
        <span class="float-end">
        <% if restaurantavailability.persisted? %>
          <div class="btn btn-danger ">
            <%= link_to t(".delete"), restaurantavailability, method: :delete, class: "text-white text-decoration-none", data: { confirm: t(".sure") } %>
          </div>
        <% end %>
        <%= form.submit value: t(".save"), class: 'btn btn-primary' %>
        </span>
    </div>
  </div>
  <% if restaurantavailability.errors.any? %>
  <div class="row">
    <div class="col-sm-2">
        <%= t(".errors") %>
    </div>
    <div class="col-sm-10">
      <ul>
          <% restaurantavailability.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>