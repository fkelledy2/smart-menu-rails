<%= form_with(model: [restaurantavailability.restaurant, restaurantavailability]) do |form| %>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :dayofweek, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.select :dayofweek, options_for_select(Restaurantavailability.dayofweeks.keys.to_a, form.object.dayofweek), {} %>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :starthour, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
        <div class="row">
          <div class="col-6">
            <%= form.text_field :starthour, class: 'form-control' %>
          </div>
          <div class="col-6">
            <%= form.text_field :startmin, class: 'form-control' %>
          </div>
        </div>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :endhour, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
        <div class="row">
          <div class="col-6">
            <%= form.text_field :starthour, class: 'form-control' %>
          </div>
          <div class="col-6">
            <%= form.text_field :startmin, class: 'form-control' %>
          </div>
        </div>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <div class="form-group row">
    <div class="col-3">
      <span class="float-md-end"><%= form.label :status, class: 'col-form-label' %></span>
    </div>
    <div class="col-9">
      <%= form.select :status, options_for_select(Restaurantavailability.statuses.keys.to_a, form.object.status), {} %>
    </div>
  </div>
  <% if @futureParentRestaurant %>
      <%= form.hidden_field :restaurant_id, value: @futureParentRestaurant.id %>
  <% else %>
      <%= form.hidden_field :restaurant_id %>
  <% end %>
  <div class="spacing-md"></div>
  <div class="row">
    <div class="col-3">
    </div>
    <div class="col-9">
        <span class="float-end">
        <% if restaurantavailability.persisted? %>
          <div class="btn btn-dark ">
            <%= link_to t(".delete"), restaurantavailability, method: :delete, class: "text-white text-decoration-none", data: { confirm: t(".sure") } %>
          </div>
        <% end %>
        <%= form.submit value: t(".save"), class: 'btn btn-dark' %>
        </span>
    </div>
  </div>
  <div class="spacing-sm"></div>
  <% if restaurantavailability.errors.any? %>
  <div class="row">
    <div class="col-3">
      <span class="float-md-end"><%= t('common.errors') %></span>
     </div>
    <div class="col-9">
      <ul>
          <% restaurantavailability.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>