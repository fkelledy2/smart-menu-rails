<%= render 'shared/customcss' %>
<div class="page-header">
  <div class="row">
    <div class="col-10">
        <h1><%=t(".restaurantavailability")%></h1>
    </div>
    <div class="col-2">
        <% if @restaurantavailability.persisted? %>
          <%= link_to t(".cancel"), @restaurantavailability, class: "float-end btn btn-sm btn-light" %>
        <% else %>
          <% if @futureParentRestaurant %>
              <%= link_to t('.cancel'), edit_restaurant_path(id: @futureParentRestaurant.id), class: "float-end btn btn-light" %>
          <% else %>
              <%= link_to t('.cancel'), restaurantavailabilities_path, class: "float-end btn btn-light" %>
          <% end %>
        <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <%= render 'form', restaurantavailability: @restaurantavailability %>
  </div>
</div>


