<%= render 'shared/customcss' if defined?(render) %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      <div class="content-card-2025 text-center">
        <div class="mb-4">
          <i class="bi bi-envelope-check" style="font-size: 3rem; color: var(--color-primary, #0d6efd);"></i>
        </div>

        <h2 class="h4 mb-3">Staff Invitation</h2>

        <p class="mb-2">
          You've been invited to join
          <strong><%= @invitation.restaurant.name %></strong>
          as a <span class="badge text-bg-primary"><%= @invitation.role.titleize %></span>.
        </p>

        <p class="text-muted small mb-4">
          Invited by <%= @invitation.invited_by.name.presence || @invitation.invited_by.email %>
        </p>

        <hr class="my-4">

        <p class="mb-3">Sign in or create an account to accept this invitation.</p>

        <div class="d-grid gap-2">
          <%= link_to new_user_session_path, class: 'btn btn-primary btn-lg' do %>
            <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
          <% end %>

          <%= link_to new_user_registration_path, class: 'btn btn-outline-secondary btn-lg' do %>
            <i class="bi bi-person-plus me-2"></i>Create Account
          <% end %>
        </div>

        <p class="text-muted small mt-4">
          <i class="bi bi-clock"></i>
          This invitation expires on <%= @invitation.expires_at.strftime('%B %d, %Y') %>.
        </p>
      </div>
    </div>
  </div>
</div>
