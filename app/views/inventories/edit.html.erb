<%= render 'shared/customcss' %>
<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
      <h3>
        <%= link_to edit_restaurant_path(@inventory.menuitem.menusection.menu.restaurant), class: "link-dark" do %>
          <%= @inventory.menuitem.menusection.menu.restaurant.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= link_to edit_menu_path(@inventory.menuitem.menusection.menu), class: "link-dark" do %>
          <%= @inventory.menuitem.menusection.menu.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= link_to edit_menusection_path(@inventory.menuitem.menusection), class: "link-dark" do %>
          <%= @inventory.menuitem.menusection.name %>
        <% end %>
        <small><i class="bi bi-chevron-compact-right"></i></small>
        <%= @inventory.menuitem.name %>
      </h3>
    </div>
  </div>
</div>

<ul class="nav nav-tabs" id="sectionTabs" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark">
      <%= link_to edit_menusection_path(@inventory.menuitem.menusection), class: "link-dark" do %>
        <strong><i class="bi bi-chevron-double-left"></i></strong>
      <% end %>
    </button>
  </li>
  <li class="nav-item" role="presentation">
    <button class="nav-link link-dark active" id="item-tab" data-bs-toggle="tab" data-bs-target="#invenory" type="button" role="tab" aria-controls="inventoryConfig" aria-selected="true">Inventory</button>
  </li>
</ul>
<div class="tab-content" id="inventoryConfig">
  <div class="tab-pane fade show active" id="inventory" role="tabpanel" aria-labelledby="home-tab">
    <p>
    <div class="row">
      <div class="col-sm-11">
        <%= render 'form', inventory: @inventory %>
      </div>
    </div>
  </div>