<%= form_with(model: inventory) do |form| %>
  <div class="form-group row">
    <%= form.label :menuitem_id, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.collection_select :menuitem_id, Menuitem.all ,:id, :name, options = {:prompt => 'Select a Menu Item...'}, html_options = {class: "form-control"}%>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :startinginventory, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :startinginventory, data: { numeric: true }, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :currentinventory, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :currentinventory, data: { numeric: true }, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :resethour, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :resethour, data: { numeric: true }, class: 'form-control' %>
    </div>
  </div>
  <div style='height:8px'></div>
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
        <span class="float-end">
        <% if inventory.persisted? %>
          <div class="btn btn-danger ">
            <%= link_to 'Delete', inventory, method: :delete, class: "text-white text-decoration-none", data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
        <%= form.submit value: 'Save', class: 'btn btn-primary' %>
        </span>
    </div>
  </div>
  <% if inventory.errors.any? %>
  <div class="row">
    <div class="col-sm-2">
        Errors
    </div>
    <div class="col-sm-10">
      <ul>
          <% inventory.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>
