<div class="page-header">
  <div class="row">
    <div class="col-10">
      <h1><%=t(".inventory")%></h1>
    </div>
    <div class="col-2">
        <span class="float-end">
          <%= link_to inventories_path, class: 'btn btn-light' do %>
            <i class="bi bi-chevron-left"></i>
          <% end %>
          <%= link_to edit_inventory_path(@inventory), class: 'btn btn-dark' do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>
        </span>
    </div>
  </div>
</div>

<%= form_with(model: @inventory) do |form| %>
  <div class="form-group row">
    <%= form.label :menuItem, class: 'col-2 col-form-label' %>
    <div class="col-10">
        <%= form.collection_select :menuitem_id, Menuitem.all ,:id, :name, options = {:prompt => 'Select a Menu Item...'}, html_options = {disabled: 'disabled'}%>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :startingInventory, class: 'col-2 col-form-label' %>
    <div class="col-10">
      <%= form.text_field :startinginventory, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :currentInventory, class: 'col-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :currentinventory, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :resetHour, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :resethour, class: 'form-control', disabled: 'disabled' %>
    </div>
  </div>
<% end %>