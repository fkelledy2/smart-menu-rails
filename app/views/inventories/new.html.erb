<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
          <h1>New Inventory</h1>
    </div>
    <div class="col-sm-2">
        <% if @inventory.persisted? %>
          <%= link_to "Cancel", @inventory, class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to "Cancel", inventories_path, class: "float-end btn btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'form', inventory: @inventory %>