<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
          <h1>New Allergyn</h1>
    </div>
    <div class="col-sm-2">
        <% if @allergyn.persisted? %>
          <%= link_to "Cancel", @allergyn, class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to "Cancel", allergyns_path, class: "float-end btn btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'form', allergyn: @allergyn %>
