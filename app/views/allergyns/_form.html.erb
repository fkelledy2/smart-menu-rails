<%= form_with(model: allergyn) do |form| %>
  <div class="form-group row">
    <div class="col-sm-3">
      <span class="float-md-end"><%= form.label :name, class: 'col-form-label' %> : </span>
    </div>
    <div class="col-sm-9">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <div class="col-sm-3">
      <span class="float-md-end"><%= form.label :description, class: 'col-form-label' %> : </span>
    </div>
    <div class="col-sm-9">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <div class="col-sm-3">
      <span class="float-md-end"><%= form.label :symbol, class: 'col-form-label' %> : </span>
    </div>
    <div class="col-sm-9">
      <%= form.text_field :symbol, class: 'form-control' %>
    </div>
  </div>
  <% if @futureParentRestaurant %>
    <%= form.hidden_field :restaurant_id, value: @futureParentRestaurant.id %>
  <% else %>
    <%= form.hidden_field :restaurant_id %>
  <% end %>
  <div style='height:8px'></div>
  <div class="row">
    <div class="col-sm-3">
    </div>
    <div class="col-sm-9">
        <span class="float-end">
        <% if allergyn.persisted? %>
          <div class="btn btn-dark ">
            <%= link_to t(".delete"), allergyn, method: :delete, class: "text-white text-decoration-none", data: { confirm: t(".sure") } %>
          </div>
        <% end %>
        <%= form.submit value: t(".save"), class: 'btn btn-dark' %>
        </span>
    </div>
  </div>
  <% if allergyn.errors.any? %>
  <div class="row">
    <div class="col-sm-2">
        <%= t(".errors") %>
    </div>
    <div class="col-sm-10">
      <ul>
          <% allergyn.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>
