<%= form_with(model: allergyn) do |form| %>
  <div class="form-group row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :description, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :symbol, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.text_field :symbol, class: 'form-control' %>
    </div>
  </div>
  <div style='height:4px'></div>
  <div class="form-group row">
    <%= form.label :menuitem_id, class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
        <%= form.collection_select :menuitem_id, Menuitem.all ,:id, :name, options = {:prompt => 'Select a Menu Item...'}, html_options = {class: "form-control"}%>
    </div>
  </div>
  <div style='height:8px'></div>
  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-10">
        <span class="float-end">
        <% if allergyn.persisted? %>
          <div class="btn btn-danger ">
            <%= link_to 'Destroy', allergyn, method: :delete, class: "text-white text-decoration-none", data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
        <%= form.submit class: 'btn btn-primary' %>
        </span>
    </div>
  </div>
  <% if allergyn.errors.any? %>
  <div class="row">
    <div class="col-sm-2">
        Errors
    </div>
    <div class="col-sm-10">
      <ul>
          <% allergyn.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<% end %>
