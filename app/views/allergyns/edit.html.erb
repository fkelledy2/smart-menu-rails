<div class="page-header">
  <div class="row">
    <div class="col-sm-10">
        <h1><%= t(".allergyn") %></h1>
    </div>
    <div class="col-sm-2">
        <% if @allergyn.persisted? %>
          <%= link_to t(".cancel"), @allergyn, class: "float-end btn btn-light" %>
        <% else %>
          <%= link_to t(".cancel"), allergyns_path, class: "float-end btn btn-light" %>
        <% end %>
    </div>
  </div>
</div>
<%= render 'form', allergyn: @allergyn %>
