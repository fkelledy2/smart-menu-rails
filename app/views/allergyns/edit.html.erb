<%# 
  Edit Allergen - 2025 Design System
  Modern form layout with consistent styling
%>

<!-- Page Header -->
<div class="container-fluid px-0 pb-4">
  <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
    <div>
      <!-- Breadcrumb -->
      <div class="text-sm text-gray-500 mb-2">
        <%= link_to @allergyn.restaurant.name, edit_restaurant_path(@allergyn.restaurant), class: 'text-primary' %>
        <i class="bi bi-chevron-right"></i>
        <%= link_to t('.allergyns', default: 'Allergens'), restaurant_allergyns_path(@allergyn.restaurant), class: 'text-primary' %>
        <i class="bi bi-chevron-right"></i>
        <%= @allergyn.name %>
      </div>
      
      <h1 class="text-2xl font-semibold text-gray-900 mb-1">
        <i class="bi bi-pencil"></i>
        <%= t('.edit_allergyn', default: 'Edit Allergen') %>
      </h1>
      <p class="text-sm text-gray-500">
        <%= t('.description', default: 'Update allergen details') %>
      </p>
    </div>
    
    <div class="d-flex gap-2">
      <%= link_to restaurant_allergyns_path(@allergyn.restaurant), 
          class: 'btn-2025 btn-2025-ghost btn-2025-md' do %>
        <i class="bi bi-x-lg"></i> <%= t('.cancel', default: 'Cancel') %>
      <% end %>
      
      <%= link_to restaurant_allergyn_path(@allergyn.restaurant, @allergyn), 
          method: :delete,
          data: { confirm: t('.confirm_delete', default: 'Delete this allergen?') },
          class: 'btn-2025 btn-2025-ghost btn-2025-md text-danger' do %>
        <i class="bi bi-trash"></i> <%= t('.delete', default: 'Delete') %>
      <% end %>
    </div>
  </div>
</div>

<!-- Form Card -->
<div class="content-card-2025">
  <h2 class="content-card-title">
    <i class="bi bi-egg-fried"></i>
    <%= t('.allergyn_details', default: 'Allergen Details') %>
  </h2>
  
  <%= render 'form', allergyn: @allergyn %>
</div>

<style>
  .text-2xl {
    font-size: 1.5rem;
    line-height: 2rem;
  }
  
  .text-gray-900 {
    color: var(--color-gray-900);
  }
  
  .text-gray-500 {
    color: var(--color-gray-500);
  }
  
  .text-sm {
    font-size: 0.875rem;
  }
</style>