<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div class="card">
        <div class="card-header">
          <h3 class="h5 mb-0"><%= t('.title') %></h3>
          <p class="text-muted mb-0 small"><%= t('.subtitle') %></p>
        </div>
        
        <div class="card-body">
          <%= form_with(model: [@restaurant, @ocr_menu_import], local: true, html: { class: 'needs-validation', novalidate: true }) do |f| %>
            <div class="mb-4">
              <%= f.label :name, t('.name_label'), class: 'form-label' %>
              <%= f.text_field :name, 
                  class: 'form-control', 
                  placeholder: t('.name_placeholder'),
                  required: true %>
              <div class="invalid-feedback">
                <%= t('.name_invalid') %>
              </div>
            </div>

            <div class="mb-4">
              <%= f.label :pdf_file, t('.pdf_label'), class: 'form-label' %>
              <div class="border rounded p-4 text-center">
                <div class="mb-3">
                  <i class="bi bi-file-earmark-pdf text-muted text-large"></i>
                </div>
                <div class="mb-2">
                  <label for="file-upload" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-upload me-1"></i> <%= t('.choose_file') %>
                    <%= f.file_field :pdf_file, 
                        id: 'file-upload', 
                        class: 'd-none', 
                        accept: 'application/pdf', 
                        required: true,
                        onchange: "document.getElementById('file-name').textContent = this.files[0]?.name || '#{I18n.t('ocr_menu_imports.new.no_file_chosen')}'" %>
                  </label>
                  <div id="file-name" class="small text-muted mt-2"><%= t('.no_file_chosen') %></div>
                </div>
                <p class="small text-muted mb-0"><%= t('.pdf_hint') %></p>
              </div>
              <div class="invalid-feedback">
                <%= t('.pdf_invalid') %>
              </div>
            </div>

            <div class="d-flex justify-content-end gap-2 pt-3">
              <%= link_to t('.cancel'), restaurant_ocr_menu_imports_path(@restaurant), class: 'btn btn-outline-secondary' %>
              <button type="submit" class="btn btn-primary">
                <i class="bi bi-upload me-1"></i> <%= t('.upload_process') %>
              </button>
            </div>
          <% end %>
        </div>
      </div>
    
      <div class="card mt-4">
        <div class="card-header">
          <h3 class="h5 mb-0"><%= t('.tips_title') %></h3>
        </div>
        <div class="card-body p-0">
          <dl class="list-group list-group-flush">
            <div class="list-group-item">
              <dt class="fw-bold"><%= t('.tip_file_quality_title') %></dt>
              <dd class="mb-0 text-muted">
                <%= t('.tip_file_quality_text') %>
              </dd>
            </div>
            <div class="list-group-item">
              <dt class="fw-bold"><%= t('.tip_format_title') %></dt>
              <dd class="mb-0 text-muted">
                <%= t('.tip_format_text') %>
              </dd>
            </div>
            <div class="list-group-item">
              <dt class="fw-bold"><%= t('.tip_processing_time_title') %></dt>
              <dd class="mb-0 text-muted">
                <%= t('.tip_processing_time_text') %>
              </dd>
            </div>
          </dl>
        </div>
      </div>
    </div>
  </div>
</div>
